                                SDKROOT_ppc=${configure.sdkroot}

xcode.destroot.settings-append  SDKROOT_i386=${configure.sdkroot} \
                                SDKROOT_ppc=${configure.sdkroot} \
                                SKIP_INSTALL=NO

