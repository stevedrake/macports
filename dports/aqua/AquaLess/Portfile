# $Id: Portfile,v 1.4 2005/07/04 03:54:56 pguyot Exp $

PortSystem 1.0

name			AquaLess
version			1.4
categories		aqua sysutils
platforms		darwin
maintainers		darwinports@opendarwin.org
homepage		http://aqualess.sourceforge.net/
description		Cocoa pager similar to less

long_description	${description}
			
			
master_sites		sourceforge:aqualess
checksums		md5 0d99b8d994cc538ce704e47fb32f5f53

distname		${name}-${version}-src

use_configure		no

build.type		pbx
build.target

set appdir		build
platform darwin 8 {
	if {$xcodeversion == "2.1"} {
		set appdir		build/Default
	}
}

destroot {		xinstall -d -m 755 ${destroot}/Applications/DarwinPorts
			file copy ${worksrcpath}/${appdir}/${name}.app \
				${destroot}/Applications/DarwinPorts/${name}.app
			}

