# $Id: Portfile,v 1.17 2005/07/04 05:01:21 pguyot Exp $

PortSystem 1.0

name			Fire
version			1.5.1
categories		aqua net irc
maintainers		mww@opendarwin.org
description		multi protocol IM client (AIM, irc, ICQ, Jabber, MSN, Yahoo)
long_description	Fire is a Free Instant Messaging Client for Mac OS X \
				which supports all of the most popular Instant Messaging \
				services in one easy-to-use application: AIM, ICQ, irc, \
				Jabber, MSN, Yahoo! Messenger.

homepage		http://fire.sourceforge.net/
master_sites	sourceforge:fire
distfiles		${name}.app.${version}.source.tgz
checksums		md5 68ceea0a02daa954e02dfeb5c9a29aa5
platforms		darwin

worksrcdir		firesrc

patchfiles		patch-Fire.xcode__project.pbxproj patch-firetalk__firetalk.h

use_configure	no

build.type		pbx
build.target
build.args		{-project Fire.xcode -target "Fire (Everything)" -buildstyle "Deployment"}

set appdir		build
platform darwin 8 {
	if {$xcodeversion == "2.1"} {
		set appdir	build/Deployment
	}
	patchfiles-append patch-lib__config.h
}

destroot {
	xinstall -d -m 755 ${destroot}/Applications/DarwinPorts
	file copy ${worksrcpath}/${appdir}/Fire.app \
		${destroot}/Applications/DarwinPorts/Fire.app
}
