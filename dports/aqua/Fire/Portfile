# $Id: Portfile,v 1.6 2004/03/12 20:41:31 toby Exp $

PortSystem 1.0

name		Fire
version		0.32.j
categories	aqua net
maintainers	mww@opendarwin.org
description	multi protocol IM client (AIM, irc, ICQ, Jabber, MSN, Yahoo)
long_description	Fire is a Free Instant Messaging Client for Mac OS X \
		which supports all of the most popular Instant Messaging \
		services in one easy-to-use application: AIM, ICQ, irc, \
		Jabber, MSN, Yahoo! Messenger.

homepage	http://fire.sourceforge.net/
master_sites	sourceforge:fire
distname	${name}.app${version}.source
checksums	md5 560555c5c8e6cb92f467dae6e5a5f80d
platforms	darwin

set worksrcpath	${workpath}/fire

use_configure	no

build.dir	${worksrcpath}
build.type	pbx
build.target

destroot {
	set appPath ${destroot}/Applications/DarwinPorts
	file mkdir ${appPath}
	system "ditto -v -rsrcFork ${worksrcpath}/build/Fire.app \
		${appPath}/Fire.app"
}
