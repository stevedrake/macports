# $Id: Portfile,v 1.1 2004/12/01 21:56:21 matt Exp $

PortSystem 1.0

name			QemuX
version			0.12
categories		aqua emulators
platforms		darwin
maintainers		matt@opendarwin.org
homepage		http://cordney.com/QemuX/
description		Cocoa interface to the qemu software

long_description	QemuX claims to be a powerful UI (User Interface) for \
			the qmu CPU emulator.
			
			
master_sites		http://cordney.com/QemuX/download/
checksums		md5 beffdc97e96a7230e0af501f0daf3bc8

distname		${name}_2004-11-18-src

set worksrcdir		${name}

use_configure		no

build.type		pbx
build.args		-buildstyle Deployment
build.target		-project QemuX.xcode -target QemuX

destroot {		set appPath ${destroot}/Applications/DarwinPorts
			file mkdir ${appPath}
			file copy "${worksrcpath}/build/${name}.app" ${appPath}
			}

