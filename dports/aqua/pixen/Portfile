# $Id: Portfile,v 1.1 2004/07/13 21:08:44 mww Exp $

PortSystem 1.0

name		pixen
version		2
platforms	darwin
categories	aqua graphics
maintainers	phw@opendarwin.org
description	A mature pixelart drawing tool for OSX
long_description	Pixen is a mature pixelart drawing tool for OSX \
			under the MIT License. \
			It can be mainly used to create pixelart in \
			Atari-Style.
homepage	http://www.opensword.org/Pixen/
master_sites	http://www.opensword.org/Downloads/
distname	PixenSource
checksums	md5 eab6520ad59100c471d9e9f6ae017d99

worksrcdir      Sources

use_configure   no

build.type		pbx
build.target	-target \"Pixen(No Tests)\"  

destroot	{
	set appPath ${destroot}/Applications/DarwinPorts
	file mkdir ${appPath}
	file copy ${worksrcpath}/build/${name}.app ${appPath}
}
