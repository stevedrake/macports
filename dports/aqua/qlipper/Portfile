configure {
    system "cd ${worksrcpath} && ${qt_qmake_cmd}"
}

destroot {
    # Install to the application directory
    xinstall -m 755 -d ${destroot}${applications_dir}
    file copy ${worksrcpath}/Qlipper.app ${destroot}${applications_dir}
}

