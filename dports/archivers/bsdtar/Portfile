# $Id: Portfile,v 1.8 2005/01/25 06:24:47 toby Exp $

PortSystem 1.0
name             bsdtar
version          1.02.002
revision         1
categories       archivers
maintainers      toby@opendarwin.org
description      BSD-licensed implementation of tar(1)
long_description \
	The bsdtar program is an implementation of tar(1) that is built \
	on top of libarchive. Has features such as automatic format \
	detection, Pax Interchange Format support, etc.
homepage         http://people.freebsd.org/~kientzle/libarchive/
platforms        darwin

master_sites     ${homepage}src/
checksums        md5 3b62d58370c0665b162f1ca1c40d0137

depends_build    lib:XXX:libarchive
depends_lib      lib:XXX:zlib lib:XXX:bzip2

configure.env    CPPFLAGS=-I${prefix}/include LDFLAGS=-L${prefix}/lib
configure.args   --mandir=${prefix}/share/man
