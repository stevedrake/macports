# $Id: Portfile,v 1.6 2004/09/26 14:23:06 matt Exp $

PortSystem 1.0
name			unrar
version			3.40
platforms		darwin freebsd
categories		archivers
maintainers		max@kruschwitz.biz
description		Extract, view & test RAR archives
long_description	The unRAR utility is a minor part of the \
			RAR archiver and contains RAR uncompression algorithm. \
			unRAR requires very small volume of memory to operate.

homepage		http://www.rarsoft.com/
master_sites		http://files2.rarlab.com/rar/
checksums		md5 06966791546a7b40a2b0139fba552cb0
distname		${name}src-3.4.3
worksrcdir		${name}

post-patch {
	xinstall ${worksrcpath}/makefile.unix ${worksrcpath}/Makefile
}

configure               {}
build.type		gnu

destroot {
	xinstall ${worksrcpath}/${name} ${destroot}/${prefix}/bin
	xinstall -d ${destroot}/${prefix}/share/doc/${name}
	xinstall ${worksrcpath}/license.txt ${worksrcpath}/readme.txt ${destroot}/${prefix}/share/doc/${name}
}

destroot.destdir	prefix=${destroot}/${prefix}
