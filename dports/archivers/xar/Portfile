PortSystem 1.0
name			xar
version			20050605
categories		archivers sysutils
description		eXtensible ARchiver
maintainers		mww@opendarwin.org
long_description	${description}
homepage		http://www.opendarwin.org/projects/xar/
depends_lib		lib:libcurl.2:curl \
				lib:libssl.0.9:openssl \
				lib:libz.1:zlib	\
				lib:libxml2.2:libxml2

fetch.type		cvs
cvs.root		:pserver:anonymous@anoncvs.opendarwin.org:/Volumes/src/cvs/od
cvs.module		xar/src
cvs.args		-D"${version}"

worksrcdir		xar/src

configure.args	--mandir=${prefix}/share/man
