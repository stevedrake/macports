# $Id: Portfile,v 1.8 2004/11/13 02:07:13 ricci Exp $

PortSystem 1.0
name		zlib
version		1.2.1
revision	3
categories	archivers
maintainers	landonf@opendarwin.org
description	zlib lossless data-compression library
long_description \
	zlib is designed to be a free, general-purpose, \
	legally unencumbered, lossless data-compression \
	library for use on virtually any computer hardware \
	and operating system.
homepage	http://www.gzip.org/zlib/
platforms	darwin

master_sites	http://www.gzip.org/zlib/ \
		http://www.zlib.net/
use_bzip2	yes
checksums	md5 8106069990476a3c5187301465bd7a60

patchfiles	patch-configure \
		patch-contrib-infback9-infback9.c \
		patch-infback.c \
		patch-inflate.c

configure.args	--shared

test.run	yes

destroot.destdir prefix=${destroot}${prefix}

post-destroot {
	system "cd ${worksrcpath} && ./configure"
	system "cd ${worksrcpath} && make"
	xinstall ${worksrcpath}/libz.a ${destroot}${prefix}/lib
}
