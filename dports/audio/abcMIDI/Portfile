# $Id: Portfile,v 1.1 2004/04/14 16:12:46 mww Exp $

PortSystem 1.0

name		abcMIDI
version		1.196
categories	audio
platforms	darwin
maintainers	mww@opendarwin.org
description	ABC to midi and vice versa converter
long_description	ABC is a text-based music notation language. These \
			tools can convert ABC to midi and vice versa.

homepage	http://abc.sourceforge.net/abcMIDI/
master_sites	sourceforge:abc
distname	${name}
checksums	md5 11efd4ba996dbe6c5668136c529c6a5a

use_configure	no

build.args	-f unix.mak
build.target

destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 755 -W ${worksrcpath} abc2abc abc2midi mftext midi2abc \
		yaps ${destroot}${prefix}/bin
	xinstall -m 644 -W ${worksrcpath} abcguide.txt coding.txt demo.abc \
		gpl.txt history.txt pacific.txt readme.txt yaps.txt \
		${destroot}${prefix}/share/doc/${name}
}
