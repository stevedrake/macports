# $Id: Portfile,v 1.1 2004/03/26 03:29:02 toby Exp $

PortSystem 1.0
name             ices0
version          0.3
categories       audio net
maintainers      toby@opendarwin.org
description      Stream audio to an icecast server
long_description \
	source client for broadcasting in MP3 format to an icecast2 server
homepage         http://icecast.org/ices.php
platforms        darwin

master_sites     http://www.icecast.org/files/ices/
distname         ices-${version}
checksums        md5 cb7bae83597945e90094a46a9f15bd91

depends_build    bin:pkg-config:pkgconfig
depends_lib      lib:XXX:libxml2 \
                 lib:libmp3lame.0:lame \
                 lib:libshout.3:libshout2

configure.args   --with-docdir=${prefix}/share/doc \
                 --mandir=${prefix}/share/man \
                 --without-python \
                 --without-perl
