# $Id: Portfile,v 1.4 2004/04/05 20:49:21 matt Exp $

PortSystem 1.0
name			playfair
version			0.2
revision		1
categories		audio
platforms		darwin
maintainers		matt@opendarwin.org
homepage		http://playfair.sourceforge.net/
description		Utility for removing DRM on AAC files

long_description	${description}

master_sites		sourceforge

checksums		md5 4645fa4753a3fb50521fa8750e9932a2

depends_lib		lib:libmp4ff:faad2

configure.env		LDFLAGS="-L${prefix}/lib" \
			CPPFLAGS="-I${prefix}/include"

post-destroot {		system "cd ${destroot}${prefix} \
			&& rm ./include/mp4ff.h"
			system "cd ${destroot}${prefix} \
			&& rm ./lib/libmp4ff*"
			file mkdir ${destroot}${prefix}/share/doc/${name}
			xinstall -m 644 -v -W ${worksrcpath} \
				AUTHORS COPYING NEWS README THANKS \
				${destroot}${prefix}/share/doc/${name}
			}

