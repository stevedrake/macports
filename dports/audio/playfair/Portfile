# $Id: Portfile,v 1.6 2004/04/10 05:30:15 matt Exp $

PortSystem 1.0
name			playfair
version			0.4
categories		audio
platforms		darwin
maintainers		matt@opendarwin.org
homepage		http://sarovar.org/projects/playfair/
description		Utility for removing DRM on AAC files

long_description	${description}

master_sites		http://sarovar.org/download.php/267/

checksums		md5 a3a119472ebe87a6439f1acd447ca347

configure.args		--libdir=${prefix}/lib/${name} \
			--includedir=${prefix}/include/${name}

post-destroot {		xinstall -d ${destroot}${prefix}/share/doc/${name}
			xinstall -m 644 -v -W ${worksrcpath} \
				AUTHORS COPYING NEWS README THANKS ChangeLog \
				${destroot}${prefix}/share/doc/${name}
			}

