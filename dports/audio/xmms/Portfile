PortSystem 1.0
name		xmms
version		1.2.10
categories	audio
maintainers	darwinports@opendarwin.org
description	X11 MultiMedia System
homepage	http://www.xmms.org/
platforms	darwin
master_sites    ftp://ftp.xmms.org/xmms/1.2.x/ \
                http://www.xmms.org/files/1.2.x/ \
                ftp://ftp.sunet.se/pub/multimedia/xmms/1.2.x/
use_bzip2	yes
depends_lib	lib:libglib.1:glib1 lib:libgtk.1:gtk1 lib:libesd.0:esound \
			lib:libintl:gettext bin:bison:bison lib:libiconv:libiconv \
			lib:libvorbis:libvorbis

checksums	md5 03a85cfc5e1877a2e1f7be4fa1d3f63c 
patchfiles	patch-xmms \
			patch-General-ir-ir.c
long_description XMMS is a multimedia audio and video player for X11.
configure.env \
			CFLAGS=-I${prefix}/include