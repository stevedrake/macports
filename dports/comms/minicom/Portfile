# $Id: Portfile,v 1.3 2005/01/20 17:35:29 waqar Exp $

PortSystem 1.0
name		minicom
version		2.1
categories	comms
maintainers	waqar@opendarwin.org
platforms	darwin
description	Menu driven communications program
long_description  \
	Minicom is a menu driven communications program. It emulates 	\
	ANSI and VT102 terminals. It has a dialing directory and auto 	\
	zmodem download.
homepage	http://alioth.debian.org/projects/minicom/
master_sites	http://alioth.debian.org/download.php/123/
checksums	md5 1c8f3b247c38fb16c3c2170df9fc102a
depends_build   bin:sz:lrzsz bin:kermit:kermit
patchfiles      patch-windiv.c

configure.args  --enable-dfl-port=/dev/cu.modem	\
	        --enable-lock-dir=${prefix}/var	\
		--infodir=${prefix}/share/info 	\
		--mandir=${prefix}/share/man

post-destroot	{
	file delete -force ${destroot}${prefix}/lib/charset.alias	\
		${destroot}${prefix}/share/locale/locale.alias
}
