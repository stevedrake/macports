# $Id: Portfile,v 1.1 2004/12/05 09:35:14 landonf Exp $
PortSystem		1.0

name			i386-mingw32-w32api
version			3.1
maintainers		landonf@opendarwin.org
description		Mingw32 Win32 headers and import libraries
long_description	Mingw32 Win32 headers and import libraries to \
			support cross-compilation of software written for \
			the Win32 Application Programming Interface \
			as created by Microsoft.
homepage		http://www.mingw.org
categories		cross devel

# Parameters for this port.
set crossgcc-target i386-mingw32

platforms		darwin
master_sites		sourceforge:mingw
distname		w32api-${version}
checksums		sha1 85f2f5e04f73de430bf655c62b0d6ac70a27341c

extract.dir		${worksrcpath}

pre-extract {
	file mkdir ${worksrcpath}
}

# Nothing to configure
configure {}

# Nothing to build
build {}

destroot {
	file mkdir ${destdir}/${prefix}/${crossgcc-target}
	file copy -force ${worksrcpath}/include ${destdir}/${prefix}/${crossgcc-target}
	file copy -force ${worksrcpath}/lib ${destdir}/${prefix}/${crossgcc-target}
}
