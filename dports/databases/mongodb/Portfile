# $Id$

PortSystem          1.0
PortGroup           archcheck 1.0

name                mongodb
epoch               1
version             1.6.0
license             AGPL-3.0
categories          databases
maintainers         nomaintainer

description         High-performance, schema-free document-oriented database
long_description    ${description}

platforms           darwin

homepage            http://www.mongodb.org/
master_sites        http://downloads.mongodb.org/src/
distname            ${name}-src-r${version}

checksums           md5     d09e062b518ce71106652eac0e88a962 \
                    sha1    9f3b0c90424022a8a1667d25162c67c58800edf9 \
                    rmd160  26edbeff2940fac6d2b083ce37b28aa468ed0b00

depends_build       port:scons

depends_lib         port:boost \
                    port:pcre \
                    port:spidermonkey \
                    port:libpcap \
                    port:readline

archcheck.files     lib/libboost_program_options-mt.dylib \
                    lib/libpcap.dylib \
                    lib/libpcre.dylib \
                    lib/libreadline.dylib \
                    lib/libjs.dylib

patchfiles          patch-SConstruct.diff

post-patch {
    reinplace "s|@@PREFIX@@|${prefix}|g" ${worksrcpath}/SConstruct
}

use_configure       no

build.cmd           scons
build.args          --usesm --cxx=${configure.cxx} --full
build.target        all mongobridge mongosniff

destroot.cmd        scons
destroot.args       ${build.args}
destroot.destdir    --prefix=${destroot}${prefix}

post-destroot {
    xinstall -W ${worksrcpath} mongobridge ${destroot}${prefix}/bin
}

variant universal {
    build.env-append \
        CFLAGS="${configure.universal_cflags}" \
        CXXFLAGS="${configure.universal_cxxflags}" \
        LINKFLAGS="${configure.universal_ldflags}"
    eval destroot.env-append [option build.env]
}

livecheck.url       ${homepage}display/DOCS/Downloads
livecheck.regex     {mongodb-src-r(\d+\.\d*[02468]\.\d+)}
