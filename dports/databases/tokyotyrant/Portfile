# $Id$

PortSystem          1.0

name                tokyotyrant
version             1.1.40
categories          databases
maintainers         stromnov openmaintainer
platforms           darwin

description         Tokyo Cabinet remote server

long_description \
    Tokyo Tyrant is Tokyo Cabinet remote server.

homepage            http://1978th.net/${name}/
master_sites        ${homepage}

checksums           md5     cc9b7f0c6764d37700ab43d29a5c6048 \
                    sha1    2e318b311af18fb255dc902bf1d00e64173eecc9 \
                    rmd160  3f6396b6fcc689c590a70043001e92b526984a8f

depends_lib         port:zlib \
                    port:tokyocabinet

configure.args      --mandir=${prefix}/share/man \
                    --datadir=${prefix}/share/doc

variant lua description {enable lua support} {
    configure.args-append   --enable-lua
    depends_lib-append      port:lua
}

livecheck.type      regex
livecheck.url       ${homepage}
livecheck.regex     Latest Source Package \\(version (\\d+(?:\\.\\d+)*)\\)
