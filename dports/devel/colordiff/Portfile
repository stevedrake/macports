# $Id: Portfile,v 1.3 2004/04/26 22:35:19 mww Exp $
PortSystem 1.0
name			colordiff
version			1.0.2
categories		devel textproc
maintainers		landonf@opendarwin.org
description		Color-highlighted diff(1) output
long_description	The Perl script colordiff is a wrapper for diff(1) \
			and produces the same output but with pretty 'syntax' \
			highlighting. Colour schemes can be customized.
homepage		http://colordiff.sourceforge.net/
platforms		darwin
master_sites		${homepage}
checksums		md5 ac8eb1433fc817d6044ae8c0916b8f53
patchfiles		patch-Makefile; # for case-insensitive file systems
build.type		bsd
build			{}
destroot.args		INSTALL_DIR=${destroot}/${prefix}/bin \
			MAN_DIR=${destroot}/${prefix}/share/man/man1 \
			ETC_DIR=${destroot}/${prefix}/etc

configure { reinplace s|/etc|${prefix}/etc|g ${worksrcpath}/colordiff.pl }
