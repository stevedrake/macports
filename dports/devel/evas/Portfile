# $Id$

PortSystem              1.0

name                    evas
version                 0.9.9.49898
set snapshot            2010-06-27
categories              devel x11
platforms               darwin
maintainers             ryandesign openmaintainer
homepage                http://www.enlightenment.org
master_sites            http://download.enlightenment.org/snapshots/${snapshot}/

description             Evas is a hardware-accelerated canvas API for X11.

long_description        Evas is a hardware-accelerated canvas API for \
                        X-Windows that can draw anti-aliased text, smooth \
                        super and sub-sampled images, alpha-blend, as well \
                        as drop down to using normal X11 primitives such as \
                        pixmaps, lines and rectangles for speed if your CPU \
                        or graphics hardware are too slow.

checksums               md5     8c547492557fb90ec57441b109683451 \
                        sha1    e84596a9906bee3d1f87683a8a183caa504430bb \
                        rmd160  1adc8145dbe6ba86477a069c05d6ef6032fa061f

use_bzip2               yes

depends_lib             port:eet \
                        port:gtk2 \
                        port:librsvg \
                        port:tiff \
                        path:include/gif_lib.h:giflib

configure.args          --disable-doc \
                        --enable-quartz \
                        --enable-buffer

# http://trac.enlightenment.org/e/ticket/503
#                        --enable-gl-x11

variant svg description "Add SVG support" {
    depends_lib-append  port:librsvg
    configure.args-append --enable-image-loader-svg
}

use_parallel_build      yes

livecheck.type          regex
livecheck.url           http://download.enlightenment.org/snapshots/
livecheck.version       ${snapshot}
livecheck.regex         (\\d{4}-\\d{2}-\\d{2})/
