# $Id$

PortSystem        1.0

name              gc-utils
version           0.2.0
categories        devel
platforms         darwin
maintainers       ram openmaintainer

description       scripts for interacting with CVS repositories using git
long_description  \
  gc-utils is a small set of scripts that let you import and update CVS \
  repositories into git very easily and also export patches back into a \
  CVS working copy.

homepage          http://gcutils.sourceforge.net/
master_sites      sourceforge:gcutils
distname          ${name}_${version}

checksums         md5 1a0c74efe50576d8edd62ef8049ea339 \
                  sha1 0fa82e7e88a758c3bdd8ca8a8c443ba4d1fa1d8f \
                  rmd160 5abd85eef3afcc7efd64a2e01ae0b53f8efa698f

depends_lib       port:git-core \
                  port:cvsps \
                  port:coreutils

patchfiles        patch-ginstall.diff

worksrcdir        ${name}

use_configure     no

build.args        prefix=${prefix}
build.target

destroot.destdir  DESTDIR=${destroot} prefix=${prefix}
destroot.target   install
destroot.args     prefix=${prefix}

livecheck.version v${version}
