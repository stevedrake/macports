# $Id$

PortSystem        1.0

name              gc-utils
version           0.1.0
revision          1
categories        devel
platforms         darwin
maintainers       ram openmaintainer

description       scripts for interacting with CVS repositories using git
long_description  \
  gc-utils is a small set of scripts that let you import and update CVS \
  repositories into git very easy and let you export patches back into a \
  CVS working copy.

homepage          http://gcutils.sourceforge.net/
master_sites      sourceforge:gcutils
use_bzip2         yes

checksums         md5 2a6faa1d7be66dfeb348e7ac05ea1ce1 \
                  sha1 5ef9d756f27eed2a24ae9636a5eef78ee6727e2d \
                  rmd160 9d1226f8e5cd43f37910471be6fb5a65fc2b6439

depends_lib       port:git-core

patchfiles        patch-Makefile.diff

worksrcdir        ${name}

use_configure     no

build.args        prefix=${prefix}
build.target

destroot.destdir  DESTDIR=${destroot} prefix=${prefix}
destroot.target   install
destroot.args     prefix=${prefix}

livecheck.version v${version}
