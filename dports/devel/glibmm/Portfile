use_bzip2       yes

checksums       md5     659ed7b3a123b23e686a1c422f216f7e \
                sha1    fb8718fb8092cd8f65f89dcdb553122718bc1c80 \
                rmd160  57583af86024d8018fd75969f449937a86f973de

