# $Id$

PortSystem 1.0

name			hoard
version			3.6.1
categories		devel
platforms		darwin
maintainers		stechert@macports.org
description		A drop-in replacement for malloc that is very fast on \
			multiprocessor machines.
long_description	${description}
homepage		http://www.hoard.org/
distfiles		${name}-[strsed ${version} {g/[.]//}]${extract.suffix}
master_sites		http://www.cs.umass.edu/~emery/hoard/hoard-${version}/
patchfiles		patch-malloc.h
patch.pre_args		-p1
checksums		md5 b0d4caf762282c29fbee99959b22d342 \
			sha1 02660aca53559d17a2ea848f9125fd6478f3ce44 \
			rmd160 b21c11b095505fb9e739f7297117ae4f36bd3dbf
use_configure		no
build {
			cd ${worksrcpath}/src
			system "make darwin"
}
destroot		{ xinstall -m 755 ${worksrcpath}/src/libhoard.dylib ${destroot}${prefix}/lib/libhoard.dylib }
