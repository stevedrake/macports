# $Id$

PortSystem        1.0

name              kmm_banking
version           0.9.7beta
# this is specific to this port and *version* for downloading it
set release       05

categories        devel net kde finance
maintainers       nomaintainer
platforms         darwin
description       an online banking external plugin for KMyMoney
long_description  KMyMoney is the personal finance manager for KDE. \
                  This plugin provides an online banking interface \
                  using KBanking within the aqbanking package. \
                  This plugin needs AqBanking3 and KMyMoney 0.8.9 or newer.

homepage          http://www.aquamaniac.de/sites/aqbanking/index.php
master_sites      http://www.aquamaniac.de/sites/download/download.php?package=05&release=${release}&file=01&dummy=

checksums         md5 c09878ee7a6980d0ea072f0cbd824115 \
                  sha1 1d9de3516d81054a1e7857f901c0f682cb5a3027 \
                  rmd160 c2ba3b4f67d4f7d713d834bd7e43518f50c2bb54
                  # unverified -- upstream does not publish signatures!
                                    
depends_lib       port:aqbanking3 \
                  port:gwenhywfar3
                  
configure.cppflags-append  "-L${prefix}/lib"
configure.cflags-append    "-L${prefix}/lib"
configure.ldflags-append   "-Wl,-dylib_file,/System/Library/Frameworks/OpenGL.framework/Versions/A/Libraries/libGL.dylib:/System/Library/Frameworks/OpenGL.framework/Versions/A/Libraries/libGL.dylib"
configure.env     QTDIR=${prefix}/lib/qt3
configure.args    --with-qt-dir=${prefix}/lib/qt3 \
                  --without-arts
