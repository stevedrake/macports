# $Id$

PortSystem      1.0

name            libtool
version         2.2.10
categories      devel sysutils
maintainers     boeyms openmaintainer
description     GNU Libtool - The GNU Portable Library Tool

long_description \
    GNU libtool is a generic library support script. Libtool hides the  \
    complexity of using shared libraries behind a consistent, portable  \
    interface.

homepage        http://www.gnu.org/software/libtool/
platforms       darwin freebsd
master_sites    gnu

checksums       md5     b745d220e88163fcd9eea0a90ccf21b0 \
                sha1    e8fa9813d8e9a5497c636744e6fd3f55d86eec38 \
                rmd160  a18211999720f8eed70070a62a2048f46884ce7a

depends_build   port:automake

if {${os.platform} != "darwin"} {
    depends_lib port:grep \
                port:gsed
}

#worksrcdir      [strsed $distname {s/[a-z]*$//}]

configure.args  --program-prefix=g

use_parallel_build  yes

post-destroot {
    set docdir ${prefix}/share/doc/${name}-${version}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} AUTHORS COPYING ChangeLog NEWS README THANKS \
        TODO ${destroot}${docdir}
}

test.run        yes
test.target     check

platform darwin {
    configure.env-append GREP=/usr/bin/grep \
                         SED=/usr/bin/sed
}

livecheck.type  regex
livecheck.url   http://ftp.gnu.org/gnu/${name}/?C=M&O=D
livecheck.regex ${name}-(\\d+(?:\\.\\d+)*\[a-z\]?)
