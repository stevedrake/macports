                    sha1    fb1726cce15deaed9e0aecd5f2b691d4c2d72a8b \
                    rmd160  5069fcd0bd134cee9ad9a530752a4b54d73783b5
distname            copas-${version}
depends_lib         port:lua \
                    port:lua-luasocket
