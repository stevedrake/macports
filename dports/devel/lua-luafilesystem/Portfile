                    sha1    19b2d7935d933868baa4fc59ad1ef79ee9924217 \
                    rmd160  47ced0e72f4e2b442fe3fc38214e4ac7f56cfced
distname            luafilesystem-${version}
depends_lib         port:lua
patchfiles          patch-config.diff \
					patch-Makefile.diff
post-patch {
