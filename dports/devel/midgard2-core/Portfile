PortSystem 1.0

name		midgard2-core
conflicts	midgard-core

version		10.05.3

categories	devel
maintainers	jwa
description	A content repository system
long_description Midgard is a content repository system platform \
    with bindings in PHP, Python etc.
platforms	darwin
homepage	http://www.midgard-project.org/

master_sites	http://www.midgard-project.org/midcom-serveattachmentguid-15523dd2335f11e0a6211573cef6d313d313/

#use_bzip2	yes
checksums           md5     369641da2e989db01592f2a93ccdd065 \
                    sha1    b591b4d9b80b870da8ec956c4d67db310f5c3839 \
                    rmd160  a289028deddeefa7b560b558ec70f6bf287c3284

depends_build  port:pkgconfig

depends_lib    port:gettext \
    path:lib/pkgconfig/glib-2.0.pc:glib2 \
    port:dbus-glib \
    port:libxml2 \
    port:libgda4

configure.args	--sysconfdir=${prefix}/etc/midgard/ \
    --with-dbus-support

post-install	{
    ui_msg "NB! The other parts of the package are:"
    ui_msg "php5-midgard2, and python bindings for 2.5/2.6"
}

