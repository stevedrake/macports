PortSystem 1.0

name			ossp-al
version			0.9.1
categories		devel
platforms		darwin
maintainers		mww@opendarwin.org
description		an abstract type of buffer that can move data without copying
long_description	"${description}"

homepage		http://www.ossp.org/pkg/lib/al/
master_sites	ftp://ftp.ossp.org/pkg/lib/al/ devel
distname		al-${version}
checksums		md5 eba90e56fe7248466b66306a65868ae7

configure.args	--mandir=${prefix}/share/man

pre-destroot {
	# crude hack to get Makefile to install
	reinplace "s|^install:|install: dummy|g" ${worksrcpath}/Makefile
	system "touch ${worksrcpath}/dummy"
}
