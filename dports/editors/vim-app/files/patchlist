eval {
  set low 1
  while {$low <= $vim_patchlevel} {
    set high [expr $low + 99];
    if {$high < $vim_patchlevel} {
      patchfiles-append \
        [format "%s.%03d-%03d.gz" $vim_version $low $high]
      incr low 100
    } else {
      patchfiles-append \
        [format "%s.%03d" $vim_version $low]
      incr low 1
    }
  }
}

checksums-append \
