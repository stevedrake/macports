eval {
  set low 1
  while {$low <= $vim_patchlevel} {
    set high [expr $low + 99];
    if {$high < $vim_patchlevel} {
      patchfiles-append \
        [format "%s.%03d-%03d.gz" $vim_version $low $high]
      incr low 100
    } else {
      patchfiles-append \
        [format "%s.%03d" $vim_version $low]
      incr low 1
    }
  }
}

checksums-append \
  7.1.001 sha1 c9145f875924f0b74d353f293e45f5ce43cd4b95 \
  7.1.002 sha1 c249265ac80e17835d7febbbd5f6f92b63a90ecb
