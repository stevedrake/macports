# $Id$

PortSystem 1.0

name            freeciv-x11
version		2.1.3
categories      games
maintainers     rhwood
description     A civilisation clone
homepage        http://www.freeciv.org/
platforms	    darwin

master_sites    sourceforge:freeciv ftp://ftp.freeciv.org/freeciv/stable/
checksums	sha1 a897978e87851f2a5334efd9b7fa3cf65ac075a3
distname	freeciv-${version}
use_bzip2	    yes

depends_lib	\
	port:gettext \
	port:libiconv \
	port:libsdl \
	port:libsdl_mixer \
	port:esound \
	port:readline \
	port:gtk2

configure.args	\
	--enable-client=gtk2 \
	--with-readline \
	--with-zlib \
	--enable-nls \
	--with-sdl-prefix=${prefix} \
	--with-libiconv-prefix=${prefix} \
	--mandir=${prefix}/share/man

platform puredarwin {
	depends_lib-delete port:libsdl
	configure.args-append --disable-sdl-mixer 
}
