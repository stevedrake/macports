#	--enable-nls \
#	--with-sdl-prefix=${prefix} \
#	--with-libiconv-prefix=${prefix}

fetch	{}
checksum	{}
configure	{}
build	{}
destroot	{
	file mkdir ${destroot}${prefix}/share/freeciv
	touch ${destroot}${prefix}/share/freeciv/marker
}
