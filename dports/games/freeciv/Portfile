# $Id: Portfile,v 1.9 2005/09/20 23:16:16 toby Exp $

PortSystem 1.0

name            freeciv
version         2.0.4
categories      games
maintainers     michaelm@opendarwin.org
description     A civilisation clone
homepage        http://www.freeciv.org/
platforms	    darwin

master_sites    sourceforge:freeciv ftp://ftp.freeciv.org/freeciv/stable/
checksums       md5 833befa003eefda244f49d349bdb585c \
				sha1 a665ecdf24d08df93efc64b41be3ea4d09996784

use_bzip2	    yes

depends_lib	    lib:libintl.3:gettext \
                  lib:libSDL:libsdl \
                  lib:libesd.0:esound \
                  lib:libreadline.4:readline \
                  lib:libImlib:imlib \
                  lib:libgtk.2:gtk2

configure.env	LDFLAGS="-L${prefix}/lib" \
                CFLAGS="-I${prefix}/include" \
		CPPFLAGS="-I${prefix}/include"

configure.args  --enable-client=gtk2 --with-readline --with-zlib

variant puredarwin {
                depends_lib-delete lib:libSDL:libsdl
                configure.args-append --disable-sdl-mixer 
		}
