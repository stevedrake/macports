# $Id$

PortSystem 1.0

name            freeciv
version         2.0.8
categories      games
maintainers     rhwood
description     A civilisation clone
homepage        http://www.freeciv.org/
platforms	    darwin

master_sites    sourceforge:freeciv ftp://ftp.freeciv.org/freeciv/stable/
checksums	sha1 b9098dc46ed169e053f9c7405cc3abf9cebe9792

use_bzip2	    yes

depends_lib	\
	port:gettext \
	port:libsdl \
	port:libsdl_mixer \
	port:esound \
	port:readline \
	port:gtk2

configure.args	\
	--enable-client=gtk2 \
	--with-readline \
	--with-zlib \
	--enable-nls \
	--with-sdl-prefix=${prefix} \
	--with-libiconv-prefix=${prefix}

platform puredarwin {
	depends_lib-delete port:libsdl
	configure.args-append --disable-sdl-mixer 
}
