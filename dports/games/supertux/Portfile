# $Id: Portfile,v 1.2 2004/05/19 16:33:20 mww Exp $

PortSystem 1.0

name		supertux
version		0.1.0
categories	games
platforms	darwin
maintainers	mww@opendarwin.org
description	classic 2D jump and run sidescroller SuperMario clone
long_description	SuperTux is a classic 2D jump and run sidescroller \
			game in a similar style like the original SuperMario \
			games.

homepage	http://super-tux.sourceforge.net/
master_sites	http://pingus.seul.org/~grumbel/tmp/
checksums	md5 c867f5444b93bf66044b4dc087be2298
use_bzip2	yes

depends_lib	bin:sdl-config:libsdl \
		lib:libSDL_mixer:libsdl_mixer \
		lib:libSDL_image:libsdl_image

variant darwin	{
	post-install	{
		xinstall -d -m 755 ${destroot}/Applications/DarwinPorts/SuperTux.app/Contents/MacOS
		system "ln -s ${prefix}/bin/supertux \
			${destroot}/Applications/DarwinPorts/SuperTux.app/Contents/MacOS/SuperTux"
	}
}
