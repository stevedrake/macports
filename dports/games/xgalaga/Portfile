PortSystem 1.0

name			xgalaga
version			2.0.34
categories		games x11
platforms		darwin
maintainers		mww@opendarwin.org
description		xgalaga is a rework of the Galaga shooting game.
long_description	${description}

homepage		http://ftp.yars.free.net/pub/software/unix/games/arcade/
master_sites	${homepage} \
				ftp://ftp.gwdg.de/pub/x11/x.org/contrib/games/
checksums		md5 9f7ee685e9c4741b5f0edc3f91df9510
patchfiles		patch-Makefile.in

configure.pre_args	--prefix=${prefix}/share/${name} \
				--exec-prefix=\\\${prefix}/../../bin

variant darwin powerpc {
	configure.args	--host=powerpc-apple-darwin
}

destroot.destdir	prefix=${destroot}${prefix}/share/${name}
