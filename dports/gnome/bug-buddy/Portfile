# $Id: Portfile,v 1.10 2006/04/17 09:08:19 rhwood Exp $
PortSystem 1.0
name		bug-buddy
version		2.14.0
description	A graphical bug reporting tool.
long_description        This is a graphical bug reporting tool. It can \
			extract debugging information from a core file \
			or crashed application (via gnome_segv).
maintainers	macports-dev@lists.macosforge.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/bug-buddy/2.14/

checksums	md5 4fb288adc8f67cbfb8886ddf7b400530 \
			sha1 8ee6a4753c6906f289020d3d5d006a233f3f7fbf \
			rmd160 16bf39f330a54468528b4466d08842ac353d78c7

depends_lib \
		port:libgnomeui \
		port:gnome-doc-utils \
		port:gnome-keyring \
		port:gnome-desktop \
		port:gnome-menus \
		port:startup-notification

use_bzip2 	yes

configure.args	--mandir=${prefix}/share/man --disable-scrollkeeper
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 

post-activate {
	system "scrollkeeper-update"
}
