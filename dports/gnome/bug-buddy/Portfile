# $Id$

PortSystem 1.0

name		bug-buddy
version		2.22.0
description	A graphical bug reporting tool.
long_description        This is a graphical bug reporting tool. It can \
			extract debugging information from a core file \
			or crashed application (via gnome_segv).
maintainers	nomaintainer
categories	gnome
platforms	darwin
homepage	http://www.gnome.org/
master_sites    gnome:sources/bug-buddy/[strsed ${version} {/\.[0-9]*$//}]/

checksums	md5 092e1f91d0be4ca133cd0650622a6b06 \
			sha1 1fd3bd2b0e6160d0e2d9dee93cd49a4c3fa2770e \
			rmd160 684457fa6394522994b8443bbf47ccbdd1b1a11e

depends_lib \
		port:libelf \
		port:libgnomeui \
		port:gnome-doc-utils \
		port:gnome-keyring \
		port:gnome-desktop \
		port:gnome-menus \
		port:startup-notification \
		port:libsoup \
		port:libgtop \
		port:evolution-data-server

use_bzip2 	yes

configure.args	--mandir=${prefix}/share/man --disable-scrollkeeper

post-activate {
	system "${prefix}/bin/scrollkeeper-update"
}
