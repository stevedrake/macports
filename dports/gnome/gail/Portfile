PortSystem 1.0
name		gail
version		1.8.5
description	An implementation of the ATK interfaces for GTK+ widgets.
long_description        Gail, the Gnome Accessibility Implementation \
			library, is implementation of the ATK interfaces \
			for GTK+ widgets.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gail/1.8/

checksums	rmd160 18acff493ddc422b9ed857f77794714a454c3544

depends_lib \
	lib:libatk-1.0:atk lib:libiconv.2:libiconv lib:libexpat:expat \
	port:fontconfig port:freetype lib:libcairo:cairo port:pango \
	lib:libpng:libpng port:xrender lib:libglib-2.0:glib2 port:jpeg \
	lib:libgtk-x11-2.0:gtk2 lib:libtiff:tiff port:zlib port:gettext \
        lib:libgnomecanvas-2:libgnomecanvas lib:libart_lgpl_2:libart_lgpl

use_bzip2	yes

configure.args  --mandir=${prefix}/share/man
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 
