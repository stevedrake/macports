# $Id: Portfile,v 1.2 2004/04/30 20:21:40 olegb Exp $
PortSystem 1.0
name		galeon
version		1.3.14a
description	A GNOME browser.
long_description        Galeon is a GNOME Web browser based on gecko (the \
			mozilla rendering engine). It's fast, it has a \
			light interface, and it is fully standards-compliant.
maintainers	olegb@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://galeon.sourceforge.net
master_sites	sourceforge
use_bzip2	yes
checksums	md5 d8232cbf87e4c9e2a70f605a1a7b6980
depends_lib     bin:mozilla:mozilla bin:gnome-session:gnome-session
worksrcdir	${name}-1.3.14
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
                CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress"
configure.args	--enable-nautilus-view=no
post-destroot   {                 
		reinplace "s|export LD_LIBRARY_PATH|export DYLD_FALLBACK_LIBRARY_PATH=\$DYLD_FALLBACK_LIBRARY_PATH:${prefix}/lib/mozilla-1.6/|g" ${destroot}/${prefix}/bin/galeon
}
