#!/bin/sh

dist_bin=`dirname $0`

MOZILLA_HOME=/opt/local/lib/mozilla-1.7.5

if [ -z "$MOZ_PLUGIN_PATH" ]; then
    MOZ_PLUGIN_PATH=/usr/lib/mozilla/plugins:/usr/libexec/plugins/mozilla
    export MOZ_PLUGIN_PATH
fi

if [ -n "$LD_LIBRARY_PATH" ]; then
  LD_LIBRARY_PATH=$MOZILLA_HOME:$LD_LIBRARY_PATH
else
  LD_LIBRARY_PATH=$MOZILLA_HOME
fi
export DYLD_FALLBACK_LIBRARY_PATH=$DYLD_FALLBACK_LIBRARY_PATH:/opt/local/lib/mozilla-1.7.5/

MOZILLA_FIVE_HOME=$MOZILLA_HOME
export MOZILLA_FIVE_HOME

exec "$dist_bin/galeon-bin" "$@"
