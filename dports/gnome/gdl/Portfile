# $Id$

PortSystem          1.0

name                gdl
version             2.30.0
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          gnome devel
maintainers         devans openmaintainer
description         GNOME development library.
long_description \
   This package contains components and libraries that are intended to be \
   shared between GNOME development tools, including gnome-debug, \
   gnome-build, and anjuta2.

platforms           darwin

homepage            http://www.anjuta.org/
master_sites        gnome:sources/${name}/${branch}/
use_bzip2           yes

checksums           md5     ce4eef03a36bf6abd9f8cbad4806d7b8 \
                    sha1    3047e8646552947174b8aa02470dc5b43c208e83 \
                    rmd160  787c6c827589b9cc118b5be91fc404370e8b64ef

depends_build       port:pkgconfig \
                    port:intltool \
                    port:gtk-doc

depends_lib         port:gtk2 \
                    port:libxml2

livecheck.type      regex
livecheck.url       http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex     {LATEST-IS-(\d+(?:\.\d+)*)}

