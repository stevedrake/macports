# $Id: Portfile,v 1.2 2004/12/16 18:02:44 olegb Exp $
PortSystem 1.0
name		gdm
version		2.6.0.6
description	The Gnome Display Manager is a re-implementation of the well known xdm program.
long_description	${description}
maintainers	olegb@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites	gnome:sources/gdm/2.6/
checksums	md5 8dca7cb1f28d81f60f6e07b3c24288c5
depends_lib	bin:gnome-session:gnome-session
use_bzip2 	yes
patchfiles	patch_config.h.in
configure.args	--mandir=${prefix}/share/man 
configure.env   CPPFLAGS="-I${prefix}/include -L${prefix}/lib" 

platform darwin 7 {
                configure.env-append LDFLAGS="-lresolv -L${prefix}/lib" 
}
