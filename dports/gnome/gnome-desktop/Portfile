# $Id: Portfile,v 1.15 2005/01/16 18:21:50 olegb Exp $
PortSystem 1.0
name		gnome-desktop
version		2.8.1
description	Additional UI API for GNOME 2
long_description        This is a collection of APIs not included in \
			libgnomeui as they have not undergone sufficient \
			testing.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gnome-desktop/2.8/
checksums	md5 47f9b9508c4a0349d66fa1138b521794
patchfiles	patch_gnome-desktop-item.c
depends_lib	lib:gnome-themes:gnome-themes lib:libiconv.2:libiconv
depends_build	bin:scrollkeeper-extract:scrollkeeper
use_bzip2 	yes
configure.args  --mandir=${prefix}/share/man \
		--with-gnome-distributor=DarwinPorts \
		--with-kde-datadir=${prefix}/share
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
                CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress"
