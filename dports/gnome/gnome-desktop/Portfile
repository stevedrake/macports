# $Id$
PortSystem 1.0
name		gnome-desktop
version		2.18.1
description	Additional UI API for GNOME 2
long_description        This is a collection of APIs not included in \
			libgnomeui as they have not undergone sufficient \
			testing.
maintainers	rhwood openmaintainer@macports.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gnome-desktop/2.18/

checksums	md5 a40df2ac6e73e38451f031ac99e9eb6e \
			sha1 9a707f0ac97103e5464cb03fe14429754778563f \
			rmd160 f521135c8c60ab27febcb50daaaaed932ace9de1

# I do not know if fribidi is a build or run time dependency
depends_lib \
	port:fribidi \
	port:startup-notification \
	port:gnome-doc-utils \
	port:libgnomeui \
	port:dbus \
	port:dbus-glib
	
use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man \
		--with-gnome-distributor=MacPorts \
		--with-kde-datadir=${prefix}/share \
		--disable-scrollkeeper

configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 

post-activate {
	system "scrollkeeper-update"
}
