# $Id$
PortSystem 1.0
name		gnome-desktop
version		2.20.0
description	Additional UI API for GNOME 2
long_description        This is a collection of APIs not included in \
			libgnomeui as they have not undergone sufficient \
			testing.
maintainers	rhwood openmaintainer
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gnome-desktop/[strsed ${version} {/\.[0-9]*$//}]/

checksums	md5 530244e27a4a2426f833561c4b573a42 \
			sha1 6bfb7a44d324f0d2a10d5185770e43bbc2378fc8 \
			rmd160 74cf96610e6fe81a964cc1487f26d2a5babf7600

# I do not know if fribidi is a build or run time dependency
depends_lib \
	port:fribidi \
	port:startup-notification \
	port:gnome-doc-utils \
	port:libgnomeui \
	port:dbus \
	port:dbus-glib
	
use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man \
		--with-gnome-distributor=MacPorts \
		--with-kde-datadir=${prefix}/share \
		--disable-scrollkeeper

configure.cppflags-append "-L${prefix}/lib"

post-activate {
	system "scrollkeeper-update"
}
