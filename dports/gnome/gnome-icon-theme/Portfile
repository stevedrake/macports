# $Id$

PortSystem  1.0

name		gnome-icon-theme
version		2.20.0
set branch  [join [lrange [split ${version} .] 0 1] .]
revision    1
description	A collection of icons for the GNOME 2 desktop.
long_description        gnome-icon-theme is a collection of icons and \
			emblems for the GNOME 2 desktop.
maintainers	rhwood openmaintainer
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/

checksums       md5 56857a6d5f26c236b48fcf6760549d1b \
                sha1 72202cc724cf080964f6e2ff7c3a99340606769f \
                rmd160 92c73aef6392b73a2728b579dfae9ca8e740c661

depends_build \
        port:perl5.8 \
        port:p5-xml-parser \
        port:pkgconfig \
		port:gettext \
        port:libiconv \
		port:icon-naming-utils

use_bzip2 	yes

universal_variant   no

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}

