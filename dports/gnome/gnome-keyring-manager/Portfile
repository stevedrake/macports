# $Id: Portfile,v 1.2 2006/04/11 10:41:14 rhwood Exp $

PortSystem	1.0

name			gnome-keyring-manager
version		2.14.0
revision		0
description	A keyring management program for the GNOME Desktop.
long_description        ${description}
maintainers	macports-dev@lists.macosforge.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/2.14/
checksums	md5  d4e38c7b7da99885fa898917e10d8aeb \
			sha1 71e25d2184351954b9d8821b98ade8828d5259bf \
			rmd160 799ff976f816ac4aa1339280c0bac8f38e141307
use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man \
		--disable-scrollkeeper
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
                CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress" 

depends_lib	port:gnome-keyring

post-activate	{
	system "scrollkeeper-update"
}
