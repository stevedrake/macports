PortSystem 1.0
name		gnome-menus
version		2.12.0
description	Panel component for the GNOME 2 Desktop.
long_description        Panel component for the GNOME 2 Desktop.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/2.12/

checksums	rmd160 72caca74259e2cb7ab212f314933354c9bee6a31

depends_lib \
	lib:libiconv.2:libiconv bin:perl:perl5.8 port:gettext port:glib2

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 
