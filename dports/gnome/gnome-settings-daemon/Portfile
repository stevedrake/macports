PortSystem 1.0

name            gnome-settings-daemon
version         2.24.0
description     Gnome 2 settings daemon.
long_description ${description}
maintainers     nomaintainer
categories      gnome
platforms       darwin
homepage        http://www.gnome.org/
master_sites    gnome:sources/${name}/[join [lrange [split ${version} .] 0 1] .]/
checksums       md5 2e30e9d17b810103d493e474fbfd20e5 \
                sha1 7d95a7550c465c9a64e4bda64331c92069958bfd \
                rmd160 da517b2a5841ba4044c7ee69f784894f622ec5f3

depends_lib     port:libgnomeui \
                port:esound \
                port:gnome-desktop \
                port:libgnomekbd \
                port:gst-plugins-good \
                port:dbus-glib
depends_build	port:gnome-doc-utils
use_bzip2 	yes

pre-configure {
    reinplace "s|-bundle|-bundle -undefined dynamic_lookup|g" ${worksrcpath}/configure
}

configure.args  --enable-gstreamer
