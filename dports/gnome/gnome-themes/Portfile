# $Id: Portfile,v 1.10 2005/12/18 12:18:11 rhwood Exp $
PortSystem 1.0
name		gnome-themes
version		2.12.1
description	A collection of themes and icons for GNOME 2 designed \
		for accessibility.
long_description        New package of default themes for GNOME, \
			which currently includes GTK+ and icon \
			themes designed for accessibility.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gnome-themes/2.12/
checksums	md5 ab6d63ecb304506153fac3e958995ef4 \
			sha1 a6374fcb110858a8bcbb9aeeb067d7e2ec6f4d3f \
			rmd160 e64777413043dba64596cf00a6a8b94cd3412457

depends_lib	bin:perl:perl5.8 lib:gtk-engines-2:gtk-engines2

# Should be depends_extract, but that isn't implemented
depends_build	bin:gnutar:gnutar

use_bzip2 	yes

extract.post_args	|gnutar -xf -

configure.args	--enable-all-themes
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 
