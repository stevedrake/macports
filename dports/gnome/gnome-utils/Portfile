PortSystem 1.0
name		gnome-utils
version		2.10.0
description	Session component for the GNOME 2 desktop
long_description        Session component for the GNOME 2.0 desktop.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gnome-utils/2.10/
checksums	md5 43644d28321645aa68428e99fadb2504
depends_lib     lib:gnome-session:gnome-session
patchfiles	patch_logrtns.c
use_bzip2 	yes
configure.args  --mandir=${prefix}/share/man
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
		LDFLAGS="-L${prefix}/lib -lexpat -lfreetype -lXrender -lfontconfig -lXft -L/usr/X11R6/lib -lX11 -lXinerama -lXext -lXrandr"
post-extract {
	reinplace "s|-export-dynamic||g" ${worksrcpath}/gnome-screenshot/Makefile.in
}
