# $Id: Portfile,v 1.3 2005/01/14 09:06:55 olegb Exp $

PortSystem 1.0
name		gnome
version		2.8.1
revision	2
categories	gnome
maintainers	gnome-darwinports@opendarwin.org
description	The GNOME Desktop mega-port.
long_description	${description}
homepage	http://www.gnome.org/

depends_lib	\
	bin:gnome-control-center:control-center \
	bin:gedit:gedit bin:eog:eog bin:gnome-search-tool:gnome-utils \
	path:${prefix}share/gnome/help/user-guide/C/wgospanel.xml:gnome2-user-docs \
	bin:yelp:yelp bin:gnomine:gnome-games bin:bug-buddy:bug-buddy

distfiles

fetch		{ }
checksum	{ }
configure	{ }
build		{ }
destroot	{ 
	file mkdir ${destroot}${prefix}/share/doc/
	file copy ${filespath}/MORE_ON_DP_GNOME.txt ${destroot}${prefix}/share/doc
}
post-destroot	{ ui_msg "To start gnome put \"exec gnome-session\" in your .xinitrc" }

# insert tons'o'variants here 
variant office {
	depends_lib-append bin:gnumeric:gnumeric bin:abiword:abiword2 bin:dia:dia
}

variant graphics {
	depends_lib-append bin:sodipodi:sodipodi bin:inkscape:inkscape
}

variant www {
	depends_lib-append bin:galeon:galeon bin:epiphany:epiphany
}
