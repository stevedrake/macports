# $Id: Portfile,v 1.14 2005/05/07 20:18:06 olegb Exp $

PortSystem 1.0
name		gnumeric
version		1.5.0
description	A spreadsheet with gnome support.
long_description        A spreadsheet with gnome support.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome math
platforms	darwin 
homepage	http://www.gnome.org/projects/gnumeric/
master_sites    gnome:sources/gnumeric/1.5/
use_bzip2	yes
checksums	md5 2c32ffc6c99ea5fba3f52439e2ff0b0d

depends_lib	lib:libgsf:libgsf		\
		lib:libgnomeprintui-2:libgnomeprintui

patchfiles	patch-commonlib.c

configure.args	--without-python		\
		--mandir=${prefix}/share/man
configure.env	CC="gcc-3.3" CXX="g++-3.3"

post-destroot { file delete -force ${destroot}${prefix}/var/scrollkeeper }
