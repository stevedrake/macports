PortSystem          1.0

name                gobject-introspection
version             0.10.2
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          gnome
platforms           darwin
maintainers         nomaintainer
description         GObject Introspection

long_description    Gobject Introspection acts as a bridge between low-level C+GObject code and \
                    a managed runtime (JavaScript, Python, Java, Lua, .NET, Scheme, etc.). 

homepage            http://live.gnome.org/GObjectIntrospection
master_sites        gnome:sources/${name}/${branch}/
use_bzip2           yes

checksums           sha1    8397ee1beefdb088423e04456be4c8f7f4ec646a \
                    rmd160  6bc96538b6001984f86171f7c0b9f6fd5ec3b017

depends_build       port:pkgconfig

depends_lib         path:lib/pkgconfig/cairo.pc:cairo \
                    path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:libffi

livecheck.type      regex
livecheck.url       http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex     {LATEST-IS-(\d+(?:\.\d+)*)}
