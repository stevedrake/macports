PortSystem 1.0

name		gst-plugins-base
version		0.10.18
description	This is gst-plugins, a set of plug-ins for GStreamer.
long_description        ${description}
maintainers	nomaintainer
categories	gnome
platforms	darwin
homepage	http://www.gnome.org/

use_bzip2 	yes
master_sites    gnome:sources/gst-plugins-base/0.10/ http://gstreamer.freedesktop.org/src/${name}/
checksums	md5 422e654b049dedef6fdbf4456f2259d1 \
		sha1 25d6626ce55d7b8f21149906c5aaa6b212dec4a0 \
		rmd160 55d67dfaf7fa64b08ddc0de8f8af8e2cb561433f

depends_lib	\
	port:gstreamer \
	port:gnome-vfs \
	port:liboil \
	port:libogg \
	port:libtheora \
	port:libvorbis \
	port:cdparanoia

# configure.env PYTHON=${prefix}/bin/python2.5 doesn't work
pre-configure {
        reinplace "s|python python2.2|python2.5 python2.2|" ${worksrcpath}/configure
}

