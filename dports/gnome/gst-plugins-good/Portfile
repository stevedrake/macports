# $Id$

PortSystem 1.0

name		gst-plugins-good
version		0.10.7
description	This is gst-plugins, a set of plug-ins for GStreamer.
long_description        ${description}
maintainers	nomaintainer
categories	gnome
platforms	darwin
homepage	http://www.gnome.org/
master_sites    http://gstreamer.freedesktop.org/src/${name}/ gnome:sources/gst-plugins-good/0.10/
checksums 	md5 e02d729b22451f75414a27456ae5c16a \
		sha1 b393e90a503781fbc984b1ebd0712dddde7540a5 \
		rmd160  6cee52846fc882869389d2f32dbce67df4504bcd
depends_lib	\
	port:gst-plugins-base \
	port:aalib \
	port:esound \
	port:flac \
	port:gconf \
	port:libcaca \
	port:libdv \
	port:libcdio \
	port:libshout2 \
	port:speex \
	port:taglib \
	port:wavpack \
	port:zlib
use_bzip2 	yes
configure.cxx   g++
pre-configure {
	reinplace "s|OBJC = gcc|OBJC = @OBJC@|" ${worksrcpath}/sys/osxvideo/Makefile.in
	reinplace "s|-DGST_DISABLE_DEPRECATED||" ${worksrcpath}/configure

	# configure.env PYTHON=${prefix}/bin/python2.5 doesn't work
        reinplace "s|python python2.2|python2.5 python2.2|" ${worksrcpath}/configure
}
