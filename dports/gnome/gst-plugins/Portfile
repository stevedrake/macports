PortSystem 1.0
name		gst-plugins
version		0.8.4
description	This is gst-plugins, a set of plug-ins for GStreamer.
long_description        ${description}
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gst-plugins/0.8/
checksums	md5 203360bb6546ac45e5a76cbb34d514e0
depends_lib	lib:libgstreamer:gstreamer
# could depend on tons for multimedia stuff +variants
use_bzip2 	yes
configure.args	mandir=${prefix}/share/man
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" LDFLAGS="-L${prefix}/lib" \
                CFLAGS="-flat_namespace -no-cpp-precomp -funroll-loops -fstrict-aliasing" 
