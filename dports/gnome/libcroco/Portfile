# $Id$
PortSystem 1.0
name		libcroco
version		0.6.1
description	A generic Cascading Style Sheet (CSS) parsing and manipulation \
		toolkit for GNOME applications that need CSS support.
long_description	${description}

maintainers	nomaintainer@macports.org
categories	gnome
platforms	darwin
homepage	http://www.gnome.org/
master_sites    gnome:sources/libcroco/0.6/
checksums	sha1 fdb1d0ab7082836c570f98b1846e4ddcc0b37607

depends_lib \
	port:gettext port:glib2 \
	port:libiconv port:libxml2 \
	port:zlib

use_bzip2 	yes
configure.args  --mandir=${prefix}/share/man
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include"

test.run	yes
test.target	test
test.env	DYLD_LIBRARY_PATH=${worksrcpath}/src/.libs
