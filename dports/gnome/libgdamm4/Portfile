# $Id$

PortSystem 1.0

name		libgdamm4
set gname       libgdamm
version		4.1.1
set branch      [join [lrange [split ${version} .] 0 1] .]

description	C++ wrappers for libgda4.
long_description        ${description}

maintainers	devans openmaintainer
categories	gnome
platforms	darwin
 
homepage	http://www.gtkmm.org/
master_sites    gnome:sources/${gname}/${branch}/

dist_subdir     ${gname}
distname        ${gname}-${version}

checksums       md5     b0e0af3be63357530d6af086ebdaa803 \
                sha1    f626d87281158aab52669b09641340e968deb021 \
                rmd160  fa88794c3fd84fd094f78e4ebb2ba22e582df748

depends_build   port:pkgconfig

depends_lib	port:glibmm \
                port:libgda4

livecheck.type  regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${gname}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
