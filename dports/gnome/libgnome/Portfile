# $Id: Portfile,v 1.15 2005/09/12 12:55:24 olegb Exp $
PortSystem 1.0
name		libgnome
version		2.12.0
description	This is the non-gui part of the library formerly \
		known as gnome-libs.
long_description       	This is the non-gui part of the library formerly \
			known as gnome-libs. 
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/2.12/
checksums	rmd160 85bfe701352c78dff5f22be30ccf62d1e6ca2be4

depends_lib \
	lib:libesd:esound lib:libgnomevfs-2:gnome-vfs lib:libglib-2.0:glib2 \
	lib:libiconv.2:libiconv port:zlib port:popt bin:gconftool-2:gconf \
	port:libxml2 bin:perl:perl5.8 bin:orbit-idl-2:orbit2 lib:libbonobo-2:libbonobo \
	lib:libaudiofile:audiofile lib:libgettextlib:gettext

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 
