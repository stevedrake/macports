# $Id$

PortSystem      1.0

name		    libgnomeprint
version		    2.18.6
set branch      [join [lrange [split ${version} .] 0 1] .]
maintainers	    nomaintainer
categories	    gnome
platforms	    darwin
description	    This is an implementation of the Gnome Printing Architecture

long_description \
    ${description}

homepage	    http://www.levien.com/gnome/print-arch.html
master_sites    gnome:sources/${name}/${branch}/
use_bzip2       yes

checksums       md5     a5aa248058a07de4b3cf444673cfc683 \
                sha1    0a73e016428ce90eba7773251d8dffebeed5deb7 \
                rmd160  a5765d408d3b50e77286112550568afd0afc5bde

patchfiles      patch-configure.diff

depends_build   port:pkgconfig \
                port:bison \
                path:bin/perl:perl5 \
                port:p5-xml-parser

depends_lib     path:lib/pkgconfig/glib-2.0.pc:glib2 \
                port:libart_lgpl \
                path:lib/pkgconfig/pango.pc:pango \
                port:libxml2 \
                port:fontconfig \
                port:freetype \
                port:popt \
                port:libgnomecups \
                port:zlib

configure.args  --disable-gtk-doc

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
