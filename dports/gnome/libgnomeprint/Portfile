PortSystem 1.0
name		libgnomeprint
version		2.11.0
description	This is an implementation of the Gnome Printing Architecture
long_description       	This is an implementation of the Gnome Printing \
			Architecture
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.levien.com/gnome/print-arch.html
master_sites    gnome:sources/libgnomeprint/2.11/

checksums	rmd160 c2a4b9b63cfe0d642c5aa428806d82e775c9fd36

depends_lib \
	port:p5-xml-parser bin:perl:perl5.8 lib:libexpat:expat port:freetype \
	port:fontconfig port:libxml2 port:zlib port:popt lib:libgettextlib:gettext \
	lib:libiconv:libiconv lib:libglib-2.0:glib2 port:pango port:libart_lgpl \
	port:libgnomecups

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man
configure.env   CPPFLAGS="-I${prefix}/include -L${prefix}/lib" 
