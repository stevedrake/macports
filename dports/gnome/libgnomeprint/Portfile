# $Id$

PortSystem      1.0

name		    libgnomeprint
version		    2.18.2
set branch      [join [lrange [split ${version} .] 0 1] .]
maintainers	    nomaintainer
categories	    gnome
platforms	    darwin 
description	    This is an implementation of the Gnome Printing Architecture

long_description \
    ${description}

homepage	    http://www.levien.com/gnome/print-arch.html
master_sites    gnome:sources/${name}/${branch}/
use_bzip2       yes

checksums       md5 b1f6c95a8dbb8ce17ab00fc2eea2aa91 \
                sha1 25c468b78fedfc708b26e95941d51dddbbf25562 \
                rmd160 53126d1ff565e1fefd66d33eb6380a6a55c5a1cc

patchfiles      patch-configure

depends_build   port:pkgconfig \
                port:bison \
                port:perl5.8 \
                port:p5-xml-parser

depends_lib     port:glib2 \
                port:libart_lgpl \
                port:pango \
                port:libxml2 \
                port:fontconfig \
                port:freetype \
                port:popt \
                port:libgnomecups \
                port:zlib

configure.args  --disable-gtk-doc

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
