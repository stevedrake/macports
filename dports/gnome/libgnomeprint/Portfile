# $Id$

PortSystem      1.0

name		    libgnomeprint
version		    2.18.4
set branch      [join [lrange [split ${version} .] 0 1] .]
maintainers	    nomaintainer
categories	    gnome
platforms	    darwin
description	    This is an implementation of the Gnome Printing Architecture

long_description \
    ${description}

homepage	    http://www.levien.com/gnome/print-arch.html
master_sites    gnome:sources/${name}/${branch}/
use_bzip2       yes

checksums       md5 bc460f875425a956176f07440b3fa46e \
                sha1 5d79f3ce210b9a11bc67983852064513a12ac97f \
                rmd160 c321525fdd44a9bb38f901f222fa34d625aac816

patchfiles      patch-configure.diff

depends_build   port:pkgconfig \
                port:bison \
                port:perl5.8 \
                port:p5-xml-parser

depends_lib     path:${prefix}/lib/pkgconfig/glib-2.0.pc:glib2 \
                port:libart_lgpl \
                path:${prefix}/lib/pkgconfig/pango.pc:pango \
                port:libxml2 \
                port:fontconfig \
                port:freetype \
                port:popt \
                port:libgnomecups \
                port:zlib

configure.args  --disable-gtk-doc

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
