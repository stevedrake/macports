# $Id$

PortSystem      1.0

name            libgnomeprint
version         2.18.7
set branch      [join [lrange [split ${version} .] 0 1] .]
maintainers     nomaintainer
categories      gnome
platforms       darwin
description     This is an implementation of the Gnome Printing Architecture

long_description \
    ${description}

homepage        http://www.levien.com/gnome/print-arch.html
master_sites    gnome:sources/${name}/${branch}/
use_bzip2       yes

checksums       md5     d66b81ee8aa3b3a33f5efc9a47ce07e3 \
                sha1    f7c550abacf22f602ca097f9033803bf9d4556de \
                rmd160  5202ef3d8187f6b01a16ac8f97d924074cbdf91d

depends_build   port:pkgconfig \
                port:bison \
                path:bin/perl:perl5 \
                port:p5-xml-parser

depends_lib     path:lib/pkgconfig/glib-2.0.pc:glib2 \
                port:libart_lgpl \
                path:lib/pkgconfig/pango.pc:pango \
                port:libxml2 \
                port:fontconfig \
                port:freetype \
                port:popt \
                port:libgnomecups \
                port:zlib

configure.args  --disable-gtk-doc

livecheck.type  regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
