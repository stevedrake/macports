# $Id$

PortSystem      1.0

name            libgnomeprintui
version         2.18.5
set branch      [join [lrange [split ${version} .] 0 1] .]
maintainers     nomaintainer
categories      gnome
platforms       darwin
description     This is an implementation of the Gnome Printing Architecture

long_description \
    ${description}

homepage        http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/
use_bzip2       yes

checksums       md5     66c1cf3a9ead428585c2c44e6110ebb7 \
                sha1    ef641569b5a454e89250ae13da5b74620552e9d8 \
                rmd160  9604a58d2da520cec5506e9ba44962eca9155974

depends_build   port:pkgconfig \
                port:intltool \
                port:gnome-icon-theme

depends_lib     port:gtk2 \
                port:jpeg \
                port:libgnomeprint \
                port:libgnomecanvas

depends_run     port:gnome-icon-theme

configure.args  --disable-gtk-doc

livecheck.type  regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
