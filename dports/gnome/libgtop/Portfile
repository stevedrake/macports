# $Id: Portfile,v 1.8 2006/04/29 16:08:36 rhwood Exp $
PortSystem 1.0
name		libgtop
version		2.14.4
description	A library for gtop2
long_description        This is library for the gtop2, the GNOME 2.0 \
			version of top command. The top command is a tool \
			to display and update information about the top \
			cpu processes.
maintainers	macports-dev@lists.macosforge.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/libgtop/2.14/
checksums	md5 f13217814aed782b262e22735e5c02b2 \
		sha1 d73991648877da83af0da48ac6b2d5491cede6fd
depends_lib     bin:gnome-terminal:gnome-terminal
use_bzip2 	yes
configure.args	--mandir=${prefix}/share/man --infodir=${prefix}/share/info \
		--disable-static
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
		CFLAGS="-no-cpp-precomp -lintl"
