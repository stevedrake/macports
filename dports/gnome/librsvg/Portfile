# $Id$

PortSystem      1.0

name            librsvg
version         2.22.2
set branch      [join [lrange [split ${version} .] 0 1] .]
categories      gnome
platforms       darwin 
maintainers     nomaintainer
description     Gnome implementation of rsvg.

long_description \
    ${description}

homepage        http://librsvg.sourceforge.net/
master_sites    gnome:sources/${name}/${branch}/
use_bzip2       yes

checksums       md5 aae602677ce201b1a0ed6a0c18c207f2 \
                sha1 a42ad2dd0a1b3b7195fe7d4e89c7e1f0352a51cf \
                rmd160 ead6af5c0b1c251f640d7eec06b354e33739a489

depends_lib     port:libcroco \
                port:libgsf \
                port:libart_lgpl \
                port:libxml2

configure.args  --enable-pixbuf-loader \
                --with-svgz

configure.cppflags-append   -L${prefix}/lib
configure.cflags-append     -no-cpp-precomp -flat_namespace -undefined suppress

post-activate {
    ui_debug "Updating gdk-pixbuf.loaders..."
    system "gdk-pixbuf-query-loaders >${prefix}/etc/gtk-2.0/gdk-pixbuf.loaders"
}
