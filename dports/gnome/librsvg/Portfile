# $Id$

PortSystem      1.0

name            librsvg
version         2.16.1
revision        1
categories      gnome
platforms       darwin 
maintainers     nomaintainer
description     Gnome implementation of rsvg.

long_description \
    ${description}

homepage        http://librsvg.sourceforge.net/
master_sites    gnome:sources/${name}/2.16/
use_bzip2       yes

depends_lib     port:libcroco \
                port:libgsf \
                port:libart_lgpl \
                port:libxml2

checksums       sha1 3e7d9020341dee0b0bc9b4d7b70f38e77d92e0e2

configure.args  --mandir=${prefix}/share/man \
                --enable-pixbuf-loader \
                --with-svgz 

configure.cppflags-append   -L${prefix}/lib
configure.cflags-append     -no-cpp-precomp -flat_namespace -undefined suppress

post-activate {
    set fl [open "| grep -c svg ${prefix}/etc/gtk-2.0/gdk-pixbuf.loaders"]
    set data [read $fl]

    if {[catch {close $fl} err]} {
        ui_msg "Updating ${prefix}/etc/gtk-2.0/gdk-pixbuf.loaders"
        system "cd ${prefix}/lib/gtk-2.0/2.10.0/loaders ; gdk-pixbuf-query-loaders *.so > ${prefix}/etc/gtk-2.0/gdk-pixbuf.loaders"
    }
}

