# $Id: Portfile,v 1.19 2006/03/24 01:27:35 yves Exp $
PortSystem 1.0
name		librsvg
version		2.16.0
revision		1
description	Gnome implementation of rsvg.
long_description       	${description}
maintainers	macports-dev@lists.macosforge.org
categories	gnome
platforms	darwin 
homepage	http://librsvg.sourceforge.net/
master_sites    gnome:sources/${name}/2.16/
checksums	sha1 87917ea1300ca592e9901eb99ce070bd565b0807

depends_lib	port:libcroco \
		port:libgsf \
		port:libart_lgpl \
		port:libxml2
use_bzip2 	yes
configure.args  --mandir=${prefix}/share/man --enable-pixbuf-loader \
		--with-svgz 
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
		CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress"
post-activate {
	set fl [open "| grep -c svg ${prefix}/etc/gtk-2.0/gdk-pixbuf.loaders" ]
	set data [read $fl]
	if {[catch {close $fl} err]} {
		ui_msg "Updating ${prefix}/etc/gtk-2.0/gdk-pixbuf.loaders"
		cd ${prefix}/lib/gtk-2.0/2.10.0/loaders
		system "gdk-pixbuf-query-loaders *.so > ${prefix}/etc/gtk-2.0/gdk-pixbuf.loaders"
	}
}
