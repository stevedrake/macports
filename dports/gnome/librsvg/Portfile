PortSystem 1.0
name		librsvg
version		2.9.5
description	Gnome implementation of rsvg.
long_description       	${description}
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/librsvg/2.9/
checksums	md5 44799d75e940eb4150acdae4f63cbe2a
depends_lib	lib:libmetacity-private:metacity
patchfiles	patch_ltmain.sh
use_bzip2 	yes
configure.args  --mandir=${prefix}/share/man --enable-pixbuf-loader \
		--with-svgz 
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
		LDFLAGS="-lfreetype -lfontconfig" \
		CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress" 
