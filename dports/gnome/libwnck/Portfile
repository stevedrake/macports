# $Id: Portfile,v 1.23 2006/04/17 11:04:45 rhwood Exp $
PortSystem 1.0
name		libwnck
version		2.14.1
description	Library used for writing pagers and taskslists.
long_description        libwnck is a Window Navigator Construction Kit, \
			i.e. a library to use for writing pagers and \
			taskslists and stuff.  It is needed for the \
			GNOME 2.0 desktop.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/2.14/
checksums	rmd160 17dc644a80c9a32d2e32605348c945a24a48760f

depends_lib \
	port:startup-notification \
	port:libgnomecanvas
depends_build \
	port:gnome-doc-utils

use_bzip2	yes

configure.args  --mandir=${prefix}/share/man --disable-scrollkeeper
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 
