# $Id: Portfile,v 1.5 2006/02/04 19:25:35 rhwood Exp $

PortSystem 1.0
name		liferea
version		1.0.3
description	A feed aggregator for GNOME.
long_description        Liferea is an aggregator for online news feeds. \
			It supports the RSS/RDF, CDF, Atom, OCS and OPML \
			formats and enclosures (podcasting). It also has \
			filtering mechanisms.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome net
platforms	darwin 
homepage	http://liferea.sourceforge.net/
master_sites    sourceforge
checksums	md5 40232e6884e4ae9628916868a9a9c828
depends_lib	lib:libgtkhtml-2:libgtkhtml
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
		CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress" 
configure.args	--mandir=${prefix}/share/man
