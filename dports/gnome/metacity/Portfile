# $Id$
PortSystem 1.0
name		metacity
version		2.18.2
description	A window manager for the adult in you.
long_description        ${description}
maintainers	rhwood@macports.org openmaintainer@macports.org
categories	gnome x11-wm 
platforms	darwin 
homepage	http://www.gnome.org
master_sites    gnome:sources/${name}/2.18/
checksums	md5 45cdadd7d6213aeca3d9f1acc1d1d70f \
			sha1 cc8aa9e7dfc279abab527302da3bca0519b87042 \
			rmd160 e96df742c194ec8b514d5d8339c5206297274630

depends_lib \
	port:gtk2 \
	port:pango \
	port:gconf \
        port:startup-notification \
	port:xrender \
	port:gnome-themes
depends_build \
	port:gnome-doc-utils

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man --disable-scrollkeeper
configure.cppflags-append	-I/usr/X11R6/include
configure.ldflags-append	-L/usr/X11R6/lib

post-activate {
	system "scrollkeeper-update"
}
