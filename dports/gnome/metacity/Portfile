# $Id$
PortSystem 1.0
name		metacity
version		2.18.3
description	A window manager for the adult in you.
long_description        ${description}
maintainers	rhwood openmaintainer@macports.org
categories	gnome x11-wm 
platforms	darwin 
homepage	http://www.gnome.org
master_sites    gnome:sources/${name}/2.18/
checksums	md5 1687de35cd7bb209641a5e1e223c5de1 \
			sha1 faf83271af12933256d95c67794c02c25aceadd6 \
			rmd160 5322fd2f541735c2a160db835ad70ba829a8909c

depends_lib \
	port:gtk2 \
	port:pango \
	port:gconf \
        port:startup-notification \
	port:xrender \
	port:gnome-themes
depends_build \
	port:gnome-doc-utils

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man --disable-scrollkeeper
configure.cppflags-append	-I/usr/X11R6/include
configure.ldflags-append	-L/usr/X11R6/lib

post-activate {
	system "scrollkeeper-update"
}
