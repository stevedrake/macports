PortSystem 1.0
name		metacity
version		2.12.0
description	A window manager for the adult in you.
long_description        ${description}
maintainers	gnome-darwinports@opendarwin.org
categories	gnome x11-wm 
platforms	darwin 
homepage	http://www.gnome.org/softwaremap/projects/Metacity
master_sites    gnome:sources/${name}/2.12/
checksums	rmd160 dd0caaffa86a6b7a68f053f35e1e1fbe7a6d9844

depends_lib \
	lib:libXft.2.1.2:Xft2 lib:libexpat:expat port:fontconfig port:freetype \
        lib:libatk-1.0:atk bin:gconftool-2:gconf lib:libgettextlib:gettext \
        lib:libglib-2.0:glib2 lib:libgtk-x11-2.0:gtk2 port:jpeg lib:libiconv:libiconv \
        bin:orbit-idl-2:orbit2 bin:perl:perl5.8 lib:libpng:libpng port:popt \
        lib:libpangoft2-1.0:pango port:render port:xrender port:startup-notification \
	port:tiff port:zlib

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man
configure.env   CPPFLAGS="-I${prefix}/include -L${prefix}/lib" 
