# $Id$
PortSystem 1.0
name		metacity
version		2.18.0
description	A window manager for the adult in you.
long_description        ${description}
maintainers	rhwood@macports.org openmaintainer@macports.org
categories	gnome x11-wm 
platforms	darwin 
homepage	http://www.gnome.org/softwaremap/projects/Metacity
master_sites    gnome:sources/${name}/2.18/
checksums	md5 2af31af033618329d093267ac00e49ff \
			sha1 34c7df4a69b8326a50aa43ddd0ac7f0811a5b3b9 \
			rmd160 803ebccc4efb0acd5b2ffe98ce9d611a2f853a8b

depends_lib \
        port:startup-notification \
	port:gnome-themes
depends_build \
	port:gnome-doc-utils

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man --disable-scrollkeeper
configure.env   CPPFLAGS="-I${prefix}/include -L${prefix}/lib -I/usr/X11R6/include -L/usr/X11R6/lib"

post-activate {
	system "scrollkeeper-update"
}
