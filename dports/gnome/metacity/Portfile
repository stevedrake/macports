# $Id: Portfile,v 1.21 2006/04/20 09:45:34 rhwood Exp $
PortSystem 1.0
name		metacity
version		2.14.3
description	A window manager for the adult in you.
long_description        ${description}
maintainers	gnome-darwinports@opendarwin.org
categories	gnome x11-wm 
platforms	darwin 
homepage	http://www.gnome.org/softwaremap/projects/Metacity
master_sites    gnome:sources/${name}/2.14/
checksums	md5 57c0bc3cf4103097e126df892ecc1d58 \
			sha1 fb20956830ebbd22bce98005bac32c1d84e7f198 \
			rmd160 c41a9baa11a6cf6c58473a95db36974775e6fc85

depends_lib \
        port:startup-notification \
	port:gnome-themes
depends_build \
	port:gnome-doc-utils

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man --disable-scrollkeeper
configure.env   CPPFLAGS="-I${prefix}/include -L${prefix}/lib -I/usr/X11R6/include -L/usr/X11R6/lib"

post-activate {
	system "scrollkeeper-update"
}
