# $Id$

PortSystem      1.0

name            totem-pl-parser
version         2.30.2
set branch      [join [lrange [split ${version} .] 0 1] .]
categories      gnome
maintainers     devans openmaintainer
description     Gnome Playlist parser
long_description \
        totem-pl-parser is a simple GObject-based library to parse \
        a host of playlist formats, as well as save those

homepage        http://live.gnome.org/Totem
platforms       darwin
master_sites    gnome:sources/${name}/${branch}/

checksums       md5     c616536b9d7af21bbb16363eec0ec8a5 \
                sha1    f53cf95e1623a4707aec8aee331a3743efd7e4c8 \
                rmd160  a492106887205011df6e5672c79494d53081217e

use_bzip2       yes

depends_build   port:pkgconfig \
                port:gtk-doc

depends_lib     port:libsoup \
                port:gmime \
                port:gobject-introspection

livecheck.type  regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
