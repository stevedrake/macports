PortSystem	1.0
name		vino
version		2.13.5
homepage	http://www.gnome.org
description	Vino is a VNC server for the current GNOME user
long_description	${description}
categories	gnome
platforms	darwin
maintainers	NONE
master_sites	gnome:sources/vino/2.13/
checksums	md5 9bc8c3f0e639fdc7b9ed023501308359
use_bzip2	yes
depends_lib	port:libgcrypt \
		port:gnutls \
		port:avahi \
		port:gnome-platform-suite
configure.args	mandir=${prefix}/share/man
configure.env	CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
		LDFLAGS="-L${prefix}/lib" \
		CFLAGS="-no-cpp-precomp -funroll-loops -fstrict-aliasing"
