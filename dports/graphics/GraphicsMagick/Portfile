# $Id: Portfile,v 1.1 2005/05/04 07:12:08 mww Exp $

PortSystem 1.0

name			GraphicsMagick
version			1.1.6
categories		graphics
platforms		darwin
maintainers		mww@opendarwin.org
description		image processing tools collection
long_description	GraphicsMagick is the swiss army knife of image \
				processing. It provides a robust collection of tools and \
				libraries which support reading, writing, and manipulating an \
				image in over 88 major formats including important formats \
				like DPX, GIF, JPEG, JPEG-2000, PNG, PDF, SVG, and TIFF.

homepage		http://www.graphicsmagick.org/
master_sites	sourceforge:${name} \
				ftp://ftp.graphicsmagick.org/pub/GraphicsMagick/
checksums		md5 ee85aef3cde13432a3f2e5604b758f9c
use_bzip2		yes

depends_lib		bin:xml2-config:libxml2 \
				lib:libbz2:bzip2 \
				lib:libz:zlib

configure.args	--with-ttf=no \
				--with-jbig=no \
				--with-wmf=no \
				--with-bzlib=yes \
				--with-zlib=yes \
				--with-xml=yes \
				--with-lcms=no \
				--with-x=no \
				--with-perl=no \
				--enable-shared=yes \
				--mandir=${prefix}/share/man
