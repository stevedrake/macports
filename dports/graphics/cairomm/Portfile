# $Id$

PortSystem 1.0

name		cairomm
version		1.4.8
categories	graphics
maintainers	nomaintainer
description	Cairo is a vector graphics library with cross-device output support.
long_description	Cairo is designed to produce identical \
			output on all output media while taking advantage of \
			display hardware acceleration when available \
			(eg. through the X Render Extension).
homepage	http://cairographics.org/
master_sites 	${homepage}releases/
platforms	darwin

checksums	md5 2b2025b3555fa1665d92cf9f9be1a4d3 \
		sha1 6ff150e2380a334e78e80b88edbcc9ad9ddb77fd \
		rmd160 b7fdf9c001605304116d9f8ff54eac8e418c93bb

depends_lib	port:xrender port:fontconfig port:freetype port:libpng \
		port:render port:zlib port:expat port:cairo

variant quartz { configure.args-append --enable-quartz }

post-configure {
	reinplace "s/-dynamiclib/-dynamiclib -flat_namespace/" ${worksrcpath}/libtool
}
