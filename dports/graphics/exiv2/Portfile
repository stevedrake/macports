# $Id$

PortSystem 1.0

name             exiv2
version          0.18
homepage         http://www.exiv2.org/
description      EXIF and IPTC metadata manipulation library and tools
categories       graphics
platforms        darwin
maintainers      vafer.org:tcurdt openmaintainer

master_sites     http://www.exiv2.org/
checksums        md5     03044792525ae0a1b109df5a53b858fb \
                 sha1    7584fff327383da4667390663f24c4100ab997eb \
                 rmd160  0206c1ff4f7ac0365d0f6b2796c15b102020ef22

long_description Exiv2 comprises of a C++ library and a command line utility \
                 which allows you to manipulate EXIF and IPTC image metadata.

configure.args   --with-libiconv-prefix=${prefix}	\
                 --with-libintl-prefix=${prefix}	\
                 --with-zlib=${prefix}				\
                 --with-expat=${prefix}

# Parts are not autotools (exiv2-0.18/xmpsdk/src/Makefile)
universal_variant no

depends_lib      port:expat \
                 port:gettext \
                 port:libiconv \
                 port:zlib

destroot.destdir prefix=${destroot}${prefix}
