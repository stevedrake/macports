# $Id: Portfile,v 1.23 2005/04/21 15:57:50 jberry Exp $

PortSystem 1.0
name             fontconfig
version          2.2.3
revision         1
categories       graphics
maintainers      blb@pobox.com toby@opendarwin.org
description      An XML-based font configuration API for X Windows
long_description \
	Fontconfig is a library for configuring and customizing font access.
homepage         http://fontconfig.org/
platforms        darwin

master_sites     http://freedesktop.org/~fontconfig/release/
checksums        md5 2466a797d645cda5eb466080fdaec416

depends_lib      port:expat port:freetype

configure.env    CPPFLAGS=-I${prefix}/include LDFLAGS=-L${prefix}/lib
configure.args   --mandir=${prefix}/share/man

variant vera {
	depends_build-append	path:${prefix}/share/fonts/Vera.ttf:bitstream-vera
	post-destroot {
		xinstall -m 644 ${prefix}/share/doc/bitstream-vera/local.conf \
			${destroot}/${prefix}/etc/fonts
	}
}
