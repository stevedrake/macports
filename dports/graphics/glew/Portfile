# $Id$

PortSystem 1.0

name               glew
version            1.5.0
categories         graphics devel
platforms          darwin
maintainers        jmr openmaintainer
description        OpenGL Extension Wrangler Library
long_description   The OpenGL Extension Wrangler Library (GLEW) is a \
                   cross-platform C/C++ extension loading library. GLEW \
                   provides efficient run-time mechanisms for determining \
                   which OpenGL extensions are supported on the target \
                   platform. OpenGL core and extension functionality is \
                   exposed in a single header file.

homepage           http://glew.sourceforge.net
master_sites       sourceforge
distfiles          ${distname}-src.tgz
checksums          md5 3fececda0151b060c08ffd8a12892741 \
                   sha1 17fa3b2f5b72a227c5e14631c2bda3fcfd8c1663 \
                   rmd160 2fa13cd326e82fc9c043d1fcbf2c4da062723296
worksrcdir         ${name}
use_configure      no
build.env          GLEW_DEST=${prefix}
destroot.env       GLEW_DEST=${destroot}${prefix}

# ugh, why is configure.cc not available in the build phase?
set mycc /usr/bin/gcc-4.0
platform darwin 8  { build.args CC=${mycc} LD=${mycc} }
platform darwin 9  { build.args CC=${mycc} LD=${mycc} }
