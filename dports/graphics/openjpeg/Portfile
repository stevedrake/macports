# $Id$

PortSystem		1.0
name			openjpeg
version			1.2
revision        1
categories		graphics
maintainers     yves
description     Library for manipulating JPEG-2000 images
long_description \
	The OpenJPEG library is an open-source JPEG 2000 codec. \
	It has been developed in order to promote the use of JPEG 2000, \
	the new still-image compression standard from the \
	Joint Photographic Experts Group (JPEG).

platforms       darwin

homepage        http://www.openjpeg.org/
master_sites    ${homepage}/

checksums		md5 4973c564c96683a921a7f6759906da4e
distname        ${name}_v1_2

worksrcdir      trunk

post-patch {
    reinplace "s|/usr|${prefix}|" \
        ${worksrcpath}/Makefile.osx
    reinplace \
        "s|dynamiclib|dynamiclib -install_name ${prefix}/lib/libopenjpeg-2.1.2.0.dylib -compatibility_version 2.0.0 -current_version 2.1.2|" \
            ${worksrcpath}/Makefile.osx
}

use_configure   no

build.target    osx
destroot.target osxinstall
