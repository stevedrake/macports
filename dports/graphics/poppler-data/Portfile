description	Poppler encoding data.
long_description \
    ${description}

master_sites    ${homepage}

checksums       md5     5b739b79378c2f41b577e0438e519eeb \
                sha1    3ac0fef45ef6602d8084abcd16f1b4e264a1c814 \
                rmd160  65678ee72c406e287efd412ddf0a544dcd6aa51a

use_configure   no
build           {}

destroot.args   datadir=${prefix}/share

livecheck.type  regex
livecheck.url   ${master_sites}
livecheck.regex "${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"
