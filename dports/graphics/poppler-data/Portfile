PortSystem 1.0

name        poppler-data
version     0.4.0
maintainers nomaintainer
categories  graphics
platforms   darwin
homepage    http://poppler.freedesktop.org/

description	Poppler encoding data.
long_description \
    ${description}

master_sites    ${homepage}

checksums       md5     6975bf8e9ea2cfb42b9ecdbcc257cf57 \
                sha1    cf1a46c02f416d985d4945766230c266352a7b85 \
                rmd160  2c1bbea9b99f57c1b94cf3a3a8e205aecd8e22be

use_configure   no
build           {}

destroot.args   datadir=${prefix}/share

livecheck.type  regex
livecheck.url   ${master_sites}
livecheck.regex "${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"
