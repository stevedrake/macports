PortSystem 1.0

name        poppler-data
version     0.4.3
maintainers nomaintainer
categories  graphics
platforms   darwin
supported_archs noarch
homepage    http://poppler.freedesktop.org/

description	Poppler encoding data.
long_description \
    ${description}

master_sites    ${homepage}

checksums       md5     2d648047e5d0b315df1571b460ee6a96 \
                sha1    aa28288563d2542e14414666a8b35d01f42ad164 \
                rmd160  0a106b7d94675017de9b92ae523f9808ada2e925

use_configure   no
build           {}

destroot.args   datadir=${prefix}/share

livecheck.type  regex
livecheck.url   ${master_sites}
livecheck.regex "${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"
