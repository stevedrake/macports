PortSystem 1.0
name		poppler	
version		0.3.3
description	Poppler is a PDF rendering library based on the xpdf-3.0 code base.
long_description        ${description}
maintainers	olegb@opendarwin.org
categories	graphics
platforms	darwin 
homepage	http://${name}.freedesktop.org/
master_sites    ${homepage}
checksums	md5 b3f30b1136931c2188059478894ab0f9
depends_lib	lib:libcairo:cairo lib:gtk.2:gtk2
configure.args  --mandir=${prefix}/share/man
configure.env	CPPFLAGS="-I${prefix}/include -L${prefix}/lib" 

pre-configure {
	reinplace "s|-flat_namespace -undefined suppress||g" \
		${worksrcpath}/configure 
}
