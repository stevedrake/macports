# $Id: Portfile,v 1.5 2005/10/04 11:55:25 mww Exp $
PortSystem 1.0
name		poppler	
version		0.4.2
description	Poppler is a PDF rendering library based on the xpdf-3.0 code base.
long_description        ${description}
maintainers	darwinports@opendarwin.org
categories	graphics
platforms	darwin 
homepage	http://${name}.freedesktop.org/
master_sites    ${homepage}
checksums	md5 beb1eea135a3c5b679a7a22d01a500c0
depends_lib	lib:libcairo:cairo lib:gtk.2:gtk2
configure.args  --mandir=${prefix}/share/man
configure.env	CPPFLAGS="-I${prefix}/include -L${prefix}/lib"

platform darwin 8 {
	configure.env-append	CC=/usr/bin/gcc-4.0 CPP=/usr/bin/cpp-4.0 CXX=/usr/bin/g++-4.0
}

pre-configure {
	reinplace "s|-flat_namespace -undefined suppress||g" \
		${worksrcpath}/configure 
}
