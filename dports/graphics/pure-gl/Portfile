        ${worksrcpath}/GL_ATI.c \
        ${worksrcpath}/GL_EXT.c \
        ${worksrcpath}/GL_NV.c \
        ${worksrcpath}/GLU.c \
        ${worksrcpath}/GLUT.c
}
