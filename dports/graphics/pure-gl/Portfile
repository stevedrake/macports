post-patch {
    reinplace -E "s,#include <(OpenGL|GLUT)/,#include <GL/,g" \
        ${worksrcpath}/GL.c \
        ${worksrcpath}/GL_ARB.c \
        ${worksrcpath}/GL_ATI.c \
        ${worksrcpath}/GL_EXT.c \
        ${worksrcpath}/GL_NV.c \
        ${worksrcpath}/GLU.c \
        ${worksrcpath}/GLUT.c
}
