PortSystem 1.0
name             irssistats
version          0.6
categories       irc
maintainers      toby@opendarwin.org
description      generate IRC statistics from irssi logs
long_description \
	This tool generates IRC stats based on irssi logs.
homepage         http://royale.zerezo.com/irssistats/
platforms        darwin
master_sites     ${homepage}
checksums        md5 3e109eaf8070c9072623446002f28212

patch {
	reinplace "s|doc|share/doc|" ${worksrcpath}/Makefile
	reinplace "s|/etc|${prefix}/etc|" ${worksrcpath}/irssistats.c
}

configure        {}

build.target

destroot.destdir PRE=${destroot}${prefix}
