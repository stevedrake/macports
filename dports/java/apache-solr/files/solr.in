#!/bin/bash

CMDNAME=`basename "$0"`

usage() {
    echo "Usage: ${CMDNAME} [-h|--help] [solr_home]" 1>&2
    exit 1
}

SOLR_PATH=@solr_path@
SOLR_HOME=@solr_home@

while test -n "$1"; do
    case "$1" in
        -h|--help) usage ;;
        *)         SOLR_HOME="$1";    shift ;;
    esac
done

java -Dsolr.clustering.enabled=true \
     -Dsolr.solr.home="${SOLR_HOME}" \
     -Djetty.home="${SOLR_PATH}" \
     -jar ${SOLR_PATH}/start.jar
