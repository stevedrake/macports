# $Id: Portfile,v 1.1 2005/02/08 14:21:41 olegb Exp $
PortSystem 1.0
name		classpath
version		0.13
description	Essential libraries for Java.
long_description	GNU Classpath, Essential Libraries for Java, \
			is a GNU project to create free core class \
			libraries for use with virtual machines and \
			compilers for the java programming language.
maintainers	olegb@opendarwin.org
categories	java
platforms	darwin 
homepage	http://www.gnu.org/software/classpath/classpath.html
master_sites	gnu
checksums	sha1 f431a24d7f25259123ae8a897b4d71be76ac76ea
depends_lib	bin:jikes:jikes 
configure.args	--mandir=${prefix}/share/man --infodir=${prefix}/share/info \
		--disable-gtk-peer
configure.env   CPPFLAGS="-I${prefix}/include -L${prefix}/lib" \
                CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress" 

variant gtk {
	configure-delete --disable-gtk-peer
	depends-lib-append lib:libgtk.2:gtk2
}
