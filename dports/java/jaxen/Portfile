# $Id: Portfile,v 1.1 2004/04/07 19:56:50 mww Exp $

PortSystem 1.0

name		jaxen
version		1.0
categories	java devel textproc
platforms	darwin
maintainers	mww@opendarwin.org
description	Java XPath engine
long_description	The jaxen project is a Java XPath Engine. jaxen is a \
			universal object model walker, capable of evaluating \
			XPath expressions across multiple models. Currently \
			supported  are dom4j and JDOM.

homepage	http://www.jaxen.org/
master_sites	sourceforge
distname	${distname}-FCS
checksums	md5 c0baf972b669579aff40ca7fdb9a90d0

depends_build	bin:ant:apache-ant
depends_lib	bin:java:kaffe \
		path:${prefix}/share/java/saxpath-1.0.jar:saxpath

use_configure	no

build.env	CLASSPATH=${prefix}/share/java/saxpath-1.0.jar
build.cmd	ant
build.target	jars

destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/java \
		${destroot}${prefix}/share/doc
	xinstall -m 644 ${worksrcpath}/build/jaxen-core.jar \
		${destroot}${prefix}/share/java/jaxen-core-${version}.jar
	xinstall -m 644 ${worksrcpath}/build/jaxen-dom.jar \
		${destroot}${prefix}/share/java/jaxen-dom-${version}.jar
	file copy ${worksrcpath}/doc ${destroot}${prefix}/share/doc/${name}
}
