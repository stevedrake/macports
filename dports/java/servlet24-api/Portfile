# $Id$

PortSystem 1.0

name			servlet24-api
version			5.0.28

categories		java
maintainers		jberry@macports.org
platforms		darwin

description		Java Servlet 2.4 and JSP 2.0 API.
long_description	The Java Servlet and JavaServer Pages specifications \
				are developed by Sun under the Java Community Process. This \
				project provides the servlet and jsp api jars from Tomcat 5.
homepage		http://jakarta.apache.org/tomcat/

distname		jakarta-tomcat-${version}-src
master_sites	apache:jakarta/tomcat-5/v${version}/src/			
checksums		md5 8115f86558aef8a17543397e7f9d9469

depends_build	bin:ant:apache-ant
depends_lib		bin:java:kaffe

worksrcdir		${distname}/jakarta-tomcat-5

use_configure	no

build.cmd		ant
build.target	build-depends
build.args		-Dbase.path=${worksrcpath}/../repository

destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/java \
		${destroot}${prefix}/share/doc
	xinstall -m 644 ${worksrcpath}/../repository/jsp-api-2.0/lib/jsp-api.jar \
		${destroot}${prefix}/share/java/jsp2-api.jar
	xinstall -m 644 \
		${worksrcpath}/../repository/servlet-api-2.4/lib/servlet-api.jar \
		${destroot}${prefix}/share/java/servlet24-api.jar
}
