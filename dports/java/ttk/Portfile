# $Id$

PortSystem          1.0

name                ttk
version             20100306
categories          java
platforms           darwin
maintainers         singingwolfboy openmaintainer
homepage            http://sourceforge.net/projects/ttk/
master_sites        sourceforge:ttk
fetch.type          svn
svn.url             http://ttk.svn.sourceforge.net/svnroot/ttk/trunk
svn.tag             129
worksrcdir          trunk

description         Trollworks Toolkit
long_description \
    ${description} is a toolkit of Java classes used in other \
    Trollworks projects, such as GURPS Character Sheet.
 
depends_build       bin:ant:apache-ant

use_configure       no
build.cmd           ant
build.target        dist

destroot {
    xinstall -m 755 -d ${destroot}${prefix}/share/java/${name}
    xinstall -m 755 -W ${worksrcpath} TrollworksToolkit.jar \
        ${destroot}${prefix}/share/java/${name}/
}
