checksums           sha1    5e061570ab2cc8081d8207de4791950ffe73b49c \
                    rmd160  6b13c1788e7fe97b8043d7d3237808815da6a8f4

use_bzip2           yes

depends_lib         port:libgphoto2 \
                    port:liblqr \
                    port:kdegraphics4

variant geoloc description {Install with geo location functionality} {
    depends_run-append \
        port:kdeedu4
}

variant kipi description {Install with KIPI plugins} {
    depends_run-append \
        port:kipi-plugins
}

default_variants +geoloc +kipi

configure.args-append   ../${distname}
