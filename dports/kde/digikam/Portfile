PortSystem          1.0
PortGroup           kde4 1.1

name                digikam
version             1.6.0
categories          kde kde4
maintainers         hyper-world.de:jan
platforms           darwin

description         Photo Management Program
long_description    Digital photo management program to import, organize, enhance, search and export your digital images.

homepage            http://www.digikam.org/
master_sites        sourceforge:digikam

checksums           md5     a7bfe28f04a840719bf3e10a000ad89e \
                    sha1    7daf9606468e5a9ada55fac3a68820703adac48e \
                    rmd160  b277e96a95aca2b85e42bfd614542c389c394c52

use_bzip2           yes

depends_lib         port:libgphoto2 \
                    port:liblqr \
                    port:kdegraphics4

depends_run         port:kipi-plugins

variant geoloc description {Install with geo location functionality} {
    depends_run-append \
        port:kdeedu4
}

variant no_kipi description {install without KIPI plugins} {
    depends_run-delete \
        port:kipi-plugins
}

default_variants +geoloc

configure.args-append   ../${distname}
