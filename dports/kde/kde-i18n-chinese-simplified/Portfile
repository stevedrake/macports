# $Id: Portfile,v 1.1 2006/07/31 02:54:13 takanori Exp $

PortSystem 1.0
name           kde-i18n-chinese-simplified
version        3.5.1
categories     kde
maintainers    ben@macports.org takanori@opendarwin.org
description    KDE chinese-simplified language files.
long_description ${description}
platforms      darwin

depends_lib    port:kdelibs3
master_sites   opendarwin::kde351
#	       kde:stable/${version}/src/kde-i18n
distname       kde-i18n-zh_CN-${version}
distfiles      ${distname}.tar.bz2:kde351
worksrcdir     ${distname}
use_bzip2      yes
checksums      md5 809fc565769b2dffed4098d4a3230296

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/kde-i18n-chinese-simplified"
}
