# $Id$

PortSystem 1.0
name		kde-i18n-chinese
version		3.5.6
categories	kde
maintainers	nomaintainer@macports.org
description	KDE chinese language files.
long_description ${description}
platforms	darwin
homepage	http://www.kde.org/
master_sites	kde:stable/${version}/src/kde-i18n/:kde356
#		opendarwin::kde356
distname	kde-i18n-zh_TW-${version}
distfiles	${distname}.tar.bz2:kde356
use_bzip2	yes
checksums	md5 f6211661d09cf7dcc381147d084537a7
depends_lib	port:kdebase3

patch		{
		reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}

configure.env	HOME=${workpath} KDEDIR=${prefix}
configure.args	--without-arts

build.env	${configure.env}

post-destroot	{
		xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
		system "touch ${destroot}${prefix}/share/doc/kde-installed-packages/kde-i18n-chinese"
}

livecheck.check	none
