# $Id: Portfile,v 1.1 2005/09/05 01:33:41 ben Exp $

PortSystem 1.0
name           kde-i18n-es
version        3.4.1
categories     x11
maintainers    ben@opendarwin.org
description    KDE spanish language files.
long_description ${description}
platforms      darwin

depends_lib    port:kdelibs3
master_sites   kde:stable/${version}/src/kde-i18n
use_bzip2      yes
checksums      md5 a53442acc363a69aeab9b4d3d8e39084

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  CC=gcc-3.3 CXX=g++-3.3 \
               HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/kde-i18n-spanish"
}
