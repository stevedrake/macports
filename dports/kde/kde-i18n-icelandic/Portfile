# $Id$

PortSystem 1.0
name           kde-i18n-icelandic
version        3.5.1
categories     kde
maintainers    ben@macports.org takanori@macports.org
description    KDE icelandic language files.
long_description ${description}
platforms      darwin

depends_lib    port:kdelibs3
master_sites   opendarwin::kde351
#	       kde:stable/${version}/src/kde-i18n
distname       kde-i18n-is-${version}
distfiles      ${distname}.tar.bz2:kde351
worksrcdir     ${distname}
use_bzip2      yes
checksums      md5 381d659a746dd70eea9ea23c5fb80464

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/kde-i18n-icelandic"
}
