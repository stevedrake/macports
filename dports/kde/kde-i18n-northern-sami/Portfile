# $Id$

PortSystem 1.0
name		kde-i18n-northern-sami
version		3.5.4
categories	kde
maintainers	ben@opendarwin.org takanori@opendarwin.org
description	KDE northern-sami language files.
long_description ${description}
platforms	darwin
homepage	http://www.kde.org/
master_sites	opendarwin::kde354
#		kde:stable/${version}/src/kde-i18n
distname	kde-i18n-se-${version}
distfiles	${distname}.tar.bz2:kde354
use_bzip2	yes
checksums	md5 607bf14fd29c1840abe28b8c22ce51bd
depends_lib	port:kdebase3

patch		{
		reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}

configure.env	HOME=${workpath} KDEDIR=${prefix}
configure.args	--without-arts

build.env	${configure.env}

post-destroot	{
		xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
		system "touch ${destroot}${prefix}/share/doc/kde-installed-packages/kde-i18n-northern-sami"
}
