# $Id: Portfile,v 1.2 2006/02/27 04:28:55 ben Exp $

PortSystem 1.0
name           kde-i18n-pt_BR
version        3.5.1
categories     x11
maintainers    ben@opendarwin.org takanori@opendarwin.org
description    KDE brazilian-portugese language files.
long_description ${description}
platforms      darwin

depends_lib    port:kdelibs3
master_sites   kde:stable/${version}/src/kde-i18n
use_bzip2      yes
checksums      md5 24fa0b4c146fce9cc7a0046865a9fd94

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  CC=gcc-3.3 CXX=g++-3.3 \
               HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/kde-i18n-brazilian-portugese"
}
