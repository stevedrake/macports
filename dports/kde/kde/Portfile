# $Id: Portfile,v 1.2 2006/02/27 04:18:05 ben Exp $

PortSystem 1.0
name		kde
version		3.5.1
categories	kde
maintainers	ben@opendarwin.org takanori@opendarwin.org
description	KDE Desktop bundle
long_description ${description}
homepage	http://www.kde.org/

depends_lib	port:kdelibs3 \
		port:kdebase3 \
		port:kdenetwork3 \
		port:kdepim3 \
		port:kdeutils3

distfiles

fetch		{ }
checksum	{ }
configure	{ }
build		{ }
destroot	{
		xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde
		xinstall -m 444 ${portpath}/${filesdir}/README ${destroot}${prefix}/share/doc/kde/
		ui_msg "To start KDE, put \"exec ${prefix}/bin/startkde\" in your .xinitrc"
		ui_msg "If you have problems, refer to ${prefix}/share/doc/kde/README"
}

variant accessibility {
depends_lib-append port:kdeaccessibility3
}

variant devel {
depends_lib-append port:kdesdk3 \
		   port:kdewebdev3
}

variant fun {
depends_lib-append port:kdeaddons3 \
                   port:kdeartwork3 \
		   port:kdeedu3 \
		   port:kdegames3 \
		   port:kdetoys3
}

variant graphics {
depends_lib-append port:kdegraphics3
}

variant all {
depends_lib-append port:kdeaccessibility3 \
		   port:kdeaddons3 \
		   port:kdeartwork3 \
		   port:kdeedu3 \
		   port:kdegames3 \
		   port:kdegraphics3 \
                   port:kdesdk3 \
                   port:kdetoys3 \
		   port:kdewebdev3
}
