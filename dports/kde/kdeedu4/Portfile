PortSystem          1.0
PortGroup           kde4   1.0

name                kdeedu4
version             4.4.2
revision            1
categories          kde kde4
maintainers         snc sharky
description         Education based applications for the KDE4 platform
long_description    ${description}. This includes programs such as Marble and Kalzium.
platforms           darwin
homepage            http://www.kde.org
master_sites        kde:stable/${version}/src/
use_bzip2           yes
distname            kdeedu-${version}
checksums           md5     69b9e54f4bd59c5816600c3d2828878b \
                    sha1    5e80f6eaecb87545554804d7a82187b8da5bb4d6 \
                    rmd160  fc75aca4c96399243f78bdab0e3e79f690a85eee

depends_lib-append  port:kdelibs4 port:kdebase4 \
                    port:ocaml port:openbabel \
                    port:eigen port:gpsd

variant cfitsio description {Gives KStars support for FITS images} {
    depends_lib-append port:cfitsio
}

variant qalculate description {Enable unit conversion support in Step} {
    depends_lib-append port:libqalculate
}

variant gsl description {Enables GSL-powered features in Step} {
    depends_lib-append port:gsl
}

variant xplanet description {Gives KStars support for xplanet} {
    depends_lib-append port:xplanet
}

universal_variant   no

configure.args-append   ../${distname}

livecheck.url       http://mirrors.ibiblio.org/pub/mirrors/kde/stable/latest/src/
livecheck.regex     kdeedu-(\\d+\\.\\d+\\.\\d+)${extract.suffix}
