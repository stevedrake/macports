                    port:sane-backends

configure.args-append   ../${distname} \
                        -DQCA2_LIBRARIES=${prefix}/lib/libqca.2.dylib \
                        -DQCA2_INCLUDE_DIR=${prefix}/include/QtCrypto \
                        -DGWENVIEW_SEMANTICINFO_BACKEND=None

