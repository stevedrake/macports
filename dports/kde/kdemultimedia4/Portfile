                    port:kdelibs4-experimental \
                    port:cdparanoia \
                    port:libogg \
                    port:libvorbis \
                    port:taglib

configure.args-append   ../${distname} \
                        -DBUILD_dragonplayer=ON \
                        -DBUILD_juk=ON \
                        -DBUILD_kmix=OFF \
                        -DWITH_Taglib=ON \
                        -DWITH_MusicBrainz=OFF \
