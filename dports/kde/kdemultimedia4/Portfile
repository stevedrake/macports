platforms           darwin
homepage            http://www.kde.org
master_sites        kde:stable/${version}/src/
use_bzip2           yes
distname            kdemultimedia-${version}
checksums           md5     08611f34d1779f1bf773962b4efa9d81 \
                    sha1    fd215c529d76cf7f998539a9a6a4476f2bd885fc \
                    rmd160  51d77ff3aec536f7ad74970cb5fbffee65ee7449

