                    and download manager
platforms           darwin
homepage            http://www.kde.org
master_sites        kde:stable/${version}/src
use_bzip2           yes
distname            kdenetwork-${version}

checksums           rmd160  8d1cdce1dfd5fa4aae6ecb2d55b189e0bcd94981 \
                    sha256  5a5e7bfa7998e38f80667473c590ab11dde8f3dd6a81a5d9e61ca3940354efa4

depends_lib-append  port:kde4-runtime \
                    port:meanwhile \
                    port:kdepimlibs4 \
                    port:libtelepathy \
                    port:qca \
                    path:lib/libspeex.dylib:speex \
                    port:libotr \
                    port:xmms \
                    port:libmsn \
                    port:LibVNCServer \
                    port:libktorrent \
                    port:libgcrypt \
                    port:libmms \
                    port:libidn
