PortSystem          1.0
PortGroup           kde4   1.0

name                kdepimlibs4
version             4.4.5
categories          kde kde4
maintainers         snc sharky
description         KDE4 core PIM libraries
long_description    Core libraries necessary for Personal Information Management (PIM) in KDE4
platforms           darwin
homepage            http://www.kde.org
master_sites        kde:stable/${version}/src/
use_bzip2           yes
distname            kdepimlibs-${version}
checksums           sha1    bc4d9a478f80e013ac39710f963ee68961d5f369 \
                    rmd160  3ba96ac29e151e7bcebe90394535d82345102346

depends_lib-append  port:kdelibs4 \
                    port:akonadi \
                    port:boost \
                    port:libical \
                    port:openldap \
                    port:gpgme

configure.args-append   ../${distname} \
                    -DLIBICALSS_LIBRARY=${prefix}/lib/libicalss.dylib \
                    -DLIBICAL_INCLUDE_DIRS=${prefix}/include/ \
                    -DLIBICAL_LIBRARY=${prefix}/lib/libical.dylib

universal_variant   no

