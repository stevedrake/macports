# $Id: Portfile,v 1.2 2006/05/23 03:12:52 takanori Exp $

PortSystem 1.0
name           koffice-i18n-danish
version        1.5.1
categories     kde
maintainers    ben@macports.org takanori@opendarwin.org
description    KOffice danish language files.
long_description ${description}
platforms      darwin

depends_lib    port:koffice
master_sites   kde:stable/koffice-${version}/src/koffice-l10n
distname       koffice-l10n-da-${version}
distfiles      ${distname}.tar.bz2
worksrcdir     ${distname}
use_bzip2      yes
checksums      md5 aa38e3e0f04a930e89543cfb79c6184d

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/koffice-i18n-danish"
}
