# $Id$

PortSystem 1.0
name		koffice-i18n-hebrew
version		1.5.2
categories	kde
maintainers	nomaintainer@macports.org
description	KOffice hebrew language files.
long_description ${description}
platforms	darwin
homepage	http://www.koffice.org/
master_sites	kde:stable/koffice-${version}/src/koffice-l10n/:koffice162
#		opendarwin::koffice162
distname	koffice-l10n-he-${version}
distfiles	${distname}.tar.bz2:koffice162
use_bzip2	yes
checksums	md5 a0368a287bf2a3566b802ffe6de8b472
depends_lib	port:koffice

patch		{
		reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}

configure.env	HOME=${workpath} KDEDIR=${prefix}
configure.args	--without-arts

build.env	${configure.env}

post-destroot	{
		xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
		system "touch ${destroot}${prefix}/share/doc/kde-installed-packages/koffice-i18n-hebrew"
}

livecheck.check	none
