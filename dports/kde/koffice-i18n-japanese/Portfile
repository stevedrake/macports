# $Id$

PortSystem 1.0
name		koffice-i18n-japanese
version		1.6.0
categories	kde
maintainers	nomaintainer@macports.org
description	KOffice japanese language files.
long_description ${description}
platforms	darwin
homepage	http://www.koffice.org/
master_sites	kde:stable/koffice-${version}/src/koffice-l10n/:koffice160
#		opendarwin::koffice160
distname	koffice-l10n-ja-${version}
distfiles	${distname}.tar.bz2:koffice160
use_bzip2	yes
checksums	md5 dd3f979c03f9bc4ae6393a54766b4a84
depends_lib	port:koffice

patch		{
		reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}

configure.env	HOME=${workpath} KDEDIR=${prefix}
configure.args	--without-arts

build.env	${configure.env}

post-destroot	{
		xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
		system "touch ${destroot}${prefix}/share/doc/kde-installed-packages/koffice-i18n-japanese"
}

livecheck.check	none
