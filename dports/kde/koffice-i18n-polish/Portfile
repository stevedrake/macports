# $Id: Portfile,v 1.1 2006/04/21 20:29:05 takanori Exp $

PortSystem 1.0
name           koffice-i18n-polish
version        1.5
categories     kde
maintainers    ben@opendarwin.org takanori@opendarwin.org
description    KOffice polish language files.
long_description ${description}
platforms      darwin

depends_lib    port:koffice
master_sites   kde:unstable/koffice-${version}-rc1/src/koffice-l10n
distname       koffice-l10n-pl-${version}-rc1
distfiles      ${distname}.tar.bz2
worksrcdir     ${distname}
use_bzip2      yes
checksums      md5 859790e80df1d88dba631d33b15dc375

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/koffice-i18n-polish"
}
