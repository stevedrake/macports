# $Id: Portfile,v 1.1 2006/03/13 09:58:06 takanori Exp $

PortSystem 1.0
name           koffice-i18n-pt
version        1.4.2
categories     x11
maintainers    ben@opendarwin.org takanori@opendarwin.org
description    KOffice portugese language files.
long_description ${description}
platforms      darwin

depends_lib    port:koffice
master_sites   kde:stable/koffice-${version}/src/koffice-l10n
distname       koffice-l10n-pt-${version}
distfiles      ${distname}.tar.bz2
worksrcdir     ${distname}
use_bzip2      yes
checksums      md5 61e11d48f788275389f0b75e75b8de2b

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  CC=gcc-3.3 CXX=g++-3.3 \
               HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/koffice-i18n-portugese"
}
