# $Id: Portfile,v 1.5 2005/04/26 15:06:59 mww Exp $

PortSystem 1.0

name			gcc33
version			3.3.5
revision		4
platforms		darwin
categories		lang
maintainers		mww@opendarwin.org
description		The GNU compiler collection
long_description	The GNU compiler collection, including front ends for C, \
				C++, Objective-C, Java and Fortran77.

homepage		http://gcc.gnu.org/gcc-3.3/
master_sites    gnu:/gcc/gcc-${version}
distname		gcc-${version}
checksums		md5 70ee088b498741bb08c779f9617df3a5
use_bzip2		yes

depends_build	port:odcctools

set major		3.3

worksrcdir		build

post-extract {
	file mkdir ${worksrcpath}
}

patch {
	reinplace "s|/usr/bin/libtool|${prefix}/bin/odlibtool|g" \
		${workpath}/gcc-${version}/gcc/config/darwin.h
}

configure.cmd	${workpath}/gcc-${version}/configure
configure.args	--enable-languages=c,c++,java,f77,objc \
				--libdir=${prefix}/lib/gcc-${major} \
				--infodir=${prefix}/share/info \
				--mandir=${prefix}/share/man \
				--with-local-prefix=${prefix} \
				--with-system-zlib \
				--disable-nls \
				--program-suffix=-dp-${major} \
				--with-gxx-include-dir=${prefix}/include/gcc-${major}/c++/ \
				--with-as=${prefix}/bin/odas \
				--with-ld=${prefix}/bin/odld

build.target	bootstrap-lean

post-destroot {
	cd ${destroot}${prefix}/share
	file delete -force info man/man7 man/man1/rmic.1 man/man1/rmiregistry.1
	foreach manpage {cpp gcjh gcov gij jcf-dump jv-convert jv-scan} {
		file rename man/man1/${manpage}.1 man/man1/${manpage}-dp-${major}.1
	}
}
