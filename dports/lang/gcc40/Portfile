# $Id: Portfile,v 1.10 2005/07/23 02:10:59 mww Exp $

PortSystem 1.0

name			gcc40
version			4.0.1
revision		1
platforms		darwin
categories		lang
maintainers		mww@opendarwin.org
description		The GNU compiler collection
long_description	The GNU compiler collection, including front ends for C, \
				C++, Objective-C, Java and Fortran95.

homepage		http://gcc.gnu.org/
master_sites    ftp://gcc.gnu.org/pub/gcc/releases/gcc-${version}/ \
				gnu:/gcc/gcc-${version}
set dcore		gcc-core-${version}.tar.bz2
set dfort		gcc-fortran-${version}.tar.bz2
set dcxx		gcc-g++-${version}.tar.bz2
set djava		gcc-java-${version}.tar.bz2
set dobjc		gcc-objc-${version}.tar.bz2
distfiles		${dcore} ${dfort} ${dcxx} ${dcxx} ${djava} ${dobjc}

checksums		${dcore} md5 5db82dc4cf1af67272d1fbf2e8cad7e5 \
				${dfort} md5 b958e3cd394a45e7e284a41e97eb0509 \
				${dcxx} md5 98382ad233415056d899871d3d4c29ec \
				${djava} md5 827085836093bb67086f25613fb6901f \
				${dobjc} md5 3a1e014740d7b0eeb56d308a506c5a9a

use_bzip2		yes

depends_lib		port:gmp \
				port:mpfr

set major		4.0

worksrcdir		build

pre-configure {
	file mkdir ${worksrcpath}
}

configure.cmd	${workpath}/gcc-${version}/configure
configure.args	--enable-languages=c,c++,java,objc,f95 \
				--libdir=${prefix}/lib/gcc-${major} \
				--infodir=${prefix}/share/info \
				--mandir=${prefix}/share/man \
				--with-local-prefix=${prefix} \
				--with-system-zlib \
				--disable-nls \
				--program-suffix=-dp-${major} \
				--with-gxx-include-dir=${prefix}/include/gcc-${major}/c++/ \
				--with-gmp=${prefix} \
				--with-mpfr=${prefix}

build.target	bootstrap STAGE1_CFLAGS="-force_cpusubtype_ALL"
build.args		-j 2

platform darwin 7 {
	depends_build	port:odcctools
	patch {
		reinplace "s|/usr/bin/libtool|${prefix}/bin/odlibtool|g" \
			${workpath}/gcc-${version}/gcc/config/darwin.h
	}
	configure.args-append	--with-as=${prefix}/bin/odas \
					--with-ld=${prefix}/bin/odld \
					--with-ar=${prefix}/bin/odar
}

post-destroot {
	cd ${destroot}${prefix}
	file delete -force share/man/man7
	file delete -force share/info
	cd ${destroot}${prefix}/include
	system "cd ${destroot}${prefix}/include && \
		ln -s ../lib/gcc-${major}/gcc/*/${version}/include/libffi/ffitarget.h"
}
