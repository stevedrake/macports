                    rmd160  1467092c3ad8aa5701f4749bd6c3d7bccb9bbaa5 \
                    ${djava} \
                    md5     7e017d0acb70a2a6d38916018242f4e8 \
                    sha1    ea3999fd469a49d0ee6eeea521fe03c38e4c2f20 \
                    rmd160  cf5abe5d90f300676b9a1da23223d3e8506a6293 \
                    ${dobjc} \
                    md5     136471b713774945f6d516f7ffab50b9 \
