                    rmd160  b2b4281bd9672828a455f181a7a9f195427eba5a \
                    gcc-g++-4.5-20091022.tar.bz2 \
                    md5     57c12ef48c551f2cfc57bdc56b54b9b7 \
                    sha1    0e3de9e653a94038953c53449678356b0b1813c7 \
                    rmd160  44fa752ad6a96fdc211463522379f10145dc0486 \
                    gcc-java-4.5-20091022.tar.bz2 \
