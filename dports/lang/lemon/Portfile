# $Id: Portfile,v 1.1 2005/08/05 08:05:30 mww Exp $

PortSystem 1.0

name			lemon
version			1.33
categories		lang devel
platforms		darwin
maintainers		mww@opendarwin.org
description		An LALR(1) parser generator like yacc or bison.
long_description	${description}

homepage		http://www.hwaci.com/sw/lemon/
master_sites	freebsd
checksums		md5 8ce241f735ff0615e50756e94525d267
use_bzip2		yes

use_configure	no

build.cmd		gcc
build.target	lemon.c -o lemon
build.args		-DLEMPAR=\"${prefix}/share/lemon/lempar.c\"

destroot {
	xinstall -m 755 -d ${destroot}${prefix}/share/lemon
	xinstall -m 755 ${worksrcpath}/lemon ${destroot}${prefix}/bin
	xinstall -m 644 ${worksrcpath}/lempar.c ${destroot}${prefix}/share/lemon/
}
