# $Id: Portfile,v 1.1 2005/01/13 20:58:54 mww Exp $

PortSystem 1.0

name			python22
version			2.2.3
categories		lang
maintainers		pat@ekman.cx
description		An interpreted, object-oriented programming language
platforms		darwin
master_sites	ftp://ftp.python.org/pub/python/${version}/
distname		Python-${version}
extract.suffix	.tgz
checksums		md5 169f89f318e252dac0c54dd1b165d229
patchfiles		patch-unixccompiler.py patch-Makefile.pre.in

test.run		no
test.target		check

destroot.destdir	prefix=${destroot}${prefix}

variant nothreads {
	configure.args-append	--without-threads
}

variant puredarwin {
	configure.args-append  --disable-toolbox-glue
}

variant darwin x86 {
	configure.args-append  --disable-toolbox-glue
}
