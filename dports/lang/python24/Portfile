# $Id: Portfile,v 1.13 2005/04/08 16:41:23 mww Exp $

PortSystem 1.0

name			python24
version			2.4.1
categories		lang
platforms		darwin
maintainers		mww@opendarwin.org
description		An interpreted, object-oriented programming language
long_description	Python is an interpreted, interactive, object-oriented \
					programming language.

homepage		http://www.python.org/
master_sites	${homepage}/ftp/python/2.4.1/ \
				ftp://ftp.python.org/pub/python/2.4.1/
distname		Python-${version}
checksums		md5 de3e9a8836fab6df7c7ce545331afeb3
patchfiles		patch-Makefile.pre.in \
				patch-configure \
				patch-setup.py

use_bzip2		yes

depends_lib		lib:XXX:readline \
				lib:XXX:tk

configure.args	--enable-shared \
				--mandir=${prefix}/share/man \
				--bindir=${prefix}/bin \
				--with-readline \
				--enable-framework \
				--enable-ipv6 \
				--enable-tk

test.run		yes
test.target		test

destroot.target	frameworkinstall maninstall
destroot.args	bindir=${prefix}/bin

build.target-append		libpython.${version}.dylib

variant puredarwin {
	configure.args-append	--disable-toolbox-glue
}

variant no-tk {
	configure.args-delete	--enable-tk
	configure.args-append	--disable-tk
	depends_lib-delete		lib:libtk:tk
}
