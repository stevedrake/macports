	md5 6a5f1d82f7aeb67805c28ee762db896d \
	sha1 15b670ac10cda3f86e6742da4079ce0f8f7210a3 \
	rmd160 6ecd298f5a2a9b6cca60385b3652476b0b42f2c2
use_bzip2	yes

depends_lib	port:glib2 port:pkgconfig
