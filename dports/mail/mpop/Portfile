# $Id: Portfile,v 1.4 2006/03/19 15:01:58 mww Exp $

PortSystem 1.0

name			mpop
version			0.8.5
categories		mail
platforms		darwin
maintainers		mww@opendarwin.org
description		small and fast POP3 client
long_description	mpop is a small and fast POP3 client with header based \
				mail filtering capabilities.

homepage		http://mpop.sourceforge.net/
master_sites	sourceforge
checksums		sha1 bee321049a697e13bfd986467408b126de4f0bca
use_bzip2		yes

depends_lib		port:openssl port:libiconv port:zlib port:gettext port:libgsasl

configure.args	--with-libiconv-prefix=${prefix} \
				--with-ssl=openssl \
				--mandir=${prefix}/share/man \
				--infodir=${prefix}/share/info

post-destroot {
	file delete ${destroot}${prefix}/share/info/dir
}

platform darwin 8 {
	configure.env CC=/usr/bin/gcc-4.0 CPP=/usr/bin/cpp-4.0 CXX=/usr/bin/g++-4.0
}

