variant smtp {
# Include internal SMTP relay support
		configure.args-append --enable-smtp
		if {[variant_isset cvs]} {
				patchfiles-append	patch-cvs20050907.bc.smtp.9
		} else {
				patch_sites-append	http://mutt.kublai.com/patches/
				patchfiles-append	patch-1.5.11.bc.smtp.10
				checksums-append	patch-1.5.11.bc.smtp.10 md5 \
					ddce5e425fa08c2e0f5e411b49ebdd21
		}
}
