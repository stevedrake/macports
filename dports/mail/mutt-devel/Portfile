variant xlabel {
    patch_sites-append  http://home.uchicago.edu/~dgc/sw/mutt/
    patchfiles-append   patch-1.5.14.dgc.xlabel_ext.9 
    checksums-append    patch-1.5.14.dgc.xlabel_ext.9 md5 \
