# $Id: Portfile,v 1.11 2005/09/03 00:07:06 toby Exp $

PortSystem 1.0
name             R
version          2.1.1
revision         1
categories       math science
maintainers      konis@stats.ox.ac.uk
description      R is GNU S - an interpreted language for statistical computing
long_description \
    R is a language and environment for statistical computing and graphics. \
    R provides a wide variety of statistical (linear and nonlinear modelling, \
    classical statistical tests, time-series analysis, classification, \
    clustering, ...) and graphical techniques, and is highly extensible.
homepage         http://www.r-project.org/
master_sites     http://cran.r-project.org/src/base/R-2/ \
                 http://cran.us.r-project.org/src/base/R-2/ \
                 http://cran.au.r-project.org/src/base/R-2/ \
                 http://cran.at.r-project.org/src/base/R-2/ \
                 http://cran.hu.r-project.org/src/base/R-2/
checksums        md5 e755b0ba5851ec261000af6b5c510335
depends_lib      lib:libreadline.5:readline \
                 bin:DPtclsh:tcl \
                 bin:DPwish:tk \
                 bin:gettext:gettext \
                 lib:libgraph:graphviz \
                 lib:libjpeg:jpeg \
                 lib:libpng:libpng
depends_build    bin:g77-dp-3.4:gcc34 \
                 bin:latex:teTeX
configure.env    CPPFLAGS="-I${prefix}/include" \
                 LDFLAGS="-L${prefix}/lib" \
                 CC=gcc-dp-3.4 \
                 CXX=g++-dp-3.4 \
                 F77=g77-dp-3.4
configure.args   --with-tcl-config="${prefix}/lib/tclConfig.sh" \
                 --with-tk-config="${prefix}/lib/tkConfig.sh" \
                 --disable-R-framework --enable-R-shlib
destroot.destdir prefix=${destroot}${prefix}

platform darwin 6 {
    depends_lib-append lib:libdl:dlcompat
}

platform macosx {
    configure.env-append CC=gcc-3.3 CXX=g++-3.3
    configure.args-append --with-blas="-framework vecLib" --with-lapack
}

post-destroot {
    reinplace "s|R_HOME_DIR=${destroot}|R_HOME_DIR=|" \
        "${destroot}${prefix}/bin/R"
    reinplace "s|R_HOME_DIR=${destroot}|R_HOME_DIR=|" \
        "${destroot}${prefix}/lib/R/bin/R"
}
