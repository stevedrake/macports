# $Id: Portfile,v 1.3 2004/05/12 02:32:09 gwright Exp $

PortSystem 1.0
name		cln
version		1.1.7
revision	0
categories	math
platforms	darwin
maintainers	gwright@opendarwin.org
description	Class Library for Numbers
long_description	\
		CLN is a C++ library providing a rich library of 	\
		numeric functions.

use_bzip2	yes

homepage	http://www.ginac.de/CLN/
master_sites	ftp://ftpthep.physik.uni-mainz.de/pub/gnu/

checksums	md5 b4a0ab4415281d2143edd44f2c8de136

depends_lib	lib:libgmp:gmp

configure.args	--with-gmp --infodir=${prefix}/share/info

configure.env	CC="g++"				\
		CXX="g++"				\
		LDFLAGS="-lstdc++ -L${prefix}/lib"	\
		CPPFLAGS="-I${prefix}/include"		\
		CFLAGS="-I${prefix}/include"		\
		CXXFLAGS="-I${prefix}/include -L${prefix}/lib"

build		{ cd ${worksrcpath}
		  system "CC=\"g++\" CXX=\"g++\" LDFLAGS=\"-lstdc++ -Wl,-read_only_relocs,warning -L${prefix}/lib\" make all"
		  system "make check"
		}

