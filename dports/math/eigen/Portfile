# $Id$

PortSystem          1.0
PortGroup           cmake 1.0

name                eigen
version             2.0.15
revision            1
license             GPL-2+ LGPL-3+
categories          math science
maintainers         nomaintainer
description         A C++ template library for linear algebra: vectors, matrices, and related algorithms.
long_description    ${description}
homepage            http://eigen.tuxfamily.org/
platforms           darwin

master_sites        http://bitbucket.org/eigen/eigen/get/
distname            ${version}
# 2.0.15 was stealth updated; see #26347, #28857
dist_subdir         ${name}/${version}_2
use_bzip2           yes

checksums           sha1    834aabc3df9b4e67dc79f7f1926c3e0a2c77b5b1 \
                    rmd160  92b6d3bc4ed87c9965eddc1557feb67e454199cf

worksrcdir          ${name}-${name}-0938af7840b0

configure.args-append   -DEIGEN_BUILD_LIB=ON

post-destroot {
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 644 -W ${worksrcpath} COPYING COPYING.LESSER \
        ${destroot}${docdir}
}

livecheck.type      regex
livecheck.url       ${homepage}index.php?title=ChangeLog
livecheck.regex     {Eigen (\d+(?:\.\d+)*)}
