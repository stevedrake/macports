                 sha1 10990298477a30c7eb7f2430c93dd23ee428fbb7 \
                 rmd160 1090f085ef58da979db8cb97d4a40e496a1ee8c3
configure.env    CPPFLAGS="-I${prefix}/include" LDFLAGS="-L${prefix}/lib"
