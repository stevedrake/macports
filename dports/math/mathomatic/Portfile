# $Id: Portfile,v 1.40 2005/08/30 09:01:07 mww Exp $

PortSystem 1.0

name			mathomatic
version			12.4.10
categories		math
platforms		darwin
maintainers		mww@opendarwin.org
description		small, portable symbolic math program
long_description	Mathomatic is a small, portable symbolic math program \
				that can automatically solve, simplify, differentiate, \
				combine, and compare algebraic equations, perform \
				polynomial and complex arithmetic, etc.

homepage		http://www.mathomatic.com/
master_sites	http://www.panix.com/~gesslein/
extract.suffix	.tgz
checksums		md5 474b1d33bf5bcfcae6bc092ff5a5e59e

use_configure	no

test.run		yes

destroot {
	xinstall -m 755 -s ${worksrcpath}/mathomatic ${destroot}${prefix}/bin
	xinstall -m 644 ${worksrcpath}/doc/mathomatic.1 \
		${destroot}${prefix}/share/man/man1
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath}/doc am.htm notes.html manual.htm \
		../changes.txt ../README.txt ${destroot}${prefix}/share/doc/${name}
}
