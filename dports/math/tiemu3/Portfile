                    bin:grep:grep \
                    bin:groff:groff
depends_lib         port:libiconv \
					port:libticonv \
					port:libtifiles2 \
					port:libticables2 \
                    port:libticalcs2 \
                    port:gettext \
                    port:gtk2 \
                    port:libglade2

patchfiles			patch-keynames-c.diff \
                    patch-tiemu3.diff
