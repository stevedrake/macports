# $Id$

PortSystem          1.0

name                avidemux
version             2.4.1
categories          multimedia
platforms           darwin
maintainers         nomaintainer
homepage            http://avidemux.sourceforge.net/
description         Avidemux is an avi and mpeg editing program.

long_description    Avidemux is an avi and mpeg editing program capable of \
                    splicing movies together, and chopping movies apart.

master_sites        sourceforge
distname            ${name}_${version}
checksums           md5 2d972f6b8795c891dd6e0ebe5035852a \
                    sha1 6bbf542bab73d91cb73f198d2d8afe10d83b2821 \
                    rmd160 8149eb62cb4f3196d98b8c2707a4252f06e198cf

depends_lib         port:atk \
                    port:cairo \
                    port:expat \
                    port:fontconfig \
                    port:freetype \
                    port:gettext \
                    path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:gtk2 \
                    port:libiconv \
                    port:libmad \
                    port:libpng \
                    port:libvorbis \
                    port:libxml2 \
                    path:lib/pkgconfig/pango.pc:pango \
                    lib:libX11.6:XFree86 \
                    port:xrender \
                    port:zlib

depends_build       port:cmake

configure.cmd       cmake
configure.pre_args  -DCMAKE_INSTALL_PREFIX=${prefix} \
                    -DCMAKE_C_FLAGS=\"${configure.cflags}\" \
                    -DCMAKE_CXX_FLAGS=\"${configure.cxxflags}\" \
                    -DCMAKE_INCLUDE_PATH=${prefix}/include \
                    -DCMAKE_LIBRARY_PATH=${prefix}/lib
