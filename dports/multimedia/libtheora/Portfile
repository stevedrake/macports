# $Id: Portfile,v 1.1 2004/03/29 18:36:46 toby Exp $

PortSystem 1.0
name             libtheora
version          1.0alpha3
categories       multimedia
description      Video codec based on libogg and libvorbis 
long_description ${description}	
maintainers      toby@opendarwin.org
platforms        darwin
homepage         http://www.theora.org/

master_sites     ${homepage}files/
use_bzip2        yes
checksums        md5 96bd0ab761fffde527ac4febf168e9b7

depends_lib      lib:libvorbis.0:libvorbis lib:libSDL.1:libsdl

configure.env    CPPFLAGS=-I${prefix}/include LDFLAGS=-L${prefix}/lib
configure.args   --enable-shared
