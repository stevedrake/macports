# $Id: Portfile,v 1.1 2004/10/02 08:50:43 olegb Exp $
PortSystem 1.0

name	 	GTorrentViewer
version	   	0.1
platforms	darwin
categories	net x11
maintainers	jmpalacios@ml1.net

description	GTK2 based viewer for .torrent files.
long_description	GTorrentViewer is a GTK2-based viewer/editor for BitTorrent \
			meta files for UNIX like operating systems. It gathers information \
			from trackers, checks files, shows detailed information about \
			.torrents and modifies some of it.

homepage	http://gtorrentviewer.sourceforge.net/
master_sites	sourceforge:gtorrentviewer
checksums	md5 697c4f539a2b1c96567401c8c0693de9

depends_lib 	lib:libgtk.2:gtk2 \
		lib:libglade-2:libglade2 \
		lib:libcurl:curl \
		lib:libssl:openssl

post-configure 	{
			reinplace "s|-export-dynamic||g" ${worksrcpath}/Makefile
			reinplace "s|-export-dynamic||g" ${worksrcpath}/src/Makefile
}

configure.args	--mandir=${prefix}/share/man

build.type	gnu
