PortSystem 1.0
name		amsn
version		0.93
description	Alvaro's Messenger, or Another MSN messenger clone
long_description	${description}
maintainers	jmpalacios@ml1.net olegb@opendarwin.org
categories	net
platforms	darwin 
homepage	http://amsn.sf.net
master_sites	sourceforge
distname	${name}-0_93
checksums	md5 dffc4bbd38f4fa63df481b89f7c89e7d
depends_lib	bin:wish:tk
use_configure	no
build		{}
destroot {
	file copy ${worksrcpath}/../${distname} ${destroot}${prefix}/share
	file link -symbolic ${destroot}${prefix}/bin/amsn ${destroot}${prefix}/share/${distname}/amsn
}
