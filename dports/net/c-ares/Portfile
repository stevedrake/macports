# $Id$

PortSystem 1.0

name             c-ares
version          1.5.3
categories       net
maintainers      toby
description      asynchronous DNS library
long_description \
    c-ares is a C library that performs DNS requests and \
    name resolves asynchronously. c-ares is a fork of the \
    library named 'ares', written by Greg Hudson at MIT.
homepage         http://c-ares.haxx.se/
platforms        darwin
master_sites     ${homepage}
checksums        md5    ec202543a8cb86647f52e1ed4b5c0b37 \
                 sha1   885fa291d7ae7d825c732b38ae147d5f83cc1904 \
                 rmd160 8f886748783d8d4ef97b494544cebd924730b695
configure.args   --mandir=${prefix}/share/man \
                 --enable-shared

post-configure {
	system "ed - ${worksrcpath}/config.h < ${filespath}/config.h.ed"
}
