destroot {
    xinstall -m 0755 ${worksrcpath}/src/cclive ${destroot}${prefix}/bin
    xinstall -m 0444 ${worksrcpath}/cclive.1 ${destroot}${prefix}/share/man/man1
}

livecheck.regex     "${name}-(\\d+\\.\\d+(\\.\\d+)?)${extract.suffix}"
