# $Id: Portfile,v 1.1 2004/08/26 16:40:32 mww Exp $

PortSystem 1.0

name			cmdftp
version			0.7.3
categories		net
platforms		darwin
maintainers		mww@opendarwin.org
description		command line ftp client
long_description	${description}

homepage		http://cmdftp.sourceforge.net/
master_sites	sourceforge
checksums		md5 790b723b565783941acc942293714def

destroot.destdir	PREFIX=${destroot}${prefix}
post-destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath} CHANGELOG COPYING README \
		RELEASE ${destroot}${prefix}/share/doc/${name}
}
