# $Id: Portfile,v 1.2 2004/10/27 07:45:06 mww Exp $

PortSystem 1.0

name			cmdftp
version			0.7.4
categories		net
platforms		darwin
maintainers		mww@opendarwin.org
description		command line ftp client
long_description	${description}

homepage		http://cmdftp.sourceforge.net/
master_sites	sourceforge
checksums		md5 8628d53399504d776d79b6ce355652c3

configure.args	--mandir=${prefix}/share/man

post-destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath} AUTHORS COPYING ChangeLog INSTALL NEWS \
		README ${destroot}${prefix}/share/doc/${name}
}
