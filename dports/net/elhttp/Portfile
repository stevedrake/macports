# $Id: Portfile,v 1.1 2004/05/08 12:12:16 mww Exp $

PortSystem 1.0

name		elhttp
version		0.2
categories	net
platforms	darwin
maintainers	mww@opendarwin.org
description	the extra-light http proxy server
long_description	${description}

homepage	http://www.cr0.net:8040/code/network/
master_sites	${homepage}
extract.suffix	.tgz
checksums	md5 5b8a47d918f52646e6fd7199fd799bd4
patchfiles	patch-elhttp.d.diff

use_configure	no

build.target	linux

destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}/
	xinstall -m 755 -s ${worksrcpath}/elhttp ${destroot}${prefix}/sbin
	xinstall -m 644 ${worksrcpath}/readme.txt \
		${destroot}${prefix}/share/doc/${name}/
}
