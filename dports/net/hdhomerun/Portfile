# $Id$

PortSystem          1.0

name                hdhomerun
version             20070320
categories          net multimedia
platforms           darwin

maintainers         ecronin@gizmolabs.org
description         HDHomeRun Software and Firmware
long_description    ${description}
homepage            http://www.silicondust.com

master_sites        http://download.silicondust.com/hdhomerun
distname            lib${name}_${version}
extract.suffix      .tgz
distfiles-append    ${name}_firmware_20070320.bin
extract.only        ${distname}${extract.suffix}
worksrcdir          lib${name}
checksums           ${distname}${extract.suffix} \
                        md5 8251f3993aa2d8eda0411fa5b62e7525 \
                        sha1 788525062449a66af4e1859c9dc7ae37b8601c22 \
                        rmd160 7c165cc75617de79c666df004164ac30aa9ef5f2 \
                    ${name}_firmware_20070320.bin \
                        md5 aa7b7627d7f0ed23683ad606ecc48ea4 \
                        sha1 7cb34d501df1bdf72988a0675889920e36417780 \
                        rmd160 9830ced0352dfdad695549aa87f0d88f6f3851ac

livecheck.check     regex
livecheck.url       http://www.silicondust.com/wiki/downloads
livecheck.regex     libhdhomerun_(\[0-9\]+)\\.tgz
configure { }

build.target         hdhomerun_config

destroot {
    xinstall -m 0755 ${worksrcpath}/hdhomerun_config \
        ${destroot}${prefix}/bin/hdhomerun_config
    xinstall -d -m 0755 ${destroot}${prefix}/share/${name}/
    xinstall -m 0644 ${distpath}/${name}_firmware_20070320.bin \
        ${destroot}${prefix}/share/${name}/${name}_firmware_20070320.bin
}

post-activate {
    ui_msg "to upgrade device firmware run:\n    hdhomerun_config <id> upgrade ${prefix}/share/${name}/${name}_firmware_20070320.bin"
}

