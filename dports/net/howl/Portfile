# $Id: Portfile,v 1.4 2005/03/29 21:51:39 mww Exp $

PortSystem 1.0

name			howl
version			0.9.10
categories		net
platforms		darwin
maintainers		mww@opendarwin.org
description		Howl is a cross-platform implementation of Zeroconf networking.
long_description	${description}

homepage		http://www.porchdogsoft.com/products/howl/
master_sites	http://www.porchdogsoft.com/download/
checksums		md5 444f2c1fe8eaf16d6822c01bfafba99b

set pre /Library/OpenDarwin/Frameworks/${name}.framework/Versions/${version}

configure.args --includedir=${pre}/Headers --libdir=${pre}/Libraries

pre-destroot {
	xinstall -m 755 -d ${pre} ${pre}/Resources/
}

post-destroot {
	file rename ${destroot}${prefix}/share/howl/help \
		${pre}/Resources/Documentation
	xinstall -m 644 -W ${worksrcpath}/docs mDNSResponder.8 nifd.8 \
		${destroot}${prefix}/share/man/man8
	system "cd ${destroot}${pre}/.. && ln -s ${version} Current"
	system "cd ${destroot}${pre}/../.. && \
		ln -s Versions/Current/Headers && \
		ln -s Versions/Current/Libraries"
}
