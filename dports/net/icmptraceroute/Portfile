# $Id: Portfile,v 1.1 2005/04/25 18:16:12 cjr Exp $

PortSystem 1.0

name		traceroute
version		1.4a12
categories	net
platforms	darwin
maintainers	cjr@opendarwin.org
description	a traceroute implementation using ICMP packets
long_description	${description}

homepage	ftp://ftp.ee.lbl.gov/
master_sites	${homepage}
checksums	md5 964d599ef696efccdeebe7721cd4828d

depends_build	port:libtool

pre-configure	{
	foreach f {config.guess config.sub} {
		file copy -force ${prefix}/share/libtool/${f} \
			${worksrcpath}
	}
}

post-destroot {
	xinstall -m 444 ${worksrcpath}/traceroute.8 \
		${destroot}/${prefix}/share/man/man8/
}