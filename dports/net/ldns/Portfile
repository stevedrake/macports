# $Id$

PortSystem 1.0

name                ldns
version             1.6.3
categories          net devel
platforms           darwin
license             BSD
maintainers         durchmesser.ch:marius.rieder
description         DNS library in C
long_description    ldns is a library with the aim of simplifying DNS \
                    programming in C. It is heavily based upon the Net::DNS module from \
                    Perl.

homepage            http://www.nlnetlabs.nl/projects/ldns/
master_sites        http://www.nlnetlabs.nl/downloads/ldns/
checksums           sha1 87ce9cc8e4bf82f6d8668c915a08dfba20dd1b7c \
                    rmd160 83c314455f286d698d2d8017dc9b1c841fad0823

depends_build       bin:glibtool:libtool

configure.args      --mandir=${prefix}/share/man --without-ssl
configure.cppflags  -I${worksrcpath}/include
build.type          gnu

variant ssl description {Use ssl to enable all crypt functions} {
    configure.args-delete --without-ssl
    configure.args-append --with-ssl=${prefix}
    depends_lib-append	port:openssl
}

platform darwin 9 {
    macosx_deployment_target 10.4
}
