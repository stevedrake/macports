                ftp://sunsite.cnlab-switch.ch/mirror/nessus/nessus-${version}/src/ \
                ftp://ftp.chg.ru/pub/security/nessus/nessus-${version}/src/ \
                ftp://ftp.sekure.net/pub/nessus/nessus-${version}/src/
