#!/bin/sh
#
# MacPorts generated daemondo support script
#

#
# Init
#
prefix=/opt/local

#
# Start
#
Start()
{
        __PREFIX__/share/nedi/syslog.pl
}

#
# Stop
#
Stop()
{
        sh /opt/local/etc/startup/nedi.sh stop
}

#
# Restart
#
Restart()
{
        Stop
        Start
}

#
# Run
#
Run()
{
case $1 in
  start  ) Start   ;;
  stop   ) Stop    ;;
  restart) Restart ;;
  *      ) echo "$0: unknown argument: $1";;
esac
}

#
# Run a phase based on the selector
#
Run $1
