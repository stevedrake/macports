# $Id: Portfile,v 1.1 2004/10/01 00:34:22 toby Exp $

PortSystem 1.0
name             nzbget
version          0.1.2
categories       net
maintainers      toby@opendarwin.org
description      binary newsgrabber
long_description \
	A command-line based binary newsgrabber for Linux, Unix \
	and Mac OS X supporting nzb-files.
homepage         http://sourceforge.net/projects/nzbget/
platforms        darwin
master_sites     sourceforge
checksums        md5 7b3cfdac41ddea2eeab50ac22346c0ee

depends_lib      lib:XXX:libxml2

configure.args   --with-libxml2-includes=${prefix}/include/libxml2

destroot {
	xinstall ${worksrcpath}/nzbget ${destroot}${prefix}/bin/nzbget

	file mkdir ${destroot}${prefix}/share/doc/nzbget
	foreach file {CHANGELOG COPYING README TODO nzbget.cfg.example} {
		xinstall ${worksrcpath}/${file} ${destroot}${prefix}/share/doc/nzbget
	}
}
