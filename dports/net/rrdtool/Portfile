# $Id: Portfile,v 1.9 2005/03/15 01:29:33 rshaw Exp $
PortSystem	1.0

name			rrdtool
version			1.0.49
revision		2
categories		net
maintainers		rshaw@opendarwin.org
description		Round Robin Database
long_description	RRDtool is a system to store and display time-series data
homepage		http://people.ee.ethz.ch/~oetiker/webtools/rrdtool/
platforms		darwin openbsd
master_sites	${homepage}pub/ \
				http://www.fastmirrors.org/rrdtool/
checksums		md5 fbe492dbf3d68abb1d86c2322e7ed44a

depends_lib		path:${prefix}/bin/perl:perl5.8 \
				lib:libz.1:zlib \
				lib:libpng.3:libpng \
				path:${prefix}/lib/libtcl.dylib:tcl

patchfiles		patch-configure \
				patch-Makefile.in \
				patch-contrib-Makefile.in \
				patch-contrib-trytime-Makefile.in \
				patch-doc-Makefile.in \
				patch-examples-Makefile.in \
				patch-src-Makefile.in \
				patch-tcl-Makefile.in

configure.args	--prefix=${prefix} \
				--mandir=${prefix}/share/man \
				--with-tcllib=${prefix}/lib \
	    		--enable-shared=yes \
				--enable-local-zlib \
				--enable-local-libpng

build.type		gnu

destroot.target	install site-tcl-install

