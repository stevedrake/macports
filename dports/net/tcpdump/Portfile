# $Id: Portfile,v 1.4 2005/10/19 23:48:28 ricci Exp $

PortSystem 1.0
name             tcpdump
version          3.9.4
revision	0
categories       net
maintainers      toby@opendarwin.org
description      dump traffic on a network
long_description \
	tcpdump is a tool for network monitoring, protocol debugging \
	and data acquisition.
homepage         http://www.tcpdump.org/
platforms        darwin
master_sites     ${homepage}release/
checksums        md5 4b64755bbc8ba1af49c747271a6df5b8 \
		sha1 fbfdb0e08713c6bf95d2658e294ac3f8bf2c7a16
patchfiles       patch-Makefile.in
configure.args   --mandir=${prefix}/share/man \
                 --disable-ipv6 --disable-smb
depends_lib	port:libpcap

variant ipv6 {
	configure.args-delete --disable-ipv6
}

variant smb {
	configure.args-delete --disable-smb
}
