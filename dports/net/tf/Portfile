# $Id: Portfile,v 1.8 2004/07/27 22:23:45 toby Exp $

PortSystem 1.0
name             tf
version          5.0b5
revision         1
categories       net games
maintainers      toby@opendarwin.org
description      popular and powerful MUD client
long_description TinyFugue is a powerful, programmable MUD \
    client with macro support and multi-worlding support.
homepage         http://tf.tcp.com/
platforms        darwin linux

master_sites     http://ftp.tcp.com/pub/mud/Clients/tinyfugue/ \
                 ftp://tf.tcp.com/pub/tinyfugue/
regsub -all      "\\." $version "" distVersion
distname         ${name}-${distVersion}
checksums        md5 6e6602f1618d31e40de24e46640f1ff8

patchfiles       patch-unix-unix.mak

configure.args   --mandir=\\\${prefix}/share/man \
                 --enable-manpage \
                 --enable-version \
                 --enable-getaddrinfo \
                 --disable-ssl

destroot.destdir prefix=${destroot}${prefix}

variant ssl {
	configure.args-delete --disable-ssl
	depends_lib           lib:libssl.0.9:openssl
}
