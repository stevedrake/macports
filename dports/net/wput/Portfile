# $Id: Portfile,v 1.4 2006/07/11 17:29:53 mww Exp $

PortSystem 1.0

name			wput
version			0.6
categories		net
platforms		darwin
maintainers		mww@opendarwin.org
description		wput is like wget but is for uploading files to ftp-servers
long_description	wput is a tiny program that looks like wget and is \
				designed to upload files or whole directories to \
				remote ftp-servers

homepage		http://wput.sourceforge.net/
master_sites	sourceforge
extract.suffix	.tgz
checksums		sha1 83c2a538041f667398b23611a993eafa738ab01d
patchfiles		patch-src-ftplib.h patch-src-socketlib.c

depends_lib		port:gettext port:libiconv

worksrcdir		wput

configure.args	--with-libintl-prefix=${prefix} \
				--with-libiconv-prefix=${prefix}

destroot.destdir	prefix=${destroot}${prefix}

platform darwin 8 {
	configure.env CC=/usr/bin/gcc-4.0 CXX=/usr/bin/g++-4.0
}
