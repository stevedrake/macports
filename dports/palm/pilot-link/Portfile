# $Id$

PortSystem 1.0
name		pilot-link
version		0.12.2
categories	palm sysutils
maintainers	css@macports.org
description	palm-pilot libraries and tools

platforms	darwin
homepage	http://www.pilot-link.org/
master_sites	http://downloads.pilot-link.org/
depends_lib	port:libiconv \
		port:readline \
		port:popt \
		port:libpng

use_bzip2	yes
checksums	md5 c1f4db8f32a2ee916fedb9a2dac8aa26 \
		sha1 29a2b355ad8b0680e655c7e1ffa1ebef1b2ad5d9

configure.args	--prefix='${prefix}' \
		--libexecdir='${prefix}/lib' --mandir='${prefix}/share/man' \
		--enable-conduits \
		--with-libpng='${prefix}' --with-libiconv='${prefix}' \
		--with-pic --enable-shared --enable-static

post-destroot {
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath} AUTHORS COPYING NEWS README \
		${destroot}${prefix}/share/doc/${name}
}

platform darwin 8 {
	configure.compiler	gcc-4.0
}

