                    sha1    d0ecb93f0c67d4986a5e06d4bb891c358a25ab8f \
                    rmd160  8ec766c8ca3561b64573ddf228bdafdc3b0546ca

depends_lib-append              port:p5-crypt-rc4 \
                                port:p5-text-pdf

