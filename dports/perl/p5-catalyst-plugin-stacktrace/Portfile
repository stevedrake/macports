                      sha1 77e687a934b7103c0d57980ccf56675231b3314b \
                      rmd160 bb1cb175eb6d2a8a127ff95ab6abf51b8355ea40

depends_lib-append    port:p5-catalyst-runtime \
                      port:p5-devel-stacktrace
