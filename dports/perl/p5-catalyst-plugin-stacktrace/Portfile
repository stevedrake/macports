                      sha1 4f3a22df1c1535838ad3cc78b3c92e9ff01361b4 \
                      rmd160 e118a2dd08254d87f71d8e7f41c9c48e7f64b044

depends_lib-append    port:p5-catalyst-runtime \
                      port:p5-devel-stacktrace
