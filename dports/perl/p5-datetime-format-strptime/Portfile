                      sha1 cc104e9c124712aefed3e7349823b0b373c3a709 \
                      rmd160 5d4bc9d3e3cf0aace81598e87af0620b40237613

depends_lib-append    port:p5-params-validate \
                      port:p5-datetime \
                      port:p5-datetime-locale \
                      port:p5-datetime-timezone
