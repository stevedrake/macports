# $Id: Portfile,v 1.9 2006/04/13 08:33:03 blb Exp $

PortSystem		1.0
PortGroup		perl5 1.0
perl5.setup		DBD-mysql 3.0002
revision       		1 
maintainers		narf_tm@trulycertifiable.com
description		Perl5 Database Interface to the MySQL database
long_description	${description}

platforms		darwin

checksums		md5 df70ba084c97f5f7c2a997c3de2f0ad0

depends_lib-append	port:p5-dbi port:mysql5 port:zlib

variant mysql3 conflicts mysql4 {
	depends_lib-delete port:mysql5
	depends_lib-append port:mysql3
}

variant mysql4 conflicts mysql3 {
	depends_lib-delete port:mysql5
	depends_lib-append port:mysql4
}

