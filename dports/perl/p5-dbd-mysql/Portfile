# $Id: Portfile,v 1.7 2006/02/02 22:21:41 markd Exp $

PortSystem			1.0
PortGroup			perl5 1.0
perl5.setup			DBD-mysql 2.9008
maintainers			darwinports@opendarwin.org
description			Perl5 Database Interface to the MySQL database
long_description	${description}

platforms			darwin

checksums			md5 8779f4eb6b56024ddcbdffeb674ad683 \
					sha1 8f6d837dafc98a05fbde937917a0d62268ca0ac5

depends_lib-append	port:p5-dbi bin:mysql:mysql4 lib:libz:zlib

# A little kludge to work with Mac OS X Server's MySQL
post-configure {
	reinplace "s|-arch i386||g" ${worksrcpath}/Makefile
	reinplace "s|-arch ppc||g" ${worksrcpath}/Makefile
}

