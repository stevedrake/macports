# $Id: Portfile,v 1.3 2005/10/02 13:16:10 mww Exp $

PortSystem 1.0
PortGroup perl5 1.0

perl5.setup	DBD-Pg 1.43
categories	perl databases
maintainers	mww@opendarwin.org
description	Perl DBI module to provide access to PostgreSQL databases
long_description	DBD::Pg is a Perl module which works with the DBI \
			module to provide access to PostgreSQL databases
platforms	darwin
checksums	md5 1ddefc3cb5f8c0d20eaf6ba7aa11049d
patchfiles	patch-dbdimp.c

depends_lib-append	port:postgresql8 \
		port:p5-dbi

configure.env	POSTGRES_INCLUDE=${prefix}/include/pgsql8 \
			POSTGRES_LIB=${prefix}/lib/pgsql8
