PortSystem		1.0
PortGroup		perl5 1.0
perl5.setup		GD 2.32
maintainers		andre@splunk.com
description		Module interface to libgd
long_description	${description}

platforms			darwin

checksums			md5 84a79a60966b2de61dbf622342e3ee3d

depends_lib-append		port:gd2

configure.post_args	-options "JPEG,FT,PNG" -lib_gd_path ${prefix}/lib \
			LIBS="-lXpm -lX11 -ljpeg -lfreetype -lpng12 -lz -liconv -lgd"
