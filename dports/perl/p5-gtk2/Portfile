                        sha1    16e6d48762b9aa8e311206fd21d0cee3f2649e29 \
                        rmd160  86dbfe93d531608d180141332b9397984808ac6b

depends_lib		port:gtk2 \
				port:p5-extutils-depends \
				port:p5-extutils-pkgconfig \
				port:p5-glib \
				port:p5-cairo
