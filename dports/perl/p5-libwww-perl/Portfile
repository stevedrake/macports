                             rmd160 8ee3ecf1c97776ada1c29abd464521c892064316

platforms                    darwin

depends_lib-append           port:p5-compress-zlib \
                             port:p5-html-parser \
                             port:p5-html-tagset \
                             port:p5-uri
configure.pre_args-append    -n
