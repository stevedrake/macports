                             rmd160 07cfbbeb8f83dee98ced1c5e27562b2bcbd7288c

platforms                    darwin

depends_lib-append           port:p5-compress-zlib \
                             port:p5-html-parser \
                             port:p5-html-tagset \
                             port:p5-uri \
                             port:p5-crypt-ssleay
configure.pre_args-append    -n

use_parallel_build           yes

universal_variant            no
