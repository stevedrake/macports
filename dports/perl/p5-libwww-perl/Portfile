                             rmd160 59fc3f389ecce9808ca217c790e9dbe708240413

platforms                    darwin

depends_lib-append           port:p5-compress-zlib \
                             port:p5-html-parser \
                             port:p5-html-tagset \
                             port:p5-uri

configure.pre_args-append    -n
