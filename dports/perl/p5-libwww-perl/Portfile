                             rmd160 2c258452bf9f3ca62091f01746e0fc7f94cef20f

platforms                    darwin

depends_lib-append           port:p5-compress-zlib \
                             port:p5-html-parser \
                             port:p5-html-tagset \
                             port:p5-uri
configure.pre_args-append    -n
