                             rmd160 5098db0c49e64943f126a12eea9efa0b253eca88

platforms                    darwin

depends_lib-append           port:p5-compress-zlib \
                             port:p5-html-parser \
                             port:p5-html-tagset \
                             port:p5-uri

configure.pre_args-append    -n
