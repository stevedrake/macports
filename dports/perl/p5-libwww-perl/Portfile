                             rmd160 5eab3941f64324579279b775f57a7a90bb3b1e30

platforms                    darwin

depends_lib-append           port:p5-compress-zlib \
                             port:p5-html-parser \
                             port:p5-html-tagset \
                             port:p5-uri

configure.pre_args-append    -n
