description     a Perl module for MeCab
long_description ${description}

homepage        http://mecab.sourceforge.net/
master_sites    sourceforge:mecab
distname        mecab-perl-${version}
checksums       md5    095997b938b028087950835ce882693f \
                sha1   b6de0bed0e528a23d130ec443a9b28ec880fd39b \
                rmd160 1975e25d3816983d8d89b9ec5bfb6abf7cf0c77a

categories-append   textproc japanese
