# $Id: Portfile,v 1.3 2006/05/20 00:27:35 takanori Exp $

PortSystem      1.0
PortGroup       perl5 1.0
perl5.setup     MeCab 0.91

platforms       darwin
maintainers     rsky0711@gmail.com
description     a Perl module for MeCab
long_description ${description}

homepage        http://mecab.sourceforge.jp/
set sfj         20029
master_sites    http://osdn.dl.sourceforge.jp/mecab/${sfj}/ \
                http://keihanna.dl.sourceforge.jp/mecab/${sfj}/ \
                http://qgpop.dl.sourceforge.jp/mecab/${sfj}/
distname        mecab-perl-${version}
checksums       md5 b12f57c99790360263c7c80e34013890 \
                sha1 1eca4f815cadecc53015045da07349b08d71b691 \
                rmd160 7051e58c799707b822d9117968ae6b2cced28f14

categories-append   textproc japanese
depends_lib-append  port:mecab

platform darwin 7 {
    build.env       MACOSX_DEPLOYMENT_TARGET=10.3
}

platform darwin 8 {
    build.env       MACOSX_DEPLOYMENT_TARGET=10.4
}

post-extract {
    reinplace s|\#!/usr/bin/perl|\#!${perl5.bin}|g \
        ${worksrcpath}/test.pl
}

post-destroot {
    xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}/examples
    xinstall -m 644 ${worksrcpath}/test.pl \
        ${destroot}${prefix}/share/doc/${name}/examples
}
