# $Id: Portfile,v 1.1 2004/03/12 05:44:33 rshaw Exp $
PortSystem 1.0

name			p5-net-dns
version			0.46
categories		perl
maintainers		rshaw@opendarwin.org
description		Perl interface to the DNS resolver
long_description	Net::DNS is a DNS resolver implemented in Perl.  It \
					allows the programmer to perform nearly any type of \
					DNS query from a Perl script.
set perl_module	Net-DNS
homepage		http://search.cpan.org/dist/${perl_module}/
master_sites	perl_cpan:Net
distname		${perl_module}-${version}
dist_subdir		perl5
checksums		md5 67bf0842afe5a5e313e5d45d8d2735fb
platforms		darwin

# Use Perl from DarwinPorts explicitly 
set perl		${prefix}/bin/perl
set perllib		[lindex [glob -nocomplain ${prefix}/lib/perl5/5.8*] end]
if {[catch {set perlarch [lindex [split [exec ${perl} -V:archname] {'}] 1]}]} {
	set perlarch	${os.platform}
}
set perlarchlib	${perllib}/${perlarch}

depends_build	path:${perl}:perl5.8

# Depends on these Perl modules
depends_lib		path:${perllib}/Test/More.pm:perl5.8 \
				path:${perllib}/Digest/HMAC_MD5.pm:p5-digest-hmac \
				path:${perlarchlib}/MIME/Base64.pm:perl5.8 \
				path:${perlarchlib}/IO/Socket.pm:perl5.8 \
				path:${perlarchlib}/Digest/MD5.pm:perl5.8

configure.cmd		${perl}
configure.pre_args	Makefile.PL
configure.args		INSTALLDIRS=perl

test.run			yes

destroot.target		pure_install
post-destroot {
	foreach packlist [exec find ${destroot}${perllib} -name .packlist] {
		ui_info "Fixing packlist ${packlist}"
		reinplace "s|${destroot}||" ${packlist}
	}
}

