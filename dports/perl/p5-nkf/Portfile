master_sites    http://keihanna.dl.sourceforge.jp/nkf/${sfjpid}/ \
                http://osdn.dl.sourceforge.jp/nkf/${sfjpid}/ \
                http://qgpop.dl.sourceforge.jp/nkf/${sfjpid}/
