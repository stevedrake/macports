# $Id: Portfile,v 1.1 2006/08/06 04:25:28 takanori Exp $

PortSystem		1.0
PortGroup		perl5 1.0

perl5.setup		Text-ChaSen 1.03
maintainers		takanori@opendarwin.org
description		ChaSen library module for Perl5.
long_description	${description}

platforms		darwin
homepage		http://chasen.naist.jp/hiki/ChaSen/
master_sites		http://chasen.naist.jp/stable/chasen/
set chasen		chasen-2.3.3
distfiles		${chasen}.tar.gz
checksums		md5 629e90d9490bac95606c38c2d344cc5f \
			sha1 711f5717ee284d26aa5616292f7aaffaef11d03a \
			rmd160 2f2416f82fb0341023314a4672e442fed86207a9
categories-append	textproc japanese
depends_lib-append	port:chasen

worksrcdir		${chasen}/perl

post-destroot	{
		xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}/doc
		xinstall -m 644 -W ${worksrcpath} ChangeLog README ${destroot}${prefix}/share/doc/${name}

		file delete -force ${destroot}${prefix}/share/man

		system "pod2text ${worksrcpath}/ChaSen.pm ${destroot}${prefix}/share/doc/${name}/usage.jp"
}
