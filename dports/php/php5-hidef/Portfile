# $Id$

PortSystem      1.0
PortGroup       php5extension 1.0

php5extension.setup hidef 0.1.6 pecl
license         PHP
categories      php devel
platforms       darwin
maintainers     nomaintainer
description     Constants for real

long_description \
    Allow definition of user defined constants in simple ini files, which are \
    then processed like internal constants, without any of the usual \
    performance penalties.

checksums       sha1    c04b529d0c986dbd7a2e30a1f676c577e9ca9349 \
                rmd160  6bfe02f1d5b342e8e7b106883140e7d6b8461a60

use_parallel_build yes

test.run yes

post-destroot {
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 644 -W ${worksrcpath} CREDITS ${destroot}${docdir}
}

livecheck.regex {(\d+(?:\.\d+)*)</a></th>}
