# $Id$

PortSystem              1.0
PortGroup               php5extension 1.0

php5extension.setup     imap 5.3.6 bundled
categories-append       mail
platforms               darwin
maintainers             ryandesign

description             a PHP interface to the IMAP protocol

long_description        ${description}

checksums               sha1    0e0b9b4d9117f22080e2204afa9383469eb0dbbd \
                        rmd160  619bf96cf24bf6aa0988494186f8914fde94d44d

depends_build-append    port:cclient

configure.args-append   --with-imap=${prefix} \
                        --with-imap-ssl=${prefix}

platform macosx {
    configure.args-append --with-kerberos=/usr
}

use_parallel_build      yes
