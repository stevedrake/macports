PortSystem              1.0
PortGroup               php5extension 1.0

php5extension.setup     mcrypt 5.3.4 bundled
categories-append       security
platforms               darwin
maintainers             ryandesign

description             a PHP interface to the mcrypt library, which offers \
                        a wide variety of algorithms

long_description        ${description}

checksums               sha1    0b33926e78e1683e3383b3b5c840ee60ba669b0b \
                        rmd160  dffbeced87117fd34c948de3ebdde01a25c24dae

depends_lib-append      port:libmcrypt \
                        port:libtool

configure.args-append   --with-mcrypt=${prefix}

use_parallel_build      yes
