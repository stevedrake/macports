# $Id$

PortSystem              1.0
PortGroup               php5extension 1.0

php5extension.setup     svn 1.0.0 pecl
categories-append       devel
platforms               darwin
maintainers             ryandesign

description             PHP bindings for Subversion

long_description        ${description}

checksums               md5     f89e87ff86978a121b9e3ddf69d523c1 \
                        sha1    d80a0e5fecc3e639820e507ad270915eecaf7723 \
                        rmd160  95bcf9b8369340b9bd45bc829e4f76d5f5e42326

depends_lib-append      port:subversion

patchfiles              patch-hook_emailcommit.php

post-patch {
    reinplace "s|@PREFIX@|${prefix}|g" ${worksrcpath}/examples/hook_emailcommit.php
}

configure.args-append   --with-svn=${prefix} \
                        --with-svn-apr=${prefix}/bin/apr-1-config

post-destroot {
    xinstall -d ${destroot}${prefix}/share/examples
    copy ${worksrcpath}/examples ${destroot}${prefix}/share/examples/${name}
}
