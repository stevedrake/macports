# $Id: Portfile,v 1.2 2005/10/19 08:10:14 blb Exp $

PortSystem			1.0
name				mpage
version				2.5.3
categories			print
maintainers			blb@opendarwin.org
description			Print several pages on a single sheet of paper
long_description	${description}

platforms			darwin sunos

homepage			http://www.mesa.nl/pub/mpage/
master_sites		${homepage}
extract.suffix		.tgz

checksums			md5 4724dcba203100384b4611be8adc900c

patchfiles			patch-Makefile

use_configure		no

build.target
build.args			PAGESIZE=Letter PREFIX=${prefix}

destroot.args		PREFIX=${prefix} MANDIR=${prefix}/share/man/man1

variant mediaA4 {
	build.args-delete	PAGESIZE=Letter
	build.args-append	PAGESIZE=A4
}

