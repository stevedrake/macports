# $Id: Portfile,v 1.2 2004/04/21 16:58:24 mww Exp $

PortSystem 1.0
PortGroup python 1.0

name		py-bsddb
version		2.3.3
categories	python databases
platforms	darwin
maintainers	mww@opendarwin.org
description	Python bindings to the db4 and db3 library
long_description	${description}

homepage	http://www.python.org/doc/current/lib/module-gdbm.html
distfiles
patchfiles	patch-_bsddb.c.diff

set DBVERSION	4
depends_lib-append	lib:libdb-4:db4

variant db3	{
	set DBVERSION	3
	depends_lib-delete	lib:libdb-4:db4
	depends_lib-append	lib:libdb-3:db3
}

extract {
	portexec python23 patch
	file mkdir ${worksrcpath}
	file copy ${workpath}/Python-${version}/Modules/bsddbmodule.c \
		${workpath}/Python-${version}/Modules/_bsddb.c \
		${filespath}/setup.py ${worksrcpath}
}

post-patch	{
	reinplace "s|__VERSION__|${version}|g" ${worksrcpath}/setup.py
	reinplace "s|__DBVERSION__|${DBVERSION}|g" ${worksrcpath}/_bsddb.c
}
