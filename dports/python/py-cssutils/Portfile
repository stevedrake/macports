# $Id: Portfile,v 1.2 2004/04/19 03:01:17 blb Exp $

PortSystem			1.0
name				py-cssutils
version				0.53
categories			python
maintainers			blb@pobox.com
description			Parse and build CSS Cascading Style Sheets
long_description	${description}

platforms			darwin

homepage			http://cthedot.de/cssutils/
master_sites		${homepage}
distname			cssutils-${version}
dist_subdir			python
use_zip				yes

checksums			md5 cb91bcdce7846a910f5fca92707e4fa1

depends_lib			path:${prefix}/bin/python:python23

use_configure		no

build.cmd			${prefix}/bin/python setup.py
build.target		build

destroot.cmd		${build.cmd}
destroot.destdir	--prefix=${destroot}/${prefix}

post-destroot {
	xinstall -m 755 -d ${destroot}/${prefix}/share/doc/${name}
	file rename ${destroot}/${prefix}/LICENSE.txt \
		${destroot}/${prefix}/share/doc/${name}/LICENSE.txt
	xinstall -m 644 -W ${worksrcpath} README.txt \
		${destroot}/${prefix}/share/doc/${name}
}

