# $Id: Portfile,v 1.7 2005/06/13 15:23:42 mww Exp $

PortSystem 1.0
PortGroup python24 1.0

name			py-ctypes
version			0.9.6-20050611
categories		python
platforms		darwin
maintainers		mww@opendarwin.org
description		create and manipulate C data types in Python
long_description	ctypes is a Python package to create and manipulate C \
				data types in Python, and to call functions in dynamic \
				link libraries/shared dlls. It allows wrapping these \
				libraries in pure Python.

homepage		http://starship.python.net/crew/theller/ctypes/
#master_sites	sourceforge:ctypes
#distname		ctypes-${version}
#checksums		md5 9f6bfdb21f7016da2518020beb326da0
fetch.type		cvs
cvs.root		:pserver:anonymous@cvs.sourceforge.net:/cvsroot/ctypes
cvs.module		ctypes
cvs.args		-D20050611

depends_lib-append	lib:libffi:libffi

worksrcdir		ctypes

build.env		CFLAGS=-I${prefix}/include \
				LDFLAGS=-L${prefix}/lib

test.run		yes
test.cmd		${build.cmd}
test.target		test

post-destroot	{
	xinstall -m 644 -W ${worksrcpath} LICENSE.txt NEWS.txt README.CVS \
		README.txt ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath}/docs changes.stx com.stx default.css \
		faq.stx index.stx internals.stx reference.stx sum_sample.stx \
		tutorial.stx ${destroot}${prefix}/share/doc/${name}
}
