# $Id: Portfile,v 1.1 2004/04/19 20:38:19 mww Exp $

PortSystem 1.0

name		py-eyed3
version		0.5.1
categories	python audio
platforms	darwin
maintainers	mww@opendarwin.org
description	python module and program for processing ID3 tags
long_description	eyeD3 is a Python program/module for processing \
			(reading and writing) ID3 tags. Information about mp3 \
			files (i.e bit rate, sample frequency, play time, \
			etc.) is also available. The formats supported are ID3 \
			v1.0/v1.1 and v2.3/v2.4.

homepage	http://www.travisshirk.net/eyeD3
master_sites	${homepage}/releases/
distname	eyeD3-${version}
checksums	md5 794ea47947df324f3b7dd7faadb68260

depends_lib	path:${prefix}/bin/python2.3:python23
depends_run	lib:XXX:py-optik

post-configure	{
	reinplace "s|/usr/bin/env python|${prefix}/bin/python|g" \
		${worksrcpath}/bin/eyeD3
}

destroot.destdir	RPM_BUILD_ROOT=${destroot} \
		SETUP_ARGS=--prefix=${destroot}${prefix} \
		DIST_NAME=${name}
