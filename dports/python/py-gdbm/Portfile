# $Id: Portfile,v 1.2 2004/04/21 22:39:42 mww Exp $

PortSystem 1.0
PortGroup python 1.0

name		py-gdbm
version		2.3.3
categories	python databases
platforms	darwin
maintainers	mww@opendarwin.org
description	Python bindings to the GNU dbm library
long_description	${description}

homepage	http://www.python.org/doc/current/lib/module-gdbm.html
distfiles

depends_lib-append	lib:libgdbm:gdbm

extract	{
	portexec python23 extract
	file mkdir ${worksrcpath}
	file copy ${workpath}/Python-${version}/Modules/gdbmmodule.c \
		${filespath}/setup.py ${worksrcpath}
}
patch	{
	reinplace "s|VERSION|${version}|g" ${worksrcpath}/setup.py
}
