# $Id: Portfile,v 1.6 2004/05/24 20:46:55 blb Exp $

PortSystem			1.0
name				py-gtk2
version				2.3.92
categories			python x11
maintainers			blb@pobox.com
description			PyGTK2 is the Python binding to GTK+ 2.x
long_description	\
	PyGTK contains modules that allow you to use gtk in Python programs. \
	At present, it is a fairly complete set of bindings.

homepage			http://www.daa.com.au/~james/software/pygtk/
master_sites		gnome:sources/pygtk/2.3
distname			pygtk-${version}
use_bzip2			yes
checksums			md5 e11335eac41e20a1383f51995cd0d964

depends_lib			path:${prefix}/bin/python:python23 lib:libgtk.2:gtk2

post-destroot {
	file mkdir ${destroot}/${prefix}/share/doc/${name}
	file copy ${worksrcpath}/MAPPING ${worksrcpath}/PKG-INFO \
		${worksrcpath}/NEWS ${worksrcpath}/README \
		${destroot}/${prefix}/share/doc/${name}
}

variant glade {
	depends_lib-append	lib:libglade-2:libglade2
}

