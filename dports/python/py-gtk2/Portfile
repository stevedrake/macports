# $Id: Portfile,v 1.9 2004/10/17 18:46:20 blb Exp $

PortSystem			1.0
name				py-gtk2
version				2.4.0
categories			python x11
maintainers			blb@pobox.com
description			PyGTK2 is the Python binding to GTK+ 2.x
long_description	\
	PyGTK contains modules that allow you to use gtk in Python programs. \
	At present, it is a fairly complete set of bindings.

homepage			http://www.daa.com.au/~james/software/pygtk/
master_sites		gnome:sources/pygtk/2.4
distname			pygtk-${version}
use_bzip2			yes
checksums			md5 d3ae939f0d484cde22169e3e63021049

depends_lib			path:${prefix}/bin/python:python23 lib:libgtk.2:gtk2

post-destroot {
	xinstall -m 755 -d ${destroot}/${prefix}/share/doc/${name} \
		${destroot}/${prefix}/share/${name}
	xinstall -m 644 -W ${worksrcpath} AUTHORS COPYING ChangeLog INSTALL \
		MAPPING NEWS PKG-INFO README THREADS TODO \
			${destroot}/${prefix}/share/doc/${name}
	file copy ${worksrcpath}/examples ${destroot}/${prefix}/share/${name}
}

variant glade {
	depends_lib-append	lib:libglade-2:libglade2
}

