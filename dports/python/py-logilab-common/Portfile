distname			common-${version}

checksums			md5 db6cbc67fe7b3d149513e0814322578c

post-destroot {
	xinstall -m 755 -d ${destroot}/${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath} README \
		${destroot}/${prefix}/share/doc/${name}
}

