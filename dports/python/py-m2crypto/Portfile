# $Id: Portfile,v 1.1 2004/04/04 07:43:43 blb Exp $

PortSystem			1.0
name				py-m2crypto
version				0.13
categories			python crypto devel
maintainers			blb@pobox.com
description			M2Crypto is a crypto and SSL toolkit for Python
long_description	${description}

platforms			darwin

homepage			http://sandbox.rulemaker.net/ngps/m2/
master_sites		http://sandbox.rulemaker.net/ngps/Dist/
use_zip				yes
distname			m2crypto-${version}

checksums			md5 be2790a34349ab452dddbcfe4c95606a

depends_lib			bin:python:python23 bin:swig:swig lib:libssl:openssl

use_configure		no

build.cmd			python setup.py
build.target		build

destroot.cmd		${build.cmd}
destroot.destdir	--prefix=${destroot}/${prefix}

post-destroot {
	xinstall -m 755 -d ${destroot}/${prefix}/share/doc/${name}
	eval file copy [glob ${worksrcpath}/doc/*] \
		${destroot}/${prefix}/share/doc/${name}
}

