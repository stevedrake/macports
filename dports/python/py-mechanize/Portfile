depends_lib-append	lib:XXX:py-clientcookie \
				lib:XXX:py-clientform \
				lib:XXX:py-pullparser

test.run		yes
test.cmd		${python.bin}
test.target		test.py

post-destroot	{
	xinstall -m 644 -W ${worksrcpath} COPYING ChangeLog GeneralFAQ.html \
		INSTALL README.html README.txt \
		${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 ${worksrcpath}/examples/hack21.py \
		${destroot}${prefix}/share/doc/${name}/examples
}
