# $Id: Portfile,v 1.4 2005/01/12 23:10:26 mww Exp $

PortSystem 1.0
PortGroup python24 1.0

name				py-mysql
version				1.0.0
categories			python devel databases
maintainers			ryanwilcox@mac.com
description			Python interface to mysql
long_description 	A package containing a Python module that allows you to \
					connect to MySQL databases
platforms			darwin
homepage 			http://sourceforge.net/projects/mysql-python/
master_sites		sourceforge:mysql-python
distname			MySQL-python-${version}
checksums			md5 0f9527a3aa4111802f376cc6816cc7cf

depends_lib-append	lib:libmysqlclient.10:mysql 

post-patch {
	cd ${worksrcpath}
	reinplace "s|/usr/include|${prefix}/include|g" setup.py
	reinplace "s|/usr/lib|${prefix}/lib|g" setup.py
	reinplace "s|/sw|${prefix}|g" setup.py
}
