	patchfiles-delete	patch-setup_posix.py
	depends_lib-delete	path:bin/mysql_config5:mysql5
	depends_lib-append	port:mysql
}

variant mysql4 conflicts mysql3	{
	patchfiles-delete       patch-setup_posix.py
	depends_lib-delete	path:bin/mysql_config5:mysql5
	depends_lib-append	port:mysql4
}
