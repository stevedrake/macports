post-build {
           cd ${workpath}/OSATerminologyExt-0.1.0/
           system "cd ${workpath}/OSATerminologyExt-0.1.0/ && ${python.bin} setup.py build"
}

post-destroot {
           cd ${workpath}/OSATerminologyExt-0.1.0/
           system "${python.bin} setup.py install --prefix=${prefix} --root=${destroot}"
}
