post-destroot	{
	xinstall -m 644 -W ${worksrcpath} README.txt changelog.txt \
		${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath}/examples emailtrainer.py readme.txt \
		${destroot}${prefix}/share/doc/${name}/examples
}
