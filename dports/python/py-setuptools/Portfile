PortSystem			1.0
PortGroup			python24 1.0
name				py-setuptools
version				0.6c6
categories-append	devel
maintainers			stechert@macports.org
description			distutils enhancement for build and distribution
long_description \
	setuptools is a collection of enhancements to the Python distutils that \
	allow you to more easily build and distribute Python packages, \
	especially ones that have dependencies on other packages.

platforms			darwin

homepage			http://peak.telecommunity.com/DevCenter/setuptools
master_sites		http://cheeseshop.python.org/packages/source/s/setuptools/
distname			setuptools-${version}

checksums			md5 e3d56d4d19776042607cbbecae823c8b \
				sha1 b6e05360db28b752949d98a7f508f0db51e0fdc1 \
				rmd160 04aea1ab47c0472de29f412e6c1bcd2ea6a7ffa6

post-destroot {
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath} EasyInstall.txt api_tests.txt \
		pkg_resources.txt setuptools.txt \
		${destroot}${prefix}/share/doc/${name}
	eval file delete [glob ${destroot}${python.pkgd}/site.py*]
}

