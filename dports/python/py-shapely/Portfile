    depends_lib-append      port:geos
    depends_build-append    port:py${python.version}-distribute

    patchfiles      patch-shapely_geos.py.diff

    post-patch {
            reinplace "s|@PREFIX@|${prefix}|g" ${worksrcpath}/shapely/geos.py
    }
}

