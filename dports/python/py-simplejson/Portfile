post-destroot {
    xinstall -m 644 -W ${worksrcpath} \
        LICENSE.txt \
        ${destroot}${prefix}/share/doc/${name}
    foreach f [glob -directory ${worksrcpath}/docs *] {
        copy $f ${destroot}${prefix}/share/doc/${name}/[file tail $f]
    }
}
