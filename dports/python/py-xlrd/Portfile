checksums           rmd160  48f0393b500aef02f1e5ab99d3a0d1923c64140f \
                    sha256  405d0dda93bfb7fa40a5d866a05984a524006ff1f0d1a192d346e68c4bce6263

use_zip             yes

if {$subport != $name} {
    if {${python.version} == 25} {
        post-destroot {
            move ${destroot}${prefix}/bin/runxlrd.py ${destroot}${prefix}/bin/runxlrd.py-2.5
        }
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       http://pypi.python.org/pypi/xlrd
    livecheck.regex     xlrd (\\d+\\.\\d+\\.\\d+)
}
