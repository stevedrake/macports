# $Id: Portfile,v 1.2 2004/05/06 21:52:08 rshaw Exp $

PortSystem 1.0
PortGroup python 1.0

name			py-xml
version			0.8.3
revision		1
categories-append	devel textproc
maintainers		ryanwilcox@mac.com
description		XML Tools for Python
long_description 	A package of all the tools required for writing basic \
			XML applications in Python.
platforms		darwin
homepage 		http://pyxml.sourceforge.net/
master_sites        	sourceforge:pyxml
distname		PyXML-${version}
checksums		md5 7083d950064ce90840d9ed48c818dc85

depends_lib		bin:python:python \
			lib:libexpat.0:expat 

build.args		--with-libexpat=${prefix}

post-destroot {
	file mkdir ${destroot}${prefix}/share/doc
	file copy ${worksrcpath}/doc ${destroot}${prefix}/share/doc/${name}
}
