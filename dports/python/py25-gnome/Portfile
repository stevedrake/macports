    post-patch { 
        reinplace "s| -export-symbols-regex.*||g" \
            ${worksrcpath}/bonobo/Makefile.in \
            ${worksrcpath}/gconf/Makefile.in \
            ${worksrcpath}/gnome/Makefile.in \
            ${worksrcpath}/gnomecanvas/Makefile.in \
            ${worksrcpath}/gnomevfs/Makefile.in
    } 
}

