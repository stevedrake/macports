   xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
   xinstall -m 644 -W ${worksrcpath} ANNOUNCE.txt LICENSE.txt README.txt \
      RELEASE_NOTES.txt ${destroot}${prefix}/share/doc/${name}
}

