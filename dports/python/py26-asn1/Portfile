post-destroot {
   xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
   xinstall -m 644 -W ${worksrcpath} CHANGES LICENSE README THANKS TODO \
      ${destroot}${prefix}/share/doc/${name}
   xinstall -m 644 -W ${worksrcpath}/doc pyasn1-tutorial.html \
      ${destroot}${prefix}/share/doc/${name}
}

