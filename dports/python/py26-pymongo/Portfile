checksums           md5 600eff38018681cffdd0bdddb9658a3f \
                    sha1 3ff1a4367520c991505997680f62b38bcdba8413 \
                    rmd160 cf93388b2604ed2e0aede8c3fb4ab0baa5ba1858

post-destroot {
   xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
   xinstall -m 644 -W ${worksrcpath} README.rst \
      ${destroot}${prefix}/share/doc/${name}
}

livecheck.url       [lindex ${master_sites} 0]
livecheck.regex     {pymongo-([.\d]+)\.tar\.gz}
