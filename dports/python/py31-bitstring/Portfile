post-destroot {
   xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
   xinstall -m 644 -W ${worksrcpath} README.txt release_notes.txt \
      ${destroot}${prefix}/share/doc/${name}
   xinstall -m 644 ${worksrcpath}/doc/bitstring_manual.pdf \
      ${destroot}${prefix}/share/doc/${name}
}

