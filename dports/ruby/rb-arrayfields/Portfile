# $Id: Portfile,v 1.1 2004/04/02 08:33:07 rshaw Exp $
PortSystem 1.0

name			rb-arrayfields
version			1.0.2
categories		ruby
maintainers		rshaw@opendarwin.org
description		Ruby module for keyword access to arrays
long_description	${description}
platforms		darwin
homepage		http://www.codeforpeople.com/lib/ruby/arrayfields/
master_sites	${homepage}
dist_subdir		ruby
distname		arrayfields-${version}
extract.suffix	.tgz
checksums		md5 d2d6a3992de18ac5bf36849170fdc4ca

set ruby ${prefix}/bin/ruby
depends_build	path:${ruby}:ruby

configure {
	reinplace "s|site_ruby|vendor_ruby|" ${worksrcpath}/install.rb
	reinplace "s|\$:|'${destroot}'+&|" ${worksrcpath}/install.rb 
	reinplace "s|dir = \\\[|&destdir|" ${worksrcpath}/install.rb 
}

build			{}

destroot.cmd	${ruby} install.rb
destroot.target
destroot.destdir

