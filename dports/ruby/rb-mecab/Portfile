PortSystem      1.0
PortGroup       ruby 1.0

ruby.setup      MeCab 0.91 extconf.rb {}

platforms       darwin
maintainers     rsky0711@gmail.com
description     a Ruby module for MeCab
long_description ${description}

homepage        http://mecab.sourceforge.jp/
set sfj         20030
master_sites    http://osdn.dl.sourceforge.jp/mecab/${sfj}/ \
                http://keihanna.dl.sourceforge.jp/mecab/${sfj}/ \
                http://qgpop.dl.sourceforge.jp/mecab/${sfj}/
distname        mecab-ruby-${version}
checksums       md5 06885530629b8bb591787bf66d81a14e \
                sha1 bf6836a7f12260cc90d11204cc5cc17d2e2df87c \
                rmd160 338c88d7e42a5923afdfe0e02c8297f608250086

categories-append   textproc japanese
depends_lib-append  port:mecab

post-extract {
    reinplace s|\#!/usr/bin/ruby|\#!${ruby.bin}|g \
        ${worksrcpath}/test.rb
}

post-destroot {
    xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}/examples
    xinstall -m 644 ${worksrcpath}/test.rb \
        ${destroot}${prefix}/share/doc/${name}/examples
}
