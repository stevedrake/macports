# $Id: Portfile,v 1.1 2004/04/11 05:50:46 rshaw Exp $
PortSystem 1.0

name			rb-postgres
version			0.7.1
categories		ruby databases
maintainers		shu@rufuran.org
description		Ruby API for the PostgreSQL database
long_description	This is the Ruby library for accessing PostgreSQL \
			databases from within Ruby.  It works with PostgreSQL \
			6.4/6.5/7.0/7.1 and 7.2\; probably works with 6.3 or \
			earlier with slight modification, but not tested at all.

homepage		http://www.postgresql.jp/interfaces/ruby/
platforms		darwin
master_sites		http://www.postgresql.jp/interfaces/ruby/archive/
dist_subdir		ruby
distname		ruby-postgres-${version}
worksrcdir		ruby-postgres-${version}
checksums		md5 8ef67b3f4b089248f0420baeb0e3b3c8

set ruby ${prefix}/bin/ruby
depends_build		path:${ruby}:ruby
depends_lib		lib:libpq.3:postgresql

configure.cmd		${ruby} -rvendor-specific extconf.rb
configure.args		--with-pgsql-include-dir=${prefix}/include \
			--with-pgsql-lib-dir=${prefix}/lib
