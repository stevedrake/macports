# $Id: Portfile,v 1.3 2004/08/12 23:25:58 rshaw Exp $
PortSystem		1.0
PortGroup		ruby 1.0

ruby.setup		{postgres ruby-postgres} 0.7.1 extconf.rb {README doc sample}
revision		2
maintainers		shu@rufuran.org
description		Ruby API for the PostgreSQL database
long_description	This is the Ruby library for accessing PostgreSQL \
					databases from within Ruby.  It works with PostgreSQL \
					6.4/6.5/7.0/7.1 and 7.2\; probably works with 6.3 or \
					earlier with slight modification, but not tested at all.
categories-append	databases
homepage		http://www.postgresql.jp/interfaces/ruby/
master_sites	${homepage}/archive/
checksums		md5 8ef67b3f4b089248f0420baeb0e3b3c8
platforms		darwin

depends_lib		lib:libpq:postgresql

configure.args-append	--with-pgsql-include-dir=${prefix}/include \
						--with-pgsql-lib-dir=${prefix}/lib

