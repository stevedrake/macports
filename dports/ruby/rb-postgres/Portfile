# $Id: Portfile,v 1.5 2005/08/02 10:03:32 mww Exp $

PortSystem 1.0
PortGroup ruby 1.0

ruby.setup		{postgres ruby-postgres} 0.7.1 extconf.rb {README doc sample}
revision		4
maintainers		shu@rufuran.org
description		Ruby API for the PostgreSQL database
long_description	This is the Ruby library for accessing PostgreSQL \
					databases from within Ruby.  It works with PostgreSQL 8.0.
categories-append	databases
homepage		http://ruby.scripting.ca/postgres/
master_sites	${homepage}/archive/
checksums		md5 8ef67b3f4b089248f0420baeb0e3b3c8
platforms		darwin

depends_lib-append		port:postgresql8

configure.args-append	--with-pgsql-include-dir=${prefix}/include/pgsql8 \
						--with-pgsql-lib-dir=${prefix}/lib/pgsql8
configure.env \
	POSTGRES_LIB="${prefix}/lib/pgsql8 -L${prefix}/lib -lssl -lcrypto" \
	POSTGRES_INCLUDE="${prefix}/include/pgsql8 -I${prefix}/include"
