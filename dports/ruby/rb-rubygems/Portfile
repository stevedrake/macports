PortSystem		1.0
PortGroup		ruby 1.0

ruby.setup		rubygems 0.8.1 basic_install.rb {README doc examples gemspecs} \
				rubyforge:1399
maintainers		rshaw@opendarwin.org
description		a package management framework for Ruby
long_description	RubyGems is the Ruby standard for publishing and \
					managing third party libraries.
categories-append	devel
checksums		md5 6276d268b420c0d61796cdbf6d28dae4
platforms		darwin

post-patch {
	cd ${worksrcpath}
	reinplace "s/\\.rb/.(rb|cmd)/" install.rb
	reinplace "s|../lib|../&|" packages/sources/sources.gemspec
}

