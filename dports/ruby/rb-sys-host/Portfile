# $Id: Portfile,v 1.1 2004/04/22 23:47:26 rshaw Exp $
PortSystem 1.0

name			rb-sys-host
version			0.4.1
categories		ruby sysutils
maintainers		rshaw@opendarwin.org
description		hostname and ip address info via Ruby - C extension
long_description	A C extension that provides hostname and IP address \
					information about the current host.
homepage		http://ruby-sysutils.sourceforge.net/
master_sites	sourceforge:ruby-sysutils
distname		sys-host-${version}
dist_subdir		ruby
checksums		md5 c75f47c3fa24938ffc9422c4b2fdba20
platforms		darwin

set ruby ${prefix}/bin/ruby
depends_build	path:${ruby}:ruby

pre-configure {
	reinplace "s|exit!|exit|" ${worksrcpath}/extconf.rb
}
configure.cmd	${ruby} -rvendor-specific extconf.rb

test.run		yes
test.dir		${worksrcpath}/test
test.cmd		${ruby} test.rb

destroot.args	RUBY=${ruby}
post-destroot {
	cd ${worksrcpath}
	xinstall -d -m 0755 ${destroot}${prefix}/share/doc/${name}
	set cmd "cp -R doc/* ${destroot}${prefix}/share/doc/${name}"
	ui_info ${cmd}; system ${cmd}
}

