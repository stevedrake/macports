post-patch {
    reinplace "s|\#!/usr/bin/ruby|\#!${ruby.bin}|g" \
        ${worksrcpath}/test.rb
}

post-destroot {
    set exdir ${destroot}${prefix}/share/doc/${name}/examples
    xinstall -m 755 -d ${exdir}
    xinstall -m 755 ${worksrcpath}/test.rb ${exdir}
}

