# $Id$

PortSystem       1.0

name             geos
version          3.2.2
license          LGPL-2.1
categories       science
platforms        darwin
maintainers      gaige.net:opendarwin

description      GEOS Geometry Engine - Open Source
long_description \
  A C++ port of the Java Topology Suite, providing OpenGIS Simple \
  Features for SQL spatial predicate functions and spatial operators, \
  as well as specific JTS topology functions. Used by PostGIS.

homepage         http://trac.osgeo.org/geos/
master_sites     http://download.osgeo.org/geos/
use_bzip2        yes

checksums        md5     c5d264acac22fe7720f85dadc1fc17c6 \
                 sha1    6917d6d1d4e79f58d9f931bf351024709fabbc5a \
                 rmd160  95342be083175f38c8c87b5682271253320f3d60

post-destroot {
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 644 -W ${worksrcpath} AUTHORS COPYING ChangeLog NEWS README \
        TODO ${destroot}${docdir}
}

test.run         yes
test.cmd         make
test.target      check

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${homepage}
livecheck.regex  {geos-(\d+(?:\.\d+)*)}
