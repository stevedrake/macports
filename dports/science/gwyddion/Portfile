                sha1 47912e378ef994e6438e02e4fab5db495877b618 \
                rmd160 9d9dfea2fe6e72c1b716d86720d79317308caf1b

depends_lib     port:gtk2 \
                port:libxml2 \
                port:fftw-3 \
                port:gtkglext

