                set darwin_9_glpath   /System/Library/Frameworks/OpenGL.framework/Versions/
                configure.ldflags -Wl,-dylib_file,${darwin_9_glpath}/A/Libraries/libGL.dylib:\
                    ${darwin_9_glpath}/A/Libraries/libGL.dylib
