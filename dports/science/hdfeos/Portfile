# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem				    1.0

name					    hdfeos
version                     2.16v1.00
categories				    science
maintainers				    takeshi
description				    HDF-EOS library built on HDF4
long_description \
    library designed built on HDF4 to support EOS-specific \
    data structures, namely Grid, Point, and Swath.
homepage                    http://hdfeos.org/
platforms                   darwin
master_sites                ftp://edhs1.gsfc.nasa.gov/edhs/${name}/latest_release/
depends_lib				    port:hdf4
distname                    HDF-EOS${version}
worksrcdir                  ${name}
extract.suffix              .tar.Z
fetch.use_epsv              no
checksums                   md5     784bc6f47a0089f34a845b3ef1664fee \
                            sha1    466892fa12b32fc4033362f4234d5f2e4a5754e9 \
                            rmd160  ca7b7b5a5ef397c5f8fd80e7e247df60b789e69d
configure.args              --with-jpeg=${prefix}/lib/jpeg6b --with-hdf4=${prefix} --with-zlib=${prefix} \
    --disable-dependency-tracking
set jpegdir ${prefix}/lib/jpeg6b
configure.ldflags-delete    -L${prefix}/lib
configure.ldflags-append    -L${jpegdir}/lib -L${prefix}/lib
post-destroot {
    eval xinstall -m 644 [glob ${worksrcpath}/include/*.h] \
        ${destroot}${prefix}/include
}
