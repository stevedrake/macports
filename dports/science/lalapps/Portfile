# $Id$

PortSystem    1.0

name          lalapps
version       6.3
categories    science
platforms     darwin
maintainers   ram

description   LSC Algorithm Library Applications
long_description \
  LALApps is a set of codes for gravitational wave data analysis, \
  against the LSC Algorithm Library.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalapps.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/

checksums     md5 45172686bd6b678500e2b3010cd0af63 \
              sha1 76c703ce36d96b12ddd74a3bb91857ebe9168966 \
              rmd160 314b0506a51fb67def81286ecdb6a8168aea7942

depends_build bin:pkg-config:pkgconfig

depends_lib   port:python26 \
              port:gsl \
              port:fftw-3 \
              port:fftw-3-single \
              port:libframe \
              port:metaio \
              port:lal \
              port:lalstochastic \
              port:glue \
              port:libxml2 \
              port:cfitsio

configure.python ${prefix}/bin/python2.6
configure.args   --mandir=${prefix}/share/man \
                 --enable-xml \
                 --disable-gcc-flags \
                 --disable-debug

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {lalapps-(\d+(?:\.\d+)*).tar.gz}
