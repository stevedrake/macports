# $Id$

PortSystem    1.0

name          lalsimulation
version       0.1.0
categories    science
platforms     darwin
maintainers   ram
license       GPL

description   LSC Algorithm Library - Simulation
long_description \
  LIGO Scientific Collaboration Algorithm Library - Simulation containing \
  routines for simulation gravitational-wave waveforms and noise sources.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalsuite.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/lalsuite

checksums     md5 274f16c2f39f2895ae4b6e4fbf60a116 \
              sha1 295c06b9b642ed17f739ef6732dd42f467b98642 \
              rmd160 a76c9a500aeed3cbbfa3a2c18cba3514c8fb36e6

depends_build bin:pkg-config:pkgconfig \
              port:python27

depends_lib   port:lal \
              port:gsl

configure.python ${prefix}/bin/python2.7
configure.args --mandir=${prefix}/share/man \
               --disable-gcc-flags

build.args    V=1

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {lalsimulation-(\d+(?:\.\d+)*).tar.gz}
