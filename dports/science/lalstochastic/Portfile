# $Id$

PortSystem    1.0

name          lalstochastic
version       1.1.0
categories    science
platforms     darwin
maintainers   ram
license       GPL

description   LSC Algorithm Library - Stochastic
long_description \
  LIGO Scientific Collaboration Algorithm Library  - Stochastic, \
  containing routines for stochastic gravitational wave background \
  data analysis.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalsuite.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/lalsuite

checksums     md5 6e949bca1210b71448e0d7108d900f19 \
              sha1 ba09628fc54160c37a6cc0f0773766049d88cfc2 \
              rmd160 7ee1da7ca605ab7a5df6f16e7a9fe4df85afd302

depends_build bin:pkg-config:pkgconfig \
              port:python26

depends_lib   port:lal \
              port:lalmetaio \
              port:metaio

configure.python ${prefix}/bin/python2.6
configure.args --mandir=${prefix}/share/man \
               --disable-gcc-flags

build.args    V=1

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {lalstochastic-(\d+(?:\.\d+)*).tar.gz}
