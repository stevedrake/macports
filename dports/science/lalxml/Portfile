# $Id$

PortSystem    1.0

name          lalxml
version       1.0.0
categories    science
platforms     darwin
maintainers   ram
license       GPL

description   LSC Algorithm Library - XML
long_description \
  LIGO Scientific Collaboration Algorithm Library - XML containing \
  routines for accessing XML files using libxml2.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalsuite.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/lalsuite

checksums     md5 8a1dfa5d7feeeccd2e7ce5c450055e43 \
              sha1 525a5a0a6c3f87c7988bc69e88de38bfbf089934 \
              rmd160 bc92e23a5d5fbd6ffa5734bb9db8ef10318819d4

depends_build bin:pkg-config:pkgconfig \
              port:python26

depends_lib   port:lal \
              port:lalpulsar \
              port:libxml2 \
              port:gsl

configure.python ${prefix}/bin/python2.6
configure.args --mandir=${prefix}/share/man \
               --disable-gcc-flags

build.args    V=1

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {lalxml-(\d+(?:\.\d+)*).tar.gz}
