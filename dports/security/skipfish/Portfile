# $Id$

PortSystem          1.0

name                skipfish
version             1.41b
license             Apache-2.0
categories          security
maintainers         snc openmaintainer
description         web application security scanner
long_description    A fully automated, active web application security \
                    reconnaissance tool.

homepage            http://code.google.com/p/skipfish/
platforms           darwin
depends_lib         port:openssl port:libidn port:zlib

master_sites        googlecode
extract.suffix      .tgz
checksums           md5     0b379c387d80fb46a4f2b55d040e43c0 \
                    sha1    de7c65d9aeefecb3a0cc2bef5af1f1465c3d7a1e \
                    rmd160  6fe7386dd90b96af4cd77fc9a455f8b0fe6f78a3

worksrcdir          ${name}

patchfiles          patch-config.h.diff
post-patch {
    reinplace s|@@SHARE@@|${prefix}/share/${name}/|g ${worksrcpath}/config.h
}

use_configure       no

destroot {
    file mkdir ${destroot}${prefix}/share/${name}
    file copy ${worksrcpath}/skipfish ${destroot}${prefix}/bin/skipfish
    file copy ${worksrcpath}/assets/ ${destroot}${prefix}/share/${name}
}
