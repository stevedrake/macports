# $Id: Portfile,v 1.4 2004/07/23 22:46:59 jkh Exp $

PortSystem 1.0

name		ksh93
version		2004-02-29
categories	shells
maintainers	landonf@opendarwin.org
description	The AT&T Korn shell
long_description \
	The official version of ksh-93, by David Korn and AT&T research
platforms	darwin freebsd
homepage	http://www.research.att.com/sw/download/
master_sites	http://www.research.att.com/sw/download/tgz/

distfiles	ast-ksh.$version.tgz INIT.$version.tgz
checksums	ast-ksh.$version.tgz md5 fa91217bc99ccf9cc32b3250a2431185 \
		INIT.$version.tgz md5 cd4cc8fe24b040685451bea07f9bd163

extract.dir	${worksrcpath}

pre-extract {
	file mkdir ${worksrcpath}
}

use_configure	no

build.dir	${extract.dir}
build.cmd	bin/package
build.target	make

destroot {
	set arch [exec ${worksrcpath}/bin/package host]
	system "install -m 755 ${worksrcpath}/arch/${arch}/bin/ksh ${destroot}${prefix}/bin"
        system "install -m 755 ${worksrcpath}/arch/${arch}/man/man1/sh.1 ${destroot}${prefix}/share/man/man1/ksh.1"
}
