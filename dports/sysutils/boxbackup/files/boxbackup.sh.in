#!/bin/sh

case "$1" in
start)
	[ -f __PREFIX/etc/box/bbstored.conf ] \
		&& [ -f __PREFIX/etc/box/raidfile.conf ] \
		&& __PREFIX/bin/bbstored
	[ -f __PREFIX/etc/box/bbackupd.conf ] \
		&& __PREFIX/bin/bbackupd
	;;
stop)
	/usr/bin/killall -SIGUSR1 bbackupd
	/usr/bin/killall -SIGUSR1 bbstored
	;;
restart)
	$0 stop
	$0 start
	;;
*)
	echo "Usage: `basename $0` {start|stop|restart}" >&2
	;;
esac

exit 0

