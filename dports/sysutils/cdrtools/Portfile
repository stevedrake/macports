PortSystem 1.0

name	    	cdrtools
version		2.01.01a37
revision	1
categories  	sysutils
description     ISO 9660 filesystem and CD creation tools
long_description	The cdrtools software includes programs to create \
		 	and/or extract ISO 9660 filesystems, verify their \
			integrity, and write them to a disc.
homepage	http://cdrecord.berlios.de/old/private/cdrecord.html
maintainers	bytestorm@gmail.com openmaintainer
master_sites    ftp://ftp.berlios.de/pub/cdrecord/alpha/ \
		ftp://ftp.cs.tu-berlin.de/pub/misc/cdrecord/alpha/
checksums	md5 94e69c5d0507334a3fb3d38260df3d88 \
		sha1 c6bbce4959a12c81a5944d7896959077002851b5 \
		rmd160 d8d7b5e411dbaf371c67179443c1ba6517110ab6

use_bzip2	yes

build.type      gnu

worksrcdir	cdrtools-2.01.01

configure 	{ delete ${worksrcpath}/INSTALL }

