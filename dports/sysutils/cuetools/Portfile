# $Id: Portfile,v 1.2 2004/08/25 17:16:03 mww Exp $

PortSystem 1.0

name		cuetools
version		0.6
categories	sysutils
platforms	darwin
maintainers	mww@opendarwin.org
description	utilities for working with cue and toc files
long_description	cuetools is a set of utilities for working with cue \
			files and toc files

homepage		http://cuetools.berlios.de/
master_sites	http://download.berlios.de/${name}/
checksums		md5 c3b4f6c5f650ba06156f25d70533698a

use_configure	no

destroot	{
	xinstall -m 755 -s -W ${worksrcpath}/src cueconvert cuerename \
		${destroot}${prefix}/bin
	xinstall -m 644 -W ${worksrcpath}/man cueconvert.1 cuerename.1 \
		${destroot}${prefix}/share/man/man1
}
