# $Id: Portfile,v 1.3 2004/09/11 15:15:57 mww Exp $

PortSystem 1.0

name		cuetools
version		1.1
categories	sysutils
platforms	darwin
maintainers	mww@opendarwin.org
description	utilities for working with cue and toc files
long_description	cuetools is a set of utilities for working with cue \
			files and toc files

homepage		http://cuetools.berlios.de/
master_sites	http://download.berlios.de/${name}/
checksums		md5 00b16ac97e26a6cd682dd6644ec4aada

use_configure	no

post-build	{
	system "ranlib ${worksrcpath}/lib/libcuefile.a"
}

destroot.args	prefix=${prefix} mandir=${prefix}/share/man
