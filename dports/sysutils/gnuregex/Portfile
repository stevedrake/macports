# $Id: Portfile,v 1.5 2004/07/14 13:36:20 olegb Exp $
PortSystem 1.0
name		gnuregex
version		0.12
revision	1
categories	sysutils
maintainers	mij@opendarwin.org
description	GNU regex library
homepage	http://www.gnu.org/directory/regex.html
platforms	darwin

long_description $description

master_sites	gnu:regex

distname	regex-${portversion}
checksums	md5  6c25ca10e71adeede101e7646e796ebd

pre-destroot	{ 
		system "cd ${worksrcpath} && libtool -lSystem -dynamic -install_name ${prefix}/lib/libgnuregex.dylib -o libgnuregex.dylib regex.o" 
}

destroot	{ 
		system "install -m 755 -d ${destroot}${prefix}/include"
		system "install -m 644 ${worksrcpath}/regex.h ${destroot}${prefix}/include/gnuregex.h" 
		system "install -m 755 ${worksrcpath}/libgnuregex.dylib ${destroot}${prefix}/lib/"
}
