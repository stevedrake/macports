# $Id: Portfile,v 1.6 2004/08/15 22:13:04 mww Exp $

PortSystem 1.0

name			pstree
version			2.25
categories		sysutils
maintainers		mww@opendarwin.org
description		pstree shows the output of the ps command as a tree
platforms		darwin freebsd
long_description	${description}

homepage		ftp://ftp.thp.uni-duisburg.de/pub/source/
master_sites	${homepage} \
				http://fresh.t-systems-sfr.com/unix/src/misc/
checksums		md5 2d0e3a0e80c033e81f781fe718f1cfe8

use_configure	no

worksrcdir

build.cmd		cc
build.args		pstree.c
build.target	-o pstree

destroot	{
	xinstall -m 755 -s ${workpath}/pstree ${destroot}${prefix}/bin
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 ${workpath}/README \
		${destroot}${prefix}/share/doc/${name}/README
}
