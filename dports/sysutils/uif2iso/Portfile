# $Id$

PortSystem              1.0

name                    uif2iso
version                 0.1.6

categories              sysutils
platforms               darwin
maintainers             gmail.com:billitch
description             converts UIF images to ISO images
long_description        ${description}

homepage                http://aluigi.org/mytoolz.htm#uif2iso
master_sites            http://aluigi.org/mytoolz/
distname                uif2iso
use_zip                 yes

checksums               md5     c18ba932e103f8f9e1f69e0600106082 \
                        sha1    c45dabb8e248160246ffd89f16cd12d533c17dd4 \
                        rmd160  6006a77c5c2bd7dab1c87024210a88790a5e2619

use_configure           no
worksrcdir              src

depends_build           port:openssl \
                        port:zlib

# build.args              CC=gcc CFLAGS=\"-L${prefix}/lib\"
build.post_args         CFLAGS="-L${prefix}/lib"

destroot {
	xinstall -m 755 ${worksrcpath}/uif2iso ${destroot}${prefix}/bin
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 ${workpath}/uif2iso.txt ${destroot}${prefix}/share/doc/${name}
}
