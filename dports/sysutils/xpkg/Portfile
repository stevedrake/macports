# $Id: Portfile,v 1.7 2006/02/21 08:12:15 mww Exp $

PortSystem 1.0

name			xpkg
version			0.1.3
categories		sysutils
platforms		darwin
maintainers		mww@opendarwin.org
description		xpkg package manager alpha release
long_description	${description}

homepage		http://www.xpkg.org/
master_sites	${homepage}/files/
checksums		sha1 963991f3a6a8880e8e0217bbadd6d15f77aaeed5
use_bzip2		yes

depends_build	port:bison
depends_lib		port:xar port:sqlite3

configure.args	--mandir=${prefix}/share/man
configure.env	CFLAGS="-I${prefix}/include" \
		CPPFLAGS="-I${prefix}/include" \
		LDFLAGS="-L${prefix}/lib"

platform darwin 8 {
	configure.env-append CC=/usr/bin/gcc-4.0 CPP=/usr/bin/cpp-4.0 CXX=/usr/bin/g++-4.0
}

