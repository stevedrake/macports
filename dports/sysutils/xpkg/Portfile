# $Id: Portfile,v 1.4 2005/10/20 18:31:01 mww Exp $

PortSystem 1.0

name			xpkg
version			0.1.0
categories		sysutils
platforms		darwin
maintainers		mww@opendarwin.org
description		xpkg package manager alpha release
long_description	${description}

homepage		http://www.opendarwin.org/projects/xpkg/
master_sites	${homepage}
checksums		md5 0b5ec98691f2730e89753a3f0fb7e5f4
use_bzip2		yes

depends_build	port:bison
depends_lib		port:xar port:sqlite3

configure.args	--mandir=${prefix}/share/man
configure.env	CFLAGS="-I${prefix}/include" \
		CPPFLAGS="-I${prefix}/include" \
		LDFLAGS="-L${prefix}/lib"
