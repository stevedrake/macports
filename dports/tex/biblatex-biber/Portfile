                        port:p5-list-moreutils \
                        port:p5-log-log4perl \
                        port:p5-readonly \
                        port:p5-readonly-xs \
                        port:p5-regexp-common \
                        port:p5-text-bibtex \
                        port:p5-unicode-collate \
                        port:p5-xml-libxml-simple \
                        port:p5-xml-libxslt

