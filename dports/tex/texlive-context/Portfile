    {1 cont-en pdftex cont-usr.tex {-8bit *cont-en.ini}} \
    {0 cont-cz pdftex cont-usr.tex {-8bit *cont-cz.ini}} \
    {0 cont-de pdftex cont-usr.tex {-8bit *cont-de.ini}} \
