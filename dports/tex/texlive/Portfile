# $Id$

PortSystem 1.0

name            texlive
version         2007
revision        3
categories      tex
maintainers     milosh openmaintainer
description     TeX Live is a TeX distribution
long_description    TeX Live is an easy way to get up and running with TeX. \
    It provides a comprehensive TeX system with binaries for most flavors \
    of Unix, including GNU/Linux, and also Windows. It includes all the \
    major TeX-related programs, macro packages, and fonts that are free \
    software, including support for many languages around the world.

homepage        http://www.tug.org/texlive/
platforms       darwin

master_sites    http://students.dec.bournemouth.ac.uk/ebarrett/texlive/distfiles/

depends_lib     port:texlive_base port:texlive_texmf-full
use_configure   no
fetch           {}
checksum        {}
extract         {}
build           {}
destroot        {
    #Simulate texlinks
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/latex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/etex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdfetex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdflatex
    ln -s ${prefix}/bin/omega  ${destroot}${prefix}/lambda
    ln -s ${prefix}/bin/aleph  ${destroot}${prefix}/lamed
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/amstex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/platex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdfplatex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/mex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdfmex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/utf8mex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/csplain
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/cslatex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdfcsplain
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdfcslatex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/mltex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/mllatex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/eplain
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/texsis
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/physe
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/phyzzx
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/xmltex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdfxmltex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/jadetex
    ln -s ${prefix}/bin/pdftex ${destroot}${prefix}/pdfjadetex
    #system mktexlsr
    #system "fmtutil-sys --all"
    #system "updmap-sys --syncwithtrees"
}

variant minimal description {Only install minimal texmf tree} {
        depends_lib-delete  port:texlive_texmf-full
}

variant letter description {Set paper format to letter} {
    build   {
        system "texconfig-sys paper letter"
    }
}

variant doc description {Build docs} {
    depends_lib-append  port:texlive_texmf-docs
}

livecheck.check     regex
livecheck.url       ${homepage}acquire.html
livecheck.regex     "TeX Live (\[0-9\]+) "

