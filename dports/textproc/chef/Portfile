use_configure	no
build		{ system "cd $worksrcpath && lex chef.x && cc lex.yy.c -ll -o chef" }
destroot	{ file mkdir ${destroot}${prefix}/bin
                  system "cd $worksrcpath && install chef ${destroot}${prefix}/bin" }
