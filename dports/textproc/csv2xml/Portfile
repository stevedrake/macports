# $Id: Portfile,v 1.1 2004/11/20 14:13:50 mww Exp $

PortSystem 1.0

name			csv2xml
version			0.5.1
categories		textproc
platforms		darwin
maintainers		mww@opendarwin.org
description		A simple csv to xml converter.
long_description	${description}

homepage		http://csv2xml.sourceforge.net/
master_sites	sourceforge
checksums		md5 bb22297fcab04cbb67d9b73a98e32868
use_bzip2		yes

configure	{
	cd ${worksrcpath}
	reinplace "s|/usr/local|\${DESTDIR}${prefix}|g" src/Makefile
	reinplace "s|/usr/local/man|\${DESTDIR}${prefix}/share/man|g" man/Makefile
}
