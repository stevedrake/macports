# $Id: Portfile,v 1.8 2006/03/21 16:25:17 mww Exp $

PortSystem 1.0

name			libmrss
version			0.11
categories		textproc devel
platforms		darwin
maintainers		mww@opendarwin.org
description		C library for parsing, writing, and creating RSS streams
long_description	libmRSS is a C library for parsing, writing, and creating \
			RSS (Rich Site Summary or Really Simple Syndication, but not RDF \
			Site Summary) files or streams.

homepage		http://libmrss.sourceforge.net/
master_sites	http://autistici.org/bakunin/libmrss/
checksums		sha1 7fc61a9f275acce706afdee8a11c15eaac3eaa39

depends_build	port:pkgconfig
depends_lib		port:curl port:libnxml port:openssl port:zlib

configure.env	CFLAGS=-I${prefix}/include CPPFLAGS=-I${prefix}/include \
				LDFLAGS=-L${prefix}/lib

platform darwin 8 {
	configure.env-append CC=/usr/bin/gcc-4.0 CPP=/usr/bin/cpp-4.0 CXX=/usr/bin/g++-4.0
}

