PortSystem 1.0
name		libwpd
version		0.7.2
description	A general purpose library for reading WordPerfect files.
long_description	${description}
maintainers	olegb@opendarwin.org
categories	textproc
platforms	darwin 
homepage	${name}.sf.net
master_sites	sourceforge
checksums	md5 9a4d18f4211d158685385830f41d2c84
depends_lib	lib:libglib-2:glib2 lib:libgsf-1:libgsf
configure.args	--mandir=${prefix}/share/man 
configure.env   CPPFLAGS="-I${prefix}/include -L${prefix}/lib" \
                CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress" 
