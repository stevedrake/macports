# $Id: Portfile,v 1.3 2006/03/04 11:30:00 mww Exp $

PortSystem 1.0

name			libxmldiff
version			0.2.4
categories		textproc
platforms		darwin
maintainers		mww@opendarwin.org
description		libxmldiff aims at providing efficient diff on XML files
long_description	${description}

homepage		http://people.via.ecp.fr/~remi/soft/xml/libxmldiff/libxmldiff_en.php3
master_sites	http://people.via.ecp.fr/~remi/soft/xml/libxmldiff/
checksums		md5 db766ac3a75b90f0475a97009bc5fe8a

depends_lib		port:libxml2 \
				port:libxslt \
				port:libiconv \
				port:zlib

configure.args	--with-xml-prefix=${prefix}

platform darwin 8 {
	configure.env CC=/usr/bin/gcc-3.3 CXX=/usr/bin/g++-3.3 CPP=/usr/bin/cpp-3.3
}

