# $Id: Portfile,v 1.2 2005/08/01 16:28:53 mww Exp $

PortSystem 1.0

name			libxmldiff
version			0.2.3
categories		textproc
platforms		darwin
maintainers		mww@opendarwin.org
description		libxmldiff aims at providing efficient diff on XML files
long_description	${description}

homepage		http://people.via.ecp.fr/~remi/soft/xml/libxmldiff/libxmldiff_en.php3
master_sites	http://people.via.ecp.fr/~remi/soft/xml/libxmldiff/
distname		${name}_0.2-3
checksums		md5 efae96766629c2265a2feffcda727eaa

depends_lib		port:libxml2 \
				port:libxslt \
				port:libiconv \
				port:zlib

worksrcdir		${name}

platform darwin 8 {
	post-extract {
		foreach lnk {install-sh mkinstalldirs missing} {
			system "cd ${worksrcpath} && ln -sf /usr/share/automake-1.6/${lnk}"
		}
	}
	configure.env	CXX=/usr/bin/g++-3.3 CPP=/usr/bin/cpp-3.3
}

configure.args	--with-xml-prefix=${prefix}

