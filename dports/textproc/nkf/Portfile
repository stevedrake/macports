# $Id: Portfile,v 1.3 2006/03/31 04:46:44 takanori Exp $

PortSystem        1.0
name              nkf
version           2.0.6
categories        textproc
maintainers       takanori@opendarwin.org
description       Network Kanji code conversion Filter
long_description  Nkf  is  a  yet  another kanji code converter among networks, hosts and \
                  terminals.  It converts input kanji code to designated kanji code  such \
                  as 7-bit JIS, MS-kanji (shifted-JIS), utf-8 or EUC.
platforms	  darwin
homepage          http://www01.tcp-ip.or.jp/~furukawa/
master_sites      http://keihanna.dl.sourceforge.jp/nkf/19481/ \
		  http://osdn.dl.sourceforge.jp/nkf/19481/ \
		  http://qgpop.dl.sourceforge.jp/nkf/19481/
distfiles	  ${name}206a.tar.gz
checksums	  md5 f4b07268b238ac85551e2777fa2c3836 \
		  sha1 be81a8e3322b0c2567a1c38be9f0ba06b4431152 \
		  rmd160 e67e1dea596d1bd066628b1db70ab5c76465307a

worksrcdir	  ${name}206
configure	  {}
build.target

destroot	  {
		  xinstall -m 755 ${worksrcpath}/nkf ${destroot}${prefix}/bin
		  xinstall -m 644 ${worksrcpath}/nkf.1 ${destroot}${prefix}/share/man/man1
}

post-destroot	{
		xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
		xinstall -m 644 ${worksrcpath}/nkf.doc ${destroot}${prefix}/share/doc/${name}
}
