# $Id: Portfile,v 1.2 2005/01/28 07:13:26 blb Exp $

PortSystem			1.0
name				saxon
version				8.2
categories			textproc java
maintainers			blb@pobox.com
description			saxon "basic" - collection of tools to process XML documents
long_description \
	Saxon includes an XSLT 2.0 processor, an XPath 2.0 processor, an XQuery \
	1.0 processor, and an XML Schema 1.0 processor.

platforms			darwin

homepage			http://saxon.sourceforge.net/
master_sites		sourceforge
distname			${name}b8-2
use_zip				yes

checksums			md5 81e74679a641ecaa6523b15c20969a56 \
					sha1 bf3524e4506008d202f541127914fae38f1b8448

depends_lib			bin:java:kaffe

pre-extract {
	file mkdir ${worksrcpath}
	extract.post_args	"-d ${worksrcpath}"
}

use_configure		no

build				{}

destroot {
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name} \
		${destroot}${prefix}/share/java ${destroot}${prefix}/share/${name}
	eval xinstall -m 644 [glob ${worksrcpath}/*.jar] \
		${destroot}${prefix}/share/java
	eval file copy [glob ${worksrcpath}/doc/*] \
		${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/samples ${worksrcpath}/source.zip \
		${worksrcpath}/use-cases ${destroot}${prefix}/share/${name}
}

