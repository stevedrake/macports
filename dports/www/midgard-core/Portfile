# $Id$

PortSystem 1.0

name		midgard-core
version		8.09.3
categories	www
maintainers	jwa
description	A content management system
long_description Midgard is a content management system platform using \
    Apache, PHP and MySQL.
platforms	darwin
homepage	http://www.midgard-project.org/

master_sites	http://www.midgard-project.org/midcom-serveattachmentguid-f42fe790e0a311ddafc3f3560a69eef0eef0/

use_bzip2	yes
checksums           md5     a9d02b1f97a1981f6825c9ba681c1d2c \
                    sha1    635c0b966fc6a0f87028d3daa963f934de3e16c0 \
                    rmd160  05cf8e3a65824327a7830c188cc1d4a5366f10f2

depends_lib	port:expat \
    port:gettext \
    port:glib2 \
    port:libiconv \
    port:libxml2 \
    port:mysql5 \
    port:openssl \
    port:zlib

configure.args	--sysconfdir=${prefix}/etc/midgard/ \
    --with-expat=${prefix} \
    --with-mysql-config=mysql_config5 \
    --with-iconv=${prefix}

variant check description {add unit tests} {
    depends_lib-append port:check
    configure.args-append --with-check=${prefix}
}

post-install	{
    ui_msg "NB! The other parts of the package are:"
    ui_msg "midgard-apache2, midgard-php4 and midgard-data"
}

livecheck.check	regex
livecheck.url	${homepage}download
livecheck.regex	${name}-(\[1-9\]+.\[0-9\]+.\[0-9\]+).tar.bz2
