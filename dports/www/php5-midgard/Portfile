# $Id$

PortSystem 1.0

name		php5-midgard
version		8.09.2
categories	www
maintainers	jwa
description	A content management system
long_description Midgard is a content management system platform using \
    Apache, PHP and MySQL.
platforms	darwin
homepage	http://www.midgard-project.org/

master_sites	http://www.midgard-project.org/midcom-serveattachmentguid-c781cd40a9d411dd836863f7b6686f126f12/

use_bzip2	yes
checksums	md5 8ba2a7a635a6161f88d43185d588de05 \
    sha1 567209316c05796edf4e724f014db1a152063907 \
    rmd160 ebeadc1918fe5050e6ca27d55e0d715653c9ef92

depends_lib	port:midgard-core \
    port:php5

pre-configure	{
    cd ${worksrcpath}
    system "phpize"
}

configure.args	--sysconfdir=${prefix}/etc/midgard/ \
    --with-apxs=${prefix}/apache2/bin/apxs \
    --with-apr-config=${prefix}/bin/apr-1-config \
    --with-php-config=${prefix}/bin/php-config

destroot.destdir	INSTALL_ROOT=${destroot}

post-install {
    ui_msg "========================   IMPORTANT   ========================="
    ui_msg "If this is the first time you're installing Midgard, or you have"
    ui_msg "recently upgraded PHP, make sure to check your php.ini to verify"
    ui_msg "that extension_dir at least includes"
    system "php-config --extension-dir"
    ui_msg "================================================================"
}

livecheck.check	regex
livecheck.url	${homepage}download
livecheck.regex	${name}-(\[1-9\]+.\[0-9\]+.\[0-9\]+).tar.bz2
