                    sha1    859601d3e37225192f1251515cd6e8427c63dbc0 \
                    rmd160  37a36a019a80f56eef56b5ee70828eb338e0f42d
depends_lib         port:curl \
                    port:libiconv \
                    port:libxml2 \
                    port:libxslt \
                    port:openssl \
                    port:raptor \
                    port:zlib
configure.args      --mandir=${prefix}/share/man
