# $Id: Portfile,v 1.1 2005/10/30 14:36:07 mww Exp $

PortSystem 1.0

name			aewm
version			1.3.1
categories		x11 x11-wm
platforms		darwin
maintainers		darwinports@opendarwin.org
description		aewm is a minimalist window manager for X11.
long_description	${description}

homepage		http://www.red-bean.com/~decklin/software/aewm/
master_sites	http://www.red-bean.com/~decklin/software/aewm/
checksums		md5 d357a30c29540101d0545a3c9167bba0
patchfiles		patch-clients-Makefile patch-src-Makefile

depends_lib		port:atk port:cairo port:fontconfig port:freetype port:gettext \
				port:glib2 port:gtk2 port:jpeg port:libiconv port:libpng \
				port:pango port:tiff port:xrender port:zlib

use_configure	no

build.args		PREFIX=${prefix} XROOT=${x11prefix}

destroot.args	${build.args}

platform darwin 8 { build.args-append	CC=/usr/bin/gcc-4.0 }

