		port:gtk2 \
		port:glibmm \
		port:libxmlxx2 \
		port:gtkmm \
		port:gtksourceview \
		port:libgnomecups \
		lib:libnet6-1.3.0:net6 \
		lib:libobby-0.4.0:obby

