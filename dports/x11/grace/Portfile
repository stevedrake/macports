# $Id: Portfile,v 1.2 2004/11/07 16:46:19 mww Exp $

PortSystem 1.0

name			grace
version			5.1.17
revision		1
categories		x11 math print
platforms		darwin
maintainers		mww@opendarwin.org
description		WYSIWYG tool to make two-dimensional plots of numerical data
long_description	${description}

homepage		http://plasma-gate.weizmann.ac.il/Grace/
master_sites	ftp://gd.tuwien.ac.at/visual/grace/src/ \
				http://gd.tuwien.ac.at/visual/grace/ \
				ftp://linux.mathematik.tu-darmstadt.de/pub/linux/mirrors/misc/grace/ \
				ftp://ftp.fu-berlin.de/unix/graphics/grace/ \
				http://ftp.chg.ru/pub/math/grace/ \
				ftp://freedom7.swmed.edu/pub/mirrors/grace/ \
				ftp://ftp.u-aizu.ac.jp/pub/SciEng/math/grace/
checksums		md5 a20c1edf572f1a78025e2010d5bb6e83

depends_lib		lib:libX11.6:XFree86 \
				lib:libXm:openmotif \
				lib:libpng:libpng \
				lib:libjpeg:jpeg

configure.pre_args	--prefix=${prefix}/lib

post-destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/doc
	cd ${destroot}${prefix}
	file delete bin
	file rename lib/grace/bin bin
	file rename lib/grace/doc share/doc/${name}
	file rename lib/grace/examples share/doc/${name}/examples
	file rename lib/grace/include/grace_np.h include/grace_np.h
	file rename lib/grace/lib/libgrace_np.a lib/libgrace_np.a
}
