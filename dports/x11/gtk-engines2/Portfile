# $Id$

PortSystem 1.0
name		gtk-engines2
version		2.12.1
categories	x11
maintainers	rhwood openmaintainer
description	Theme engine for gtk2
homepage	http://www.gtk.org/
platforms	darwin

long_description gtk-engines2 is a theme engine for GTK+ 2.  It provides \
		the ability to change the way widgets, buttons, etc. \
		look when using GTK+ 2 applications.

master_sites	gnome:sources/gtk-engines/[strsed ${version} {/\.[0-9]*$//}]

distname	gtk-engines-${version}
checksums	md5 8ca4d593cc19c6831903b86d09919707 \
		sha1 a5d0f73c5431f2ad7f4d7bb4cca8a22c916489d0 \
		rmd160 41e3dd8bc1e84a8aebbb67e5a067af6930151090

use_bzip2	yes

depends_build	\
	port:expat \
	port:p5-xml-parser \
	port:perl5.8
depends_lib	\
	port:atk \
	port:cairo \
	port:fontconfig \
	port:freetype \
	port:gettext \
	port:glib2 \
	port:gtk2 \
	port:jpeg \
	port:libiconv \
	port:libpng \
	port:pango \
	port:tiff

configure.ldflags-append	"-lgdk_pixbuf-2.0 -lgdk-x11-2.0 -lglib-2.0"
configure.cflags-append		"-I${prefix}/include"
configure.cppflags-append	"-no-cpp-precomp"
