# $Id$

PortSystem 1.0

name		gtkmm
version		2.14.1
set branch      [join [lrange [split ${version} .] 0 1] .]
description	C++ interface to GTK+.
long_description        gtkmm (previously known as Gtk--) is the official \
			C++ interface for the popular GUI library GTK+.
maintainers	devans openmaintainer
categories	x11 devel
platforms	darwin
homepage	http://www.gtkmm.org/
master_sites    gnome:sources/gtkmm/[strsed ${version} {/\.[0-9]*$//}]
use_bzip2	yes
checksums	md5 0209b424987a74c956ea6b70fddaaa37 \
		sha1 a50bda6fef19abcc51b31a9e31858f52940c3943 \
		rmd160 dd9a539d09469ebcfc137ff04ed3dcc7fca1a109
depends_lib	port:gtk2 \
                port:glibmm \
                path:${prefix}/lib/pkgconfig/cairomm-1.0.pc:cairomm \
                port:pangomm

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
