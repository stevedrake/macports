# $Id: Portfile,v 1.1 2005/09/01 04:37:09 ben Exp $

PortSystem 1.0
name		kde
version		3.4.1
categories	x11
maintainers	ben@opendarwin.org
description	KDE Desktop bundle
long_description ${description}
homepage	http://www.kde.org/

depends_lib	lib:libkdecore.4.2.0:kdelibs3 \
		lib:libkonq.4.2.0:kdebase3 \
		lib:libkopete.1.0.0:kdenetwork3 \
		lib:libkcal.2.0.0:kdepim3 \
		lib:libkmilo.1.0.0:kdeutils3

distfiles

fetch		{ }
checksum	{ }
configure	{ }
build		{ }
destroot	{
		xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde
		xinstall -m 444 ${portpath}/${filesdir}/README ${destroot}${prefix}/share/doc/kde/
		ui_msg "To start KDE, put \"exec ${prefix}/bin/startkde\" in your .xinitrc"
		ui_msg "If you have problems, refer to ${prefix}/share/doc/kde/README"
}

variant accessibility {
depends_lib-append port:kdeaccessibility3
}

variant devel {
depends_lib-append lib:libkbabelcommon.3.2.0:kdesdk3 \
		   port:kdewebdev3
}

variant fun {
depends_lib-append lib:libxvim.0.0.0:kdeaddons3 \
                   port:kdeartwork3 \
		   lib:libkdeeducore.1.2.0:kdeedu3 \
		   lib:libkdegames.1.2.0:kdegames3 \
		   port:kdetoys3
}

variant graphics {
depends_lib-append lib:libkscan.1.0.0:kdegraphics3
}

variant all {
depends_lib-append port:kdeaccessibility3 \
		   lib:libxvim.0.0.0:kdeaddons3 \
		   port:kdeartwork3 \
		   lib:libkdeeducore.1.2.0:kdeedu3 \
		   lib:libkdegames.1.2.0:kdegames3 \
		   lib:libkscan.1.0.0:kdegraphics3 \
                   lib:libkbabelcommon.3.2.0:kdesdk3 \
                   port:kdetoys3 \
		   port:kdewebdev3
}
