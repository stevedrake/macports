	port:xorg-libfontenc \
	port:freetype \
	port:bzip2 \
	port:zlib

livecheck.type  regex
livecheck.url   [lindex ${master_sites} 0]?C=M&O=D
livecheck.regex ${name}-(\\d+(?:\\.\\d+)*)

