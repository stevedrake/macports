PortSystem 1.0

name            pangomm
version         2.26.3
revision        1
set branch      [join [lrange [split ${version} .] 0 1] .]
description     C++ interface to Pango.
long_description    pangomm is the official \
                C++ interface for the Pango text layout library.
maintainers     devans openmaintainer
categories      x11 devel
platforms       darwin
homepage        http://www.gtkmm.org/
master_sites    gnome:sources/${name}/${branch}/
use_bzip2       yes

checksums       md5     1f2712d53918cfb4745c291a67b86156 \
                sha1    f38305f2419791a3cbddbd46d418ee5be19f5c45 \
                rmd160  fdc113020fe10b5fa673831544318d553f7f2a27

depends_lib     path:lib/pkgconfig/pango.pc:pango \
                path:lib/pkgconfig/cairomm-1.0.pc:cairomm \
                port:glibmm \
                port:libsigcxx2

livecheck.type  regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
