# $Id$

PortSystem          1.0

name                wine
version             0.9.37
categories          x11
maintainers         ryandesign openmaintainer@macports.org
homepage            http://www.winehq.com/
master_sites        http://ibiblio.org/pub/linux/system/emulators/wine/
platforms           darwin
distname            wine-${version}
use_bzip2           yes
build.target        depend all

description \
	Wine Is Not an Emulator

long_description \
	Wine is an implementation of the Windows APIs on top of X11.

checksums \
	md5 d8f361e6fe7520cda983a78673cd3bda \
	sha1 e1f420c1554d4e05e7846e7053d512b702373890 \
	rmd160 9f63acab539687b8b02d9251ef9f96de13d9eb5d

depends_lib \
	lib:libX11.6:XFree86 \
	port:expat \
	port:fontconfig \
	port:fontforge \
	port:freetype \
	port:jpeg \
	port:libiconv \
	port:libxml2 \
	port:libxslt \
	port:ncurses \
	port:openssl \
	port:pkgconfig \
	port:render \
	port:xrender \
	port:zlib

configure.ldflags-append \
	-framework CoreServices \
	-lz

configure.args \
	--x-includes=${x11prefix}/include/

livecheck.check     regex
livecheck.regex     href="\\?announce=latest">Wine (\[0-9\.\]+)<
