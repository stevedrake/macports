# $Id: Portfile,v 1.4 2005/03/08 17:43:34 olegb Exp $

PortSystem 1.0

name		xfce-utils
version		4.2.0
categories	x11
maintainers	jc@opendarwin.org
description	Utilities for the XFce Desktop Environment
long_description ${description}
homepage	http://www.xfce.org/
master_sites	http://www.us.xfce.org/archive/xfce-4.2.0/src-bz2
use_bzip2	yes
checksums	md5 8c135582c7f610982e6637f5eeb628b3
configure.args	--disable-debug --enable-final --disable-gdm
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include -L/usr/X11R6/lib" \
               	LDFLAGS="-lXft -lfontconfig -lXrender -lXext -lXinerama -lXrandr"

depends_lib	bin:xfce-mcs-manager:xfce-mcs-manager

variant gtkhtml {
	depends_lib-append lib:libgtkhtml-2:libgtkhtml
	configure.args-append --enable-gtkhtml
}

variant mozilla {
	configure.args-append --with-browser=mozilla
        depends_lib bin:mozilla:mozilla
}
