# $Id: Portfile,v 1.2 2005/03/08 19:47:36 olegb Exp $
PortSystem 1.0
name		xfdesktop
version		4.2.0
categories	x11
maintainers	jc@opendarwin.org
description	xfdesktop contain a desktop manager for the XFce Desktop Environment
long_description ${description}
homepage	http://www.xfce.org/
master_sites	http://www.us.xfce.org/archive/xfce-4.2.0/src-bz2/
use_bzip2	yes
checksums	md5 9fce339a3b4e6189875e8848a502fd73
configure.args	--disable-debug --enable-final
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include -L/usr/X11R6/lib" \
                LDFLAGS="-L${prefix}/lib -lXft -lfontconfig -lXrender -lXext -lXinerama -lXrandr"
depends_lib	lib:libxfce4mcs-manager:libxfce4mcs lib:libxml2:libxml2 \
		bin:xfce4-panel:xfce4-panel
