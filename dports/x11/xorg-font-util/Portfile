# $Id$

PortSystem          1.0
name                xorg-font-util
version             1.0.1
categories          x11 graphics
maintainers         blb openmaintainer
description         X.org font utilities bdftruncate and ucs2any
long_description    ${description}

platforms           darwin

homepage            http://www.x.org/
master_sites        ${homepage}pub/individual/font/
distname            font-util-${version}
use_bzip2           yes

checksums           md5     b81535f78fe05732931f02841e5ca37b \
                    sha1    97c2880c5f664e655f5bc2b194c52fbd496bab19 \
                    rmd160  a9c758164ebc1da1a743fa73b68fae0fc5c215cc

depends_build       port:pkgconfig

depends_run         path:bin/perl:perl5

configure.args      --mandir=${prefix}/share/man

post-destroot {
   reinplace "s|/usr/bin/perl|${prefix}/bin/perl|g" \
      ${destroot}${prefix}/bin/bdftruncate
}

