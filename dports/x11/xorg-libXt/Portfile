# $Id$

PortSystem 1.0

name            xorg-libXt
version         1.0.5
revision        2
categories      x11 devel
maintainers     jeremyhu openmaintainer
description     X.org libXt
homepage        http://www.x.org
platforms       darwin macosx
long_description X Toolkit Intrinsics, an abstract widget library upon \
    which other toolkits are based. Xt is the basis for many toolkits, \
    including the Athena widgets, Xaw, and LessTif, a Motif \
    implementation.
master_sites     ${homepage}/pub/individual/lib/

distname    libXt-${version}
checksums   md5 f3bdd67785ace8cd0b23249e9d8c9975 \
            sha1 5f33921e373ce162a39eabef2ce05d946935eb5b \
            rmd160 7e5ef9e03dc860bf5b64b85a897dd1d2ae1ed0bf

use_bzip2   yes
use_parallel_build      yes

depends_build   port:pkgconfig \
                port:libtool \
                port:autoconf \
                port:automake \
                port:xorg-util-macros \
                port:xorg-kbproto \
                port:xorg-xproto
depends_lib     port:xorg-libsm \
                port:xorg-libX11

patchfiles poll.patch
use_autoreconf yes
autoreconf.args -fvi

# See #18181 in trac
configure.ldflags-append -Wl,-flat_namespace

livecheck.check regex
livecheck.url   [lindex ${master_sites} 0]?C=M&O=D
livecheck.regex libXt-(\\d+(?:\\.\\d+)*)
