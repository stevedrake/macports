depends_build \
	port:pkgconfig \
	port:xorg-xproto

depends_lib \
	port:zlib

livecheck.check regex
livecheck.url   [lindex ${master_sites} 0]?C=M&O=D
livecheck.regex libfontenc-(\\d+(?:\\.\\d+)*)

