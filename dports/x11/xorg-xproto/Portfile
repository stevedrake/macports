# $Id$

PortSystem 1.0

name		xorg-xproto
version		7.0.14
revision	1
categories	x11 devel
maintainers	bbyer@macports.org
description	X.org xproto
homepage	http://www.x.org
platforms	darwin
long_description The X.org xproto package contains miscellaneous X11 prototype headers.
master_sites 	${homepage}/pub/individual/proto/

distname	xproto-${version}
use_bzip2	yes

checksums       md5     5bbf47f4ad6eb3b3f3a119231abe8e5e \
                sha1    cb8b35d290c4c57c78dad06b91136fef08e0f80c \
                rmd160  e8b63f555ec3c4a91330679271fcd699a39fcdf9

post-destroot {
    set docdir ${prefix}/share/doc/${name}-${version}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} AUTHORS COPYING ChangeLog \
        ${destroot}${docdir}
}

universal_variant no

livecheck.check regex
livecheck.url   ${master_sites}?C=M&O=D
livecheck.regex xproto-(\\d+(?:\\.\\d+)*)
