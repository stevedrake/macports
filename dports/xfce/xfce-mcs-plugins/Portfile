PortSystem 1.0

name		xfce-mcs-plugins
version		4.4.3
categories	xfce
platforms	darwin
maintainers	afb@macports.org
description	Plugins for multi channel settings manager
long_description ${description}
homepage	http://www.xfce.org/
master_sites	http://www.ca-us.xfce.org/archive/xfce-${version}/src/
use_bzip2	yes
checksums	md5 a1433d7d2c8705f0d3965dbaf1211943 \
		sha1 6501ffa445ec50fd86e410c9341fc353d8d70427 \
		rmd160 c7118e77f15d6d40bd63f9cf23746349fe146eb9

depends_lib	port:xfce-mcs-manager \
		port:libxfce4mcs \
		port:libxfcegui4

platform darwin {
	patchfiles patch-darwin.diff
}

post-configure {
	system "cd $worksrcpath && patch -p0 -i $filespath/undefined.patch"
}
