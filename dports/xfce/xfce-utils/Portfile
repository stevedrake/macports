# $Id$

PortSystem 1.0

name		xfce-utils
version		4.2.4
categories	xfce
platforms	darwin
maintainers	nomaintainer@macports.org
description	Utilities for the XFce Desktop Environment
long_description ${description}
homepage	http://www.xfce.org/
master_sites	http://www.us.xfce.org/archive/xfce-${version}/src/
checksums	md5 721a4ef05efa935c9bdddf36e068efb3 \
		sha1 eebc2f5ea2de22d6afab259476feb4f0e5cc54c2 \
		rmd160 e415bebb909dfcc382e9b261378eb60d7bad6f00
configure.args	--disable-debug --enable-final --disable-gdm
configure.cppflags-append	-L${x11prefix}/lib
configure.ldflags-append	"-lXft -lfontconfig -lXrender -lXext -lXinerama -lXrandr"

depends_lib	port:xfce-mcs-manager

variant gtkhtml {
	depends_lib-append port:libgtkhtml
	configure.args-append --enable-gtkhtml
}

variant mozilla {
	configure.args-append --with-browser=mozilla
        depends_lib port:mozilla
}
