use_bzip2	yes
checksums	md5 be4802807e74dea30f4825102ceff5c5 \
		sha1 ad775ac77894e9d946711181e812fdc6edd725a7 \
		rmd160 70b3357250f585a58e982a4c2edfd6aaf0e1e0b5

